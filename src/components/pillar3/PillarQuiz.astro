---
/**
 * PillarQuiz.astro
 * HYPER-ROBUST VERSION: Uses CSS for step transitions (zero JS dependency for navigation).
 * Simple inline JS for the final result logic.
 */
---

<div
    class="pillar-quiz-root relative bg-[#1a1a2e] rounded-3xl shadow-2xl max-w-2xl mx-auto text-white border border-white/10 overflow-hidden min-h-[550px] font-inter"
>
    <!-- CSS Triggers (Hidden) -->
    <input type="radio" name="quiz-step" id="q-step-1" class="hidden" checked />
    <input type="radio" name="quiz-step" id="q-step-2" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-3" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-4" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-5" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-6" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-7" class="hidden" />
    <input type="radio" name="quiz-step" id="q-step-result" class="hidden" />

    <!-- STEP 1: GOAL -->
    <div class="quiz-step step-1 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 1 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            What is your primary financial goal?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-2"
                class="quiz-btn"
                onclick="saveQuizAnswer('goal', 'tax')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">Maximize Tax Savings</span>
            </label>
            <label
                for="q-step-2"
                class="quiz-btn"
                onclick="saveQuizAnswer('goal', 'flex')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Flexible Access to Funds</span
                >
            </label>
        </div>
    </div>

    <!-- STEP 2: TIMELINE -->
    <div class="quiz-step step-2 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 2 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            How long do you plan to stay in Switzerland?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-3"
                class="quiz-btn"
                onclick="saveQuizAnswer('timeline', 'short')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">Less than 5 years</span>
            </label>
            <label
                for="q-step-3"
                class="quiz-btn"
                onclick="saveQuizAnswer('timeline', 'long')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Indefinitely / 10+ years</span
                >
            </label>
        </div>
    </div>

    <!-- STEP 3: TAX LEVEL -->
    <div class="quiz-step step-3 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 3 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            What is your estimated annual household income?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-4"
                class="quiz-btn"
                onclick="saveQuizAnswer('tax_level', 'high')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Above CHF 120,000 (High Tax)</span
                >
            </label>
            <label
                for="q-step-4"
                class="quiz-btn"
                onclick="saveQuizAnswer('tax_level', 'low')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Below CHF 120,000 (Lower Tax)</span
                >
            </label>
        </div>
    </div>

    <!-- STEP 4: INVESTMENT STYLE -->
    <div class="quiz-step step-4 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 4 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            What is your preferred investment style?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-5"
                class="quiz-btn"
                onclick="saveQuizAnswer('investment', 'agg')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Aggressive (High Stocks/Equity)</span
                >
            </label>
            <label
                for="q-step-5"
                class="quiz-btn"
                onclick="saveQuizAnswer('investment', 'con')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Conservative (Gains Guaranteed)</span
                >
            </label>
        </div>
    </div>

    <!-- STEP 5: LIFE STAGE -->
    <div class="quiz-step step-5 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 5 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            What is your current life stage?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-6"
                class="quiz-btn"
                onclick="saveQuizAnswer('lifestage', 'young')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Young Professional (20s-30s)</span
                >
            </label>
            <label
                for="q-step-6"
                class="quiz-btn"
                onclick="saveQuizAnswer('lifestage', 'family')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg"
                    >Building a Family / Mid-Career</span
                >
            </label>
        </div>
    </div>

    <!-- STEP 6: PRE-RETIREMENT CHECK -->
    <div class="quiz-step step-6 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 6 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            Likely to need funds before retirement? (e.g. within 10 years)
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-7"
                class="quiz-btn"
                onclick="saveQuizAnswer('need_early', 'yes')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">Yes</span>
            </label>
            <label
                for="q-step-7"
                class="quiz-btn"
                onclick="saveQuizAnswer('need_early', 'no')"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">No</span>
            </label>
        </div>
    </div>

    <!-- STEP 7: BEYOND LIMITS -->
    <div class="quiz-step step-7 p-8 md:p-12">
        <div class="flex items-center justify-between mb-8">
            <span
                class="text-[#C41E3A] font-bold tracking-[0.2em] uppercase text-[10px]"
                >STEP 7 OF 7</span
            >
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-10 leading-tight">
            Looking to save beyond the ~CHF 7.2k limit?
        </h3>
        <div class="space-y-4">
            <label
                for="q-step-result"
                class="quiz-btn"
                onclick="saveQuizAnswer('beyond_limit', 'yes'); calculateAndShowResult();"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">Yes</span>
            </label>
            <label
                for="q-step-result"
                class="quiz-btn"
                onclick="saveQuizAnswer('beyond_limit', 'no'); calculateAndShowResult();"
            >
                <div class="dot-ring"><div class="dot-fill"></div></div>
                <span class="font-semibold text-lg">No</span>
            </label>
        </div>
    </div>

    <!-- RESULT SCREEN -->
    <div
        id="quiz-result-screen"
        class="quiz-step step-result p-8 md:p-12 text-center animate-fade-in"
    >
        <div id="res-icon" class="text-7xl mb-6">üí∞</div>
        <h3 id="res-title" class="text-2xl md:text-3xl font-bold mb-6">
            Our Recommendation
        </h3>
        <p
            id="res-desc"
            class="text-white/70 text-lg leading-relaxed mb-10 max-w-md mx-auto"
        >
            Calculating...
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-12">
            <button
                onclick="window.openContextualModal()"
                class="bg-[#C41E3A] hover:bg-[#a51930] text-white font-bold py-4 px-10 rounded-full shadow-2xl transition-all hover:-translate-y-1"
            >
                Get Best 2026 Strategy
            </button>
            <label
                for="q-step-1"
                class="text-white/40 hover:text-white/60 font-medium py-4 px-6 cursor-pointer bg-transparent border-none"
                >Retake Quiz</label
            >
        </div>
    </div>
</div>

<style is:inline>
    .pillar-quiz-root {
        min-height: 620px;
        display: flex;
        flex-direction: column;
    }
    .quiz-btn {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
        text-align: left;
        padding: 1.25rem;
        border-radius: 1.25rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .quiz-btn:hover {
        border-color: #c41e3a;
        background: rgba(196, 30, 58, 0.1);
    }
    .dot-ring {
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 9999px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    .quiz-btn:hover .dot-ring {
        border-color: #c41e3a;
    }
    .dot-fill {
        width: 0.6rem;
        height: 0.6rem;
        border-radius: 9999px;
        background: #c41e3a;
        transform: scale(0);
        transition: transform 0.2s ease;
    }
    .quiz-btn:hover .dot-fill {
        transform: scale(1);
    }

    .quiz-step {
        display: none !important;
    }
    #q-step-1:checked ~ .step-1 {
        display: block !important;
    }
    #q-step-2:checked ~ .step-2 {
        display: block !important;
    }
    #q-step-3:checked ~ .step-3 {
        display: block !important;
    }
    #q-step-4:checked ~ .step-4 {
        display: block !important;
    }
    #q-step-5:checked ~ .step-5 {
        display: block !important;
    }
    #q-step-6:checked ~ .step-6 {
        display: block !important;
    }
    #q-step-7:checked ~ .step-7 {
        display: block !important;
    }
    #q-step-result:checked ~ .step-result {
        display: block !important;
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.98);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<script is:inline>
    (function () {
        const quizAnswers = {};

        window.saveQuizAnswer = function (key, val) {
            quizAnswers[key] = val;
        };

        window.calculateAndShowResult = function () {
            const iconEl = document.getElementById("res-icon");
            const titleEl = document.getElementById("res-title");
            const descEl = document.getElementById("res-desc");

            let result = {
                title: "Pillar 3a (Restricted)",
                desc: "Pillar 3a is your foundational vessel. The immediate tax deduction outweighs the lock-in for your long-term Swiss planning.",
                icon: "üí∞",
            };

            // Enhanced logic
            const { goal, timeline, tax_level, beyond_limit, need_early } =
                quizAnswers;

            if (beyond_limit === "yes") {
                result = {
                    title: "A Strategic 3a + 3b Mix",
                    desc: "You should maximize your 3a first for the tax break, then use 3b as a flexible overflow for your additional wealth building.",
                    icon: "‚öñÔ∏è",
                };
            } else if (need_early === "yes" || timeline === "short") {
                result = {
                    title: "Pillar 3b (Flexible)",
                    desc: "Given your need for liquidity or shorter timeline in Switzerland, the flexibility of 3b is critical to avoid early withdrawal taxes.",
                    icon: "üîì",
                };
            } else if (tax_level === "high" && goal === "tax") {
                result = {
                    title: "Maximized Pillar 3a",
                    desc: "Your high income makes the 3a tax rebate extremely powerful. Prioritize this to save several thousand francs per year.",
                    icon: "üöÄ",
                };
            }

            if (iconEl && titleEl && descEl) {
                iconEl.textContent = result.icon;
                titleEl.textContent = result.title;
                descEl.textContent = result.desc;
            }
        };
    })();
</script>
