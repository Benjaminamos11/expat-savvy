---
import { ensureTrailingSlash } from '@/lib/utils';

const mainNavItems = [
  { 
    name: "New to Switzerland", 
    href: "/healthcare/new-health-insurance"
  },
  { 
    name: "Already Insured?", 
    href: "/healthcare/switching-health-insurance"
  },
  {
    name: "More",
    dropdown: true,
    sections: [
      {
        title: "Learn",
        items: [
          { name: "How Swiss Insurance Works", href: "/healthcare-system" },
          { name: "Insurance Models", href: "/blog/health-insurance-models-switzerland" },
          { name: "Best Health Insurance Guide", href: "/healthcare/best-health-insurance-switzerland" },
          { name: "How-To Guides", href: "/guides/how-to" },
          { name: "Blog & Guides", href: "/blog" }
        ]
      },
      {
        title: "Special Situations",
        items: [
          { name: "Pre-existing Conditions", href: "/guides/how-to/pre-existing-conditions-health-insurance" },
          { name: "Family & Maternity", href: "/insurance-guides/family-insurance-planning" },
          { name: "Students", href: "/insurance-guides/student-insurance" },
          { name: "Best Health Insurance Guide", href: "/healthcare/best-health-insurance-switzerland" }
        ]
      },
      {
        title: "Other Insurance",
        items: [
          { name: "Household Insurance", href: "/insurance/household-insurance" },
          { name: "Personal Liability", href: "/insurance/personal-liability-insurance" },
          { name: "3rd Pillar & Pension", href: "/3rd-pillar" },
          { name: "All Insurance Types", href: "/insurance" }
        ]
      },
      {
        title: "About & Tools",
        items: [
          { name: "About Expat-Savvy", href: "/about" },
          { name: "Contact", href: "/contact" },
          { name: "Premium Calculator (AI)", href: "/ai-chat" },
          { name: "Insurance Providers", href: "/insurance-providers" },
          { name: "Insurance Glossary", href: "/healthcare/best-health-insurance-switzerland/" }
        ]
      }
    ]
  }
];
---

<header class="sticky top-0 bg-white shadow-sm z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20 gap-4">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href={ensureTrailingSlash("/")} class="flex items-center">
          <img 
            src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg" 
            alt="Expat Savvy" 
            class="h-12" 
            width="180" 
            height="48"
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="desktop-menu hidden md:flex md:items-center md:space-x-8 md:flex-1 md:justify-center">
        <style>
          @media (min-width: 768px) {
            .desktop-menu { display: flex !important; align-items: center; gap: 2rem; }
          }
        </style>
        {mainNavItems.map(item => (
          <div class="relative group">
            {item.href ? (
              <a 
                href={ensureTrailingSlash(item.href)} 
                class="text-gray-700 hover:text-red-600 py-2 px-2 font-medium transition-colors"
              >
                {item.name}
              </a>
            ) : (
              <button class="text-gray-700 hover:text-red-600 flex items-center py-2 px-2 font-medium transition-colors">
                {item.name}
                <svg class="ml-2 h-5 w-5 transition-transform duration-200 group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            )}

            {/* More Dropdown with Sections */}
            {item.dropdown && item.sections && (
              <div class="absolute left-1/2 -translate-x-1/2 pt-2 w-[600px] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-xl shadow-2xl p-6 border border-gray-100">
                  <div class="grid grid-cols-4 gap-4">
                    {item.sections.map(section => (
                      <div>
                        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-3 pb-2 border-b border-gray-100">
                          {section.title}
                        </h3>
                        <ul class="space-y-2">
                          {section.items.map(subItem => (
                            <li>
                              <a 
                                href={ensureTrailingSlash(subItem.href)} 
                                class="group/item block text-sm text-gray-600 hover:text-red-600 transition-colors"
                              >
                                <span class="relative">
                                  {subItem.name}
                                  <span class="absolute bottom-0 left-0 w-full h-0.5 bg-red-600 transform scale-x-0 transition-transform duration-200 group-hover/item:scale-x-100"></span>
                                </span>
                              </a>
                            </li>
                          ))}
                        </ul>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Primary CTA Button (Right Side) -->
      <div class="hidden md:block flex-shrink-0">
        <button
          onclick="window.openHealthModal('header')"
          class="bg-red-600 hover:bg-red-700 text-white font-bold px-6 py-3 rounded-2xl shadow-lg hover:shadow-xl transition-all"
        >
          Book Free Consultation
        </button>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button 
          id="mobile-menu-button" 
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile menu panel -->
  <div id="mobile-menu" class="hidden fixed inset-0 z-50 md:hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
    
    <div class="absolute right-0 top-0 w-full max-w-sm h-full bg-white shadow-xl overflow-y-auto">
      <div class="flex items-center justify-between p-4 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Menu</h2>
        <button id="mobile-menu-close" class="p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="px-2 py-3">
        <!-- Primary Actions -->
        <a
          href={ensureTrailingSlash("/healthcare/new-health-insurance")}
          class="block w-full text-left px-4 py-3 text-base font-semibold text-gray-900 hover:bg-gray-50 rounded-lg mb-2 flex items-center gap-3"
        >
          <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          New to Switzerland
        </a>
        
        <a
          href={ensureTrailingSlash("/healthcare/switching-health-insurance")}
          class="block w-full text-left px-4 py-3 text-base font-semibold text-gray-900 hover:bg-gray-50 rounded-lg mb-4 flex items-center gap-3"
        >
          <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
          </svg>
          Already Insured?
        </a>

        <div class="border-t border-gray-200 my-4"></div>

        <!-- Expandable Sections -->
        <details class="group mb-2">
          <summary class="font-semibold text-gray-900 py-3 px-4 cursor-pointer list-none hover:bg-gray-50 rounded-lg flex items-center justify-between gap-3">
            <span class="flex items-center gap-3">
              <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              Learn
            </span>
            <svg class="h-5 w-5 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="pl-4 space-y-1 mt-2">
            <a href={ensureTrailingSlash("/healthcare-system")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              How Swiss Insurance Works
            </a>
            <a href={ensureTrailingSlash("/blog/health-insurance-models-switzerland")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Insurance Models
            </a>
            <a href={ensureTrailingSlash("/healthcare/best-health-insurance-switzerland")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Best Health Insurance Guide
            </a>
            <a href={ensureTrailingSlash("/guides/how-to")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              How-To Guides
            </a>
            <a href={ensureTrailingSlash("/blog")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Blog & Guides
            </a>
          </div>
        </details>
        
        <details class="group mb-2">
          <summary class="font-semibold text-gray-900 py-3 px-4 cursor-pointer list-none hover:bg-gray-50 rounded-lg flex items-center justify-between gap-3">
            <span class="flex items-center gap-3">
              <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              Special Situations
            </span>
            <svg class="h-5 w-5 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="pl-4 space-y-1 mt-2">
            <a href={ensureTrailingSlash("/guides/how-to/pre-existing-conditions-health-insurance")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Pre-existing Conditions
            </a>
            <a href={ensureTrailingSlash("/insurance-guides/family-insurance-planning")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Family & Maternity
            </a>
            <a href={ensureTrailingSlash("/insurance-guides/student-insurance")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Students
            </a>
            <a href={ensureTrailingSlash("/healthcare/best-health-insurance-switzerland")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Best Health Insurance Guide
            </a>
          </div>
        </details>
        
        <details class="group mb-2">
          <summary class="font-semibold text-gray-900 py-3 px-4 cursor-pointer list-none hover:bg-gray-50 rounded-lg flex items-center justify-between gap-3">
            <span class="flex items-center gap-3">
              <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              Other Insurance
            </span>
            <svg class="h-5 w-5 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="pl-4 space-y-1 mt-2">
            <a href={ensureTrailingSlash("/insurance/household-insurance")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Household Insurance
            </a>
            <a href={ensureTrailingSlash("/insurance/personal-liability-insurance")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              Personal Liability
            </a>
            <a href={ensureTrailingSlash("/3rd-pillar")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              3rd Pillar & Pension
            </a>
            <a href={ensureTrailingSlash("/insurance")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
              All Insurance Types
            </a>
          </div>
        </details>

        <div class="border-t border-gray-200 my-4"></div>
        
        <a href={ensureTrailingSlash("/about")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg">
          About Us
        </a>
        
        <a href={ensureTrailingSlash("/insurance-providers")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg">
          Insurance Providers
        </a>
        
        <a href={ensureTrailingSlash("/ai-chat")} class="block text-gray-700 py-2 px-4 hover:bg-gray-50 rounded-lg text-sm">
          Premium Calculator
        </a>
        
        <!-- Mobile CTA -->
        <div class="pt-4 px-3">
          <button
            onclick="window.openHealthModal('header')"
            class="block w-full text-center bg-red-600 text-white px-4 py-4 rounded-2xl hover:bg-red-700 transition-colors font-bold shadow-lg"
          >
            Book Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const body = document.body;

    // Mobile menu toggle
    function openMenu() {
      if (mobileMenu) {
        mobileMenu.classList.remove('hidden');
        body.style.overflow = 'hidden';
      }
    }

    function closeMenu() {
      if (mobileMenu) {
        mobileMenu.classList.add('hidden');
        body.style.overflow = '';
      }
    }

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', openMenu);
    }
    
    if (mobileMenuClose) {
      mobileMenuClose.addEventListener('click', closeMenu);
    }

    // Close menu when clicking outside
    if (mobileMenu) {
      mobileMenu.addEventListener('click', (e) => {
        if (e.target === mobileMenu) {
          closeMenu();
        }
      });
    }

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMenu();
      }
    });
  });
</script>
