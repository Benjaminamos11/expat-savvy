<section class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4">
    <div class="bg-white rounded-xl p-6 shadow-[4px_4px_8px_#d9d9d9,-4px_-4px_8px_#ffffff] border-l-4 border-red-600">
      <div class="flex items-start space-x-4">
        <div class="w-12 h-12 rounded-full bg-red-50 flex items-center justify-center flex-shrink-0">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Important Deadline: November 30, 2025</h3>
          
          <div class="grid md:grid-cols-2 gap-6">
            <!-- If Switching -->
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">If Switching Providers:</h4>
              <ul class="space-y-1 text-sm text-gray-600">
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Cancel by November 30</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>New coverage starts January 1</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>We handle all paperwork</span>
                </li>
              </ul>
            </div>

            <!-- If New to CH -->
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">If New to Switzerland:</h4>
              <ul class="space-y-1 text-sm text-gray-600">
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>3 months from arrival date</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Not bound by November 30 deadline</span>
                </li>
                <li class="flex items-start space-x-2">
                  <svg class="w-4 h-4 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>Can start anytime</span>
                </li>
              </ul>
            </div>
          </div>

          <div class="mt-4 pt-4 border-t border-gray-200">
            <button 
              onclick="window.openOffersModal && window.openOffersModal('deadline-consultation')"
              class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold text-sm transition-all"
            >
              Schedule Before Deadline
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


