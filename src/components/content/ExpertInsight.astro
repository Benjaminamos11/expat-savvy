---
interface Props {
    insight: string;
    quote: string;
}

const { insight, quote } = Astro.props;
---

<div
    class="bg-gray-50/80 border-l-4 border-[#C41E3A] p-6 my-8 not-prose rounded-r-lg"
>
    <div class="flex items-center gap-2 mb-3">
        <span class="text-[#C41E3A]">ðŸ’¡</span>
        <h4
            class="font-bold text-[#1a1a2e] text-sm uppercase tracking-wider m-0"
        >
            Hans's Insight
        </h4>
    </div>

    <p class="text-gray-700 mb-4 leading-relaxed">
        {insight}
    </p>

    <div class="flex gap-3 pt-3 border-t border-gray-200/50">
        <div class="shrink-0 w-8 h-8 rounded-full overflow-hidden bg-gray-200">
            <img
                src="/images/hans-steiner.png"
                alt="Hans Steiner"
                class="w-full h-full object-cover"
            />
        </div>
        <p class="text-gray-600 italic font-serif text-sm leading-relaxed m-0">
            "{quote}"
        </p>
    </div>
</div>
