---
/**
 * FAQSchema.astro
 * SEO Optimization: Provides structured data for Frequently Asked Questions.
 * Enables Google rich snippets and helps LLMs parse Q&A pairs directly.
 */

interface FAQItem {
    question: string;
    answer: string;
}

interface Props {
    faqs: FAQItem[];
}

const { faqs } = Astro.props;

const faqSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqs.map((faq) => ({
        "@type": "Question",
        name: faq.question,
        acceptedAnswer: {
            "@type": "Answer",
            text: faq.answer,
        },
    })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
