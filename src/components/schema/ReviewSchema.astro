---
// ReviewSchema component for proper structured data on reviews
interface Props {
  itemReviewed: {
    name: string;
    description: string;
    url: string;
    type: string;
  };
  reviews: Array<{
    author: string;
    reviewRating: number;
    reviewBody: string;
    datePublished?: string;
  }>;
  aggregateRating?: {
    ratingValue: string;
    reviewCount: string;
  };
}

const { 
  itemReviewed,
  reviews,
  aggregateRating
} = Astro.props;

// Define schema type that allows for additional properties
type SchemaType = {
  "@context": string;
  "@type": string;
  "name": string;
  "description": string;
  "url": string;
  "review"?: Array<{
    "@type": string;
    "reviewRating": {
      "@type": string;
      "ratingValue": string;
      "bestRating": string;
    };
    "author": {
      "@type": string;
      "name": string;
    };
    "reviewBody": string;
    "datePublished": string;
  }>;
  "aggregateRating"?: {
    "@type": string;
    "ratingValue": string;
    "reviewCount": string;
    "bestRating": string;
    "worstRating": string;
  };
  [key: string]: any; // Allow any additional properties
};

// Build the schema
const schema: SchemaType = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": itemReviewed.name,
  "description": itemReviewed.description,
  "url": itemReviewed.url
};

// Add reviews if available
if (reviews && reviews.length > 0) {
  schema.review = reviews.map(review => ({
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": review.reviewRating.toString(),
      "bestRating": "5"
    },
    "author": {
      "@type": "Person",
      "name": review.author
    },
    "reviewBody": review.reviewBody,
    "datePublished": review.datePublished || new Date().toISOString().split('T')[0]
  }));
}

// Add aggregate rating if available
if (aggregateRating) {
  schema.aggregateRating = {
    "@type": "AggregateRating",
    "ratingValue": aggregateRating.ratingValue,
    "reviewCount": aggregateRating.reviewCount,
    "bestRating": "5",
    "worstRating": "1"
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema, null, 2)}></script> 