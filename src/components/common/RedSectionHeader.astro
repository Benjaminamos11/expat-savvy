---
interface Props {
    title: string;
    className?: string;
    align?: "left" | "center";
}

const { title, className = "", align = "left" } = Astro.props;
---

<div
    class={`flex items-center ${align === "center" ? "justify-center" : ""} ${className}`}
>
    <div class="h-8 w-[2px] bg-[#C41E3A] mr-4"></div>
    <h2
        class={`text-3xl md:text-4xl font-bold leading-tight font-inter ${className.includes("text-") ? "" : "text-gray-900"}`}
    >
        {title}
    </h2>
</div>
