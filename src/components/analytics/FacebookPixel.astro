/**
 * Facebook/Meta Pixel Component - CONSENT-FIRST LOADING
 * 
 * Pixel ID: 1393006485701609
 * 
 * OPTIMIZATION: Only loads fbevents.js AFTER user accepts cookies
 */
---

<!-- Meta Pixel - Loads only on consent -->
<script is:inline>
(function() {
  'use strict';
  
  var pixelLoaded = false;
  var queuedEvents = [];
  
  // Function to load the actual pixel script
  window.loadMetaPixel = function() {
    if (pixelLoaded) return;
    pixelLoaded = true;
    
    // Load the Facebook Pixel script
    !function(f,b,e,v,n,t,s) {
      n = f.fbq = function() {
        n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments)
      };
      if(!f._fbq) f._fbq = n;
      n.push = n;
      n.loaded = !0;
      n.version = '2.0';
      n.queue = [];
      t = b.createElement(e);
      t.async = !0;
      t.src = v;
      s = b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t, s);
    }(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
    
    // Initialize with the correct pixel ID
    fbq('consent', 'grant');
    fbq('init', '1393006485701609');
    fbq('track', 'PageView');
    
    // Process any queued events
    for (var i = 0; i < queuedEvents.length; i++) {
      var evt = queuedEvents[i];
      if (evt && evt.length >= 2) {
        fbq(evt[0], evt[1], evt[2] || {});
      }
    }
    queuedEvents = [];
    
    console.log('[MetaPixel] Loaded with ID: 1393006485701609');
  };
  
  // Listen for consent updates
  window.addEventListener('consentUpdate', function(e) {
    if (e.detail && e.detail.granted) {
      window.loadMetaPixel();
    }
  });

  // Helper functions - only work after pixel is loaded
  window.trackMetaEvent = function(eventName, params) {
    if (pixelLoaded && typeof fbq === 'function') {
      fbq('track', eventName, params || {});
    } else {
      // Queue for when pixel loads
      queuedEvents.push(['track', eventName, params || {}]);
    }
  };

  window.trackMetaCustomEvent = function(eventName, params) {
    if (pixelLoaded && typeof fbq === 'function') {
      fbq('trackCustom', eventName, params || {});
    } else {
      queuedEvents.push(['trackCustom', eventName, params || {}]);
    }
  };
  
  // Check for existing consent on page load
  try {
    var consent = localStorage.getItem('cookie_consent');
    if (consent === 'accepted') {
      window.loadMetaPixel();
    }
  } catch (e) {}
})();
</script>
