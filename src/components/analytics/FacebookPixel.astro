---
/**
 * Facebook/Meta Pixel Component - PERFORMANCE OPTIMIZED
 * 
 * Pixel ID: 1393006485701609
 * 
 * OPTIMIZATION: Loads lazily after page is interactive
 * - Defers loading until after DOMContentLoaded
 * - Only fully initializes if consent is granted
 * - Reduces initial page load blocking
 */

const META_PIXEL_ID = '1393006485701609';
---

<!-- Meta Pixel - Lazy loaded for performance -->
<script is:inline define:vars={{ META_PIXEL_ID }}>
(function() {
  'use strict';
  
  var pixelLoaded = false;
  
  function loadPixel() {
    if (pixelLoaded) return;
    pixelLoaded = true;
    
    // Initialize Meta Pixel
    !function(f,b,e,v,n,t,s) {
      if(f.fbq) return;
      n = f.fbq = function() {
        n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments)
      };
      if(!f._fbq) f._fbq = n;
      n.push = n;
      n.loaded = !0;
      n.version = '2.0';
      n.queue = [];
      t = b.createElement(e);
      t.async = !0;
      t.src = v;
      s = b.getElementsByTagName(e)[0];
      s.parentNode.insertBefore(t, s);
    }(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');

    // Check consent and initialize
    var hasConsent = false;
    try {
      hasConsent = localStorage.getItem('cookie_consent') === 'accepted';
    } catch (e) {}

    if (hasConsent) {
      fbq('consent', 'grant');
    } else {
      fbq('consent', 'revoke');
    }
    
    fbq('init', META_PIXEL_ID);
    fbq('track', 'PageView');
  }
  
  // Listen for consent updates
  window.addEventListener('consentUpdate', function(e) {
    // Load pixel if not loaded yet
    if (!pixelLoaded) loadPixel();
    
    if (e.detail && e.detail.granted) {
      if (typeof fbq === 'function') fbq('consent', 'grant');
    } else {
      if (typeof fbq === 'function') fbq('consent', 'revoke');
    }
  });

  // Helper functions
  window.trackMetaEvent = function(eventName, params) {
    if (!pixelLoaded) loadPixel();
    if (typeof fbq === 'function') fbq('track', eventName, params || {});
  };

  window.trackMetaCustomEvent = function(eventName, params) {
    if (!pixelLoaded) loadPixel();
    if (typeof fbq === 'function') fbq('trackCustom', eventName, params || {});
  };

  // Load after page is interactive (better for performance)
  if (document.readyState === 'complete') {
    // Page already loaded, wait a tick then load
    setTimeout(loadPixel, 100);
  } else {
    // Wait for page to be interactive
    window.addEventListener('load', function() {
      setTimeout(loadPixel, 100);
    });
  }
})();
</script>

<!-- Noscript fallback -->
<noscript>
  <img 
    height="1" 
    width="1" 
    style="display:none" 
    src={`https://www.facebook.com/tr?id=${META_PIXEL_ID}&ev=PageView&noscript=1`}
    alt=""
  />
</noscript>
