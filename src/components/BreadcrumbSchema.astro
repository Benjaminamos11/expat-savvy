---
export interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Create structured data for breadcrumbs
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url.startsWith('http') ? item.url : `https://expat-savvy.ch${item.url}`
  }))
};
---

<!-- Breadcrumb Schema Markup -->
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>

<!-- Minimal Visual Breadcrumb Navigation -->
<nav aria-label="Breadcrumb" class="mb-2">
  <ol class="flex items-center space-x-1 text-xs text-gray-500">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="h-3 w-3 text-gray-400 mx-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        )}
        {index === items.length - 1 ? (
          <span class="text-gray-700 font-medium" aria-current="page">{item.name}</span>
        ) : (
          <a href={item.url} class="hover:text-primary-600 transition-colors duration-200">
            {item.name}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav> 