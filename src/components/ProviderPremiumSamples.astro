---
import premiumData from '../data/premium-samples-2026.json';

export interface Props {
  provider: string; // e.g., 'swica', 'helsana', 'css'
  title?: string;
  showAllLocations?: boolean;
}

const { provider, title, showAllLocations = true } = Astro.props;

// Get data for this provider across all locations
const providerData = Object.entries(premiumData.locations).map(([locationKey, locationData]) => {
  const companyData = locationData.companies[provider.toLowerCase()];
  if (!companyData) return null;
  
  // Find best model and price
  const models = Object.entries(companyData).filter(([key]) => 
    key !== 'name' && key !== 'bestModel' && typeof companyData[key] === 'number'
  );
  const bestPrice = Math.min(...models.map(([_, price]) => price as number));
  
  return {
    location: locationData.name,
    locationKey,
    company: companyData.name,
    bestModel: companyData.bestModel,
    bestPrice,
    standardPrice: companyData.standard || bestPrice
  };
}).filter(Boolean);

if (providerData.length === 0) {
  throw new Error(`Provider ${provider} not found in premium data`);
}

// Sort by best price
providerData.sort((a, b) => a.bestPrice - b.bestPrice);
---

<div class="bg-white p-6 rounded-lg shadow-[4px_4px_8px_#d9d9d9,-4px_-4px_8px_#ffffff] mb-6">
  <h3 class="text-xl font-bold text-gray-900 mb-4">
    {title || `💰 ${providerData[0]?.company} 2026 Premium Examples`}
  </h3>
  
  <div class="text-sm text-gray-600 mb-4">
    Based on: Adult (born 1986), CHF 2,500 deductible, no accident coverage
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <!-- Best Deal -->
    <div class="bg-green-50 p-4 rounded-lg border border-green-200">
      <h4 class="font-semibold text-green-800 mb-2">🏆 Best Deal</h4>
      <p class="text-lg font-bold text-green-700">{providerData[0]?.location}</p>
      <p class="text-2xl font-bold text-green-700">CHF {providerData[0]?.bestPrice}/month</p>
      <p class="text-sm text-green-600">{providerData[0]?.bestModel}</p>
    </div>

    <!-- Average Range -->
    <div class="bg-blue-50 p-4 rounded-lg border border-blue-200">
      <h4 class="font-semibold text-blue-800 mb-2">📊 Price Range</h4>
      <p class="text-2xl font-bold text-blue-700">
        CHF {providerData[0]?.bestPrice}–{providerData[providerData.length - 1]?.bestPrice}
      </p>
      <p class="text-sm text-blue-600">Best models across regions</p>
    </div>

    <!-- Most Popular -->
    <div class="bg-purple-50 p-4 rounded-lg border border-purple-200">
      <h4 class="font-semibold text-purple-800 mb-2">⭐ Standard Model</h4>
      <p class="text-2xl font-bold text-purple-700">
        CHF {Math.round(providerData.reduce((sum, item) => sum + item.standardPrice, 0) / providerData.length)}
      </p>
      <p class="text-sm text-purple-600">Average standard premium</p>
    </div>
  </div>

  {showAllLocations && (
    <div class="mt-6">
      <h4 class="font-semibold text-gray-800 mb-3">Regional Breakdown:</h4>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
        {providerData.map(data => (
          <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
            <div>
              <p class="font-medium">{data.location}</p>
              <p class="text-xs text-gray-600">{data.bestModel}</p>
            </div>
            <div class="text-right">
              <p class="text-lg font-bold text-red-600">CHF {data.bestPrice}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  <div class="mt-4 text-xs text-gray-500">
    <p>📊 Source: Swiss Federal Office of Public Health - Official 2026 Premium Calculator | Updated: Sept 2025</p>
    <p>💡 Prices shown are best available models. Standard premiums typically 20-40% higher.</p>
  </div>
</div>
