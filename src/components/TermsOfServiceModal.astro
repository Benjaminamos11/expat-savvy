<script>
  const modal = document.getElementById('terms-of-service-modal');
  const closeBtn = document.getElementById('close-terms-modal');
  const modalContent = modal?.querySelector('.bg-white');
  const body = document.body;

  // Show modal
  window.showTermsOfServiceModal = () => {
    modal?.classList.remove('hidden');
    body.style.overflow = 'hidden';
  };

  // Close modal
  const closeModal = () => {
    modal?.classList.add('hidden');
    body.style.overflow = '';
  };

  closeBtn?.addEventListener('click', closeModal);

  // Close on outside click
  modal?.addEventListener('click', (e) => {
    const clickedElement = e.target as HTMLElement;
    // Check if the click is outside the modal content
    if (!modalContent?.contains(clickedElement) || clickedElement === modal) {
      closeModal();
    }
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
</script>