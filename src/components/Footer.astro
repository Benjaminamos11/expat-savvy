<VAG45Modal />
<PrivacyPolicyModal />
<TermsOfServiceModal />

<style>
  /* Black twill pattern from Subtle Patterns */
  .pattern-black-twill {
    background-image: url('https://www.toptal.com/designers/subtlepatterns/uploads/black_twill.png');
    background-repeat: repeat;
  }
</style>