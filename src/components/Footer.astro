---
import VAG45Modal from './VAG45Modal.astro';
import PrivacyPolicyModal from './PrivacyPolicyModal.astro';
import TermsOfServiceModal from './TermsOfServiceModal.astro';
import { ensureTrailingSlash } from '@/lib/utils';
---
<footer class="bg-gradient-to-b from-gray-900 to-black text-white py-12 relative">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 pattern-black-twill opacity-40 pointer-events-none"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- Comprehensive Site Links -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12 border-b border-gray-800 pb-12">
      <!-- Health Insurance Column -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-6">Health Insurance</h3>
        <ul class="space-y-3">
          <li><a href={ensureTrailingSlash("/health-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Health Insurance Overview</a></li>
          <li><a href={ensureTrailingSlash("/healthcare-system")} class="text-gray-400 hover:text-white transition-colors text-sm">Healthcare System</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/new-health-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">New Insurance Setup</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/switching-health-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Switch Insurance</a></li>
          <li><a href={ensureTrailingSlash("/guides/how-to/find-best-health-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Finding Best Insurance</a></li>
          <li><a href={ensureTrailingSlash("/guides/how-to/insurance-when-moving-cantons")} class="text-gray-400 hover:text-white transition-colors text-sm">Moving Cantons Insurance</a></li>
          <li><a href={ensureTrailingSlash("/blog/best-health-insurance-switzerland-expats")} class="text-gray-400 hover:text-white transition-colors text-sm">Best Insurance for Expats</a></li>
        </ul>
      </div>

      <!-- Insurance Providers Column -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-6">Insurance Providers</h3>
        <ul class="space-y-3">
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances")} class="text-gray-400 hover:text-white transition-colors text-sm">All Insurance Providers</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/swica")} class="text-gray-400 hover:text-white transition-colors text-sm">Swica</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/helsana")} class="text-gray-400 hover:text-white transition-colors text-sm">Helsana</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/css")} class="text-gray-400 hover:text-white transition-colors text-sm">CSS</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/sanitas")} class="text-gray-400 hover:text-white transition-colors text-sm">Sanitas</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/concordia")} class="text-gray-400 hover:text-white transition-colors text-sm">Concordia</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/kpt")} class="text-gray-400 hover:text-white transition-colors text-sm">KPT</a></li>
          <li><a href={ensureTrailingSlash("/healthcare/all-insurances/assura")} class="text-gray-400 hover:text-white transition-colors text-sm">Assura</a></li>
        </ul>
      </div>

      <!-- Guides & Resources Column -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-6">Guides & Resources</h3>
        <ul class="space-y-3">
          <li><a href={ensureTrailingSlash("/guides/how-to")} class="text-gray-400 hover:text-white transition-colors text-sm">How-To Guides</a></li>
          <li><a href={ensureTrailingSlash("/news/guides")} class="text-gray-400 hover:text-white transition-colors text-sm">Insurance Guides</a></li>
          <li><a href={ensureTrailingSlash("/news/regional-guides")} class="text-gray-400 hover:text-white transition-colors text-sm">Regional Guides</a></li>
          <li><a href={ensureTrailingSlash("/insurance-guides")} class="text-gray-400 hover:text-white transition-colors text-sm">Insurance Planning</a></li>
          <li><a href={ensureTrailingSlash("/blog")} class="text-gray-400 hover:text-white transition-colors text-sm">Blog</a></li>
          <li><a href={ensureTrailingSlash("/news")} class="text-gray-400 hover:text-white transition-colors text-sm">News & Updates</a></li>
        </ul>
      </div>

      <!-- Other Insurance & Services Column -->
      <div>
        <h3 class="text-lg font-semibold text-white mb-6">Other Insurance</h3>
        <ul class="space-y-3">
          <li><a href={ensureTrailingSlash("/3rd-pillar")} class="text-gray-400 hover:text-white transition-colors text-sm">3rd Pillar Pension</a></li>
          <li><a href={ensureTrailingSlash("/pension-planning")} class="text-gray-400 hover:text-white transition-colors text-sm">Pension Planning</a></li>
          <li><a href={ensureTrailingSlash("/insurance/household-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Household Insurance</a></li>
          <li><a href={ensureTrailingSlash("/insurance/personal-liability-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Personal Liability</a></li>
          <li><a href={ensureTrailingSlash("/insurance/legal-protection-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Legal Protection</a></li>
          <li><a href={ensureTrailingSlash("/life-insurance")} class="text-gray-400 hover:text-white transition-colors text-sm">Life Insurance</a></li>
          <li><a href={ensureTrailingSlash("/free-consultation")} class="text-gray-400 hover:text-white transition-colors text-sm">Free Consultation</a></li>
        </ul>
      </div>
    </div>
  
    <div class="flex flex-col items-center text-center">
      <!-- Company Info -->
      <div class="max-w-lg">
        <img 
          src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080076/logo_light_expatsavvy_o8iaky.svg" 
          alt="Expat Savvy" 
          class="h-12 mb-6 mx-auto" 
          width="180" 
          height="48" 
        />
        <p class="text-gray-400 mt-4">Your trusted insurance advisor in Switzerland since 2017.</p>
        
        <!-- Social Media Links -->
        <div class="flex space-x-6 mt-8 justify-center">
          <a 
            href="https://www.linkedin.com/company/101603783"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-[#0077b5] transition-colors"
