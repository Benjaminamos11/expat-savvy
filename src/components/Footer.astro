---
import VAG45Modal from './VAG45Modal.astro';
import PrivacyPolicyModal from './PrivacyPolicyModal.astro';
import TermsOfServiceModal from './TermsOfServiceModal.astro';
---
<footer class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <img 
          src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080076/logo_light_expatsavvy_o8iaky.svg" 
          alt="Expat Savvy" 
          class="h-12 mb-4" 
          width="180" 
          height="48" 
        />
        <p class="text-gray-400 mt-4">Your trusted insurance advisor in Switzerland since 2017.</p>
        
        <!-- Social Media Links -->
        <div class="flex space-x-4 mt-6">
          <a 
            href="https://www.linkedin.com/company/101603783"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-[#0077b5] transition-colors"
            title="Follow us on LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
