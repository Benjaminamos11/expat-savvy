---
import { ensureTrailingSlash } from '@/lib/utils';

interface RelatedPage {
  title: string;
  description: string;
  href: string;
}

interface Props {
  title?: string;
  pages: RelatedPage[];
}

const { title = "Related Pages", pages } = Astro.props;
---

<div class="bg-gray-50 py-12 mt-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {pages.map(page => (
        <a href={ensureTrailingSlash(page.href)} class="group">
          <div class="bg-white rounded-lg shadow-md p-6 h-full border-2 border-transparent group-hover:border-primary-500 transition-all duration-300">
            <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">{page.title}</h3>
            <p class="text-gray-600 mb-4">{page.description}</p>
            <div class="flex items-center text-primary-600 font-medium">
              Read more
              <svg class="ml-2 h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</div> 