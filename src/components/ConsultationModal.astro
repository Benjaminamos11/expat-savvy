<script>
  // Define showConsultationModal globally
  window.showConsultationModal = () => {
    const modal = document.getElementById('consultation-modal');
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  };

  // Initialize modal functionality
  const modal = document.getElementById('consultation-modal');
  const closeBtn = document.getElementById('close-consultation-modal');
  const modalContent = modal?.querySelector('.bg-white');

  // Close modal
  const closeModal = () => {
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }
  };

  if (closeBtn) {
    closeBtn.addEventListener('click', closeModal);
  }

  // Close on outside click - Updated to check if click is outside modal content
  if (modal) {
    modal.addEventListener('click', (e) => {
      const clickedElement = e.target as HTMLElement;
      // Check if the click is outside the modal content
      if (!modalContent?.contains(clickedElement) || clickedElement === modal) {
        closeModal();
      }
    });
  }

  // Handle escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
</script>

<style>
  /* Ensure proper scrolling on mobile */
  @media (max-width: 640px) {
    .modal-content {
      margin: 1rem;
      max-height: calc(100vh - 2rem);
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }
  }

  /* Prevent background scroll when modal is open */
  body.modal-open {
    overflow: hidden;
    position: fixed;
    width: 100%;
  }
</style>