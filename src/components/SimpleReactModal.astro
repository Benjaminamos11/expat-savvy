  console.log('‚úÖ Smart Modal React component ready');
  console.log('üìç Page context:', pageContext);
  
  // Test the modal
  console.log('üß™ Testing modal functions...');
  console.log('openSmartModal available:', typeof window.openSmartModal === 'function');
  console.log('openOffersModal available:', typeof window.openOffersModal === 'function');
}

// Start initialization
initReactModal();
</script>

