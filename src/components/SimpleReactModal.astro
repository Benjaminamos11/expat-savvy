      { id: 'family', icon: 'üë®‚Äçüë©‚Äçüëß‚Äçüë¶', title: 'I need family coverage', score: 8 },
      { id: 'switch-save', icon: 'üí∞', title: 'I want to switch and save money', score: 6 },
      { id: 'compare-options', icon: '‚öñÔ∏è', title: "I'm comparing different options", score: 4 },
      { id: 'have-questions', icon: '‚ùì', title: 'I have specific questions', score: 3 },
