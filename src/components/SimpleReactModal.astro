    ];

    const handleOptionSelect = (option) => {
      setUserData({
        situation: option.id,
        complexityScore: option.score
      });
      setCurrentStep('value');
    };

    const goToStep = (step) => {
      setCurrentStep(step);
    };

    const handleBookingSubmit = (e) => {
      e.preventDefault();
      if (formData.name && formData.email && formData.phone) {
