    }
    
    if (!root) {
      root = ReactDOM.createRoot(container);
    }
    
    root.render(h(SmartModal, {
      isOpen: isModalOpen,
      onClose: closeModal,
      pageContext: pageContext
    }));
  };
  
  const openModal = () => {
    console.log('üéØ Opening React Smart Modal');
    isModalOpen = true;
    renderModal();
  };
  
  const closeModal = () => {
    console.log('üîí Closing React Smart Modal');
    isModalOpen = false;
    renderModal();
  };
  
  // Global functions for compatibility
  window.openSmartModal = openModal;
  window.closeSmartModal = closeModal;
  
  // Legacy compatibility
  window.openOffersModal = openModal;
  window.openConsultationModal = openModal;
