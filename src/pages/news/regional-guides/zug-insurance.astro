---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "News & Guides", href: "/news" },
  { name: "Regional Guides", href: "/news/regional-guides" },
  { name: "Zug Insurance Guide", href: "/news/regional-guides/zug-insurance" }
];

const quickStats = [
  { label: "Population", value: "130,000+" },
  { label: "Expats", value: "30%" },
  { label: "Tax Rate", value: "Lowest in CH" },
  { label: "Insurance Premium Region", value: "1" }
];

const insuranceTypes = [
  {
    id: "health-insurance",
    title: "Health Insurance",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>`
  },
  {
    id: "liability-insurance",
    title: "Private Liability Insurance",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
  },
  {
    id: "household-insurance",
    title: "Household Insurance",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>`
  },
  {
    id: "legal-insurance",
    title: "Legal Insurance",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path></svg>`
  },
  {
    id: "3rd-pillar",
    title: "3rd Pillar",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>`
  }
];

const healthFAQs = [
  {
    question: "Is basic health insurance mandatory for all residents in Zug?",
    answer: "Yes, like everywhere in Switzerland, all residents in Zug must have basic health insurance (KVG/LAMal) within three months of arrival or birth."
  },
  {
    question: "Are health insurance premiums in Zug higher than the Swiss average?",
    answer: "Zug is in premium region 1, which typically has higher premiums than rural areas due to the high quality of healthcare services and affluent population."
  },
  {
    question: "How can international employees in Zug manage their health insurance?",
    answer: "Zug's international business environment means many insurers offer English-speaking services and special packages for expatriates working for multinational companies."
  },
  {
    question: "What are the best health insurance options for families in Zug?",
    answer: "For families in Zug, insurers like Swica, Helsana, and CSS offer competitive family packages with excellent coverage for the canton's premium healthcare facilities."
  }
];

const pillarFAQs = [
  {
    question: "What are the main tax advantages of a 3rd pillar account for Zug residents?",
    answer: "Residents of Zug can deduct 3a contributions from their taxable income, which is particularly advantageous in Zug as it already has the lowest tax rates in Switzerland, further maximizing your tax savings."
  },
  {
    question: "How is 3rd pillar money taxed when withdrawn in Zug?",
    answer: "When withdrawn, 3rd pillar funds are taxed at a reduced rate separate from your ordinary income. Zug has some of the most favorable cantonal tax rates for lump-sum withdrawals in Switzerland."
  },
  {
    question: "Are there specific 3rd pillar considerations for international business professionals in Zug?",
    answer: "International professionals in Zug should consider portability and withdrawal options if they might leave Switzerland in the future. Some providers offer special services for the highly mobile international workforce typical of Zug."
  }
];
---

<Layout
  title="Zug Insurance Guide 2025 | Health, Liability & 3rd Pillar in English"
  description="Your essential Zug insurance guide in English. Understand health (KVG), liability, household, legal, and 3rd pillar (3a/3b) in Switzerland's lowest tax canton, Zug. Local tips from Expat Savvy."
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740632342/timon-stalder-EqUuS4jcQ48-unsplash_1_yc59xd.webp"
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "Navigating Insurance in Zug: Your Complete English Guide",
      "description": "Your essential Zug insurance guide in English. Understand health (KVG), liability, household, legal, and 3rd pillar (3a/3b) in Switzerland's lowest tax canton, Zug. Local tips from Expat Savvy.",
      "image": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740632342/timon-stalder-EqUuS4jcQ48-unsplash_1_yc59xd.webp",
      "datePublished": "2025-05-13",
      "dateModified": "2025-05-13",
      "author": {
        "@type": "Organization",
        "name": "Expat Savvy"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Expat Savvy",
        "logo": {
          "@type": "ImageObject",
          "url": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg"
        }
      },
      "mainEntity": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Is basic health insurance mandatory for all residents in Zug?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes, like everywhere in Switzerland, all residents in Zug must have basic health insurance (KVG/LAMal) within three months of arrival or birth."
            }
          },
          {
            "@type": "Question",
            "name": "Are health insurance premiums in Zug higher than the Swiss average?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Zug is in premium region 1, which typically has higher premiums than rural areas due to the high quality of healthcare services and affluent population."
            }
          }
        ]
      }
    }
  </script>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-4">
        {breadcrumbs.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            )}
            <a
              href={item.href}
              class={`ml-4 text-sm font-medium ${
                index === breadcrumbs.length - 1
                  ? 'text-gray-700'
                  : 'text-gray-500 hover:text-gray-700'
              }`}
              aria-current={index === breadcrumbs.length - 1 ? 'page' : undefined}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740632342/timon-stalder-EqUuS4jcQ48-unsplash_1_yc59xd.webp"
        alt="Zug cityscape with the lake and mountains"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/40"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
          <span class="block">Navigating Insurance in Zug</span>
          <span class="block mt-2">Your Complete <span class="text-primary-500">English Guide</span></span>
        </h1>
        <p class="mt-6 max-w-lg mx-auto text-xl text-gray-300">
          Everything you need to know about health, liability, household insurance and more in Zug, Switzerland's charming canton.
        </p>
        
        <!-- Quick Stats -->
        <div class="mt-10 grid grid-cols-2 md:grid-cols-4 gap-4">
          {quickStats.map(stat => (
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <dt class="text-gray-300 text-sm">{stat.label}</dt>
              <dd class="text-white font-bold text-xl">{stat.value}</dd>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Table of Contents -->
  <div class="bg-white py-8 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-4 overflow-x-auto">
        {insuranceTypes.map(item => (
          <a 
            href={`#${item.id}`}
            class="text-sm text-gray-600 hover:text-primary-600 whitespace-nowrap py-2"
          >
            {item.title}
          </a>
        ))}
      </nav>
    </div>
  </div>

  <!-- Introduction Section -->
  <div id="introduction" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="prose prose-lg">
          <p>
            Welcome to Zug, Switzerland's picturesque canton with its UNESCO-listed Old Town and stunning position along the lake. This charming, German-speaking city offers a unique blend of historic architecture, political significance, and natural beauty. To fully embrace life here, understanding the Swiss insurance system, with particular attention to Zug's role as the seat of government and its specific insurance considerations, is essential.
          </p>
          <p>
            Whether you are newly arrived or a long-term resident, grasping your options for health, liability, household, and pension planning is key. Zug presents specific considerations, from insurance for federal government employees to the city's unique building structures and moderate cost of living compared to other Swiss urban centers.
          </p>
          
          <div class="bg-primary-50 border-l-4 border-primary-500 p-5 my-8 rounded-lg">
            <p class="text-primary-800 m-0">
              <strong>New to Zug and have quick insurance questions?</strong> <a href="/ai-chat" class="text-primary-600 font-medium hover:underline">Chat with our AI Insurance Assistant</a> for instant answers! For more personalized guidance, <a href="/free-consultation" class="text-primary-600 font-medium hover:underline">Schedule a Free Consultation</a> today!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Insurance Type Navigation Cards -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Essential Insurance Types in Zug</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {insuranceTypes.map((type) => (
          <a href={`#${type.id}`} class="group">
            <div class="bg-white rounded-xl p-6 h-full transition-all duration-300 shadow-[8px_8px_16px_#d9d9d9,-8px_-8px_16px_#ffffff] hover:shadow-[12px_12px_20px_#d1d1d1,-12px_-12px_20px_#ffffff] border border-gray-100">
              <div class="text-primary-500 mb-4 flex-shrink-0">
                <Fragment set:html={type.icon} />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {type.title}
              </h3>
              <div class="mt-4 text-primary-600 font-medium flex items-center">
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Health Insurance Section -->
  <div id="health-insurance" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Health Insurance in Zug
        </p>
        <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto">
          Navigate Zug's healthcare system with mandatory KVG insurance and optional supplementary coverage.
        </p>
      </div>

      <div class="mt-10">
        <div class="prose prose-lg mb-8 max-w-3xl mx-auto">
          <p>
            Basic health insurance (KVG) is mandatory for all residents in Switzerland, including Zug. A key consideration in Zug is that employees of federal government institutions and certain diplomatic missions might have special insurance situations. Zug falls in premium region 1, making it more affordable than Zurich or Geneva while providing excellent healthcare infrastructure including the renowned Inselspital university hospital.
          </p>
        </div>

        <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="px-6 py-8">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-12 w-12 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <div class="ml-4">
                  <h2 class="text-xl font-bold text-gray-900">Healthcare Providers</h2>
                </div>
              </div>
              
              <div class="mt-6 border-t border-b border-gray-200 py-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Popular Providers in Zug</h3>
                <ul class="space-y-4">
                  <li class="flex">
                    <svg class="h-6 w-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600"><strong>KPT/CPT:</strong> Headquartered in Zug and particularly popular with locals</span>
                  </li>
                  <li class="flex">
                    <svg class="h-6 w-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600"><strong>Visana:</strong> Has strong roots in the Zug region</span>
                  </li>
                  <li class="flex">
                    <svg class="h-6 w-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600"><strong>CSS:</strong> Large nationwide provider with good coverage</span>
                  </li>
                  <li class="flex">
                    <svg class="h-6 w-6 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600"><strong>SWICA:</strong> Known for integrative medicine options</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Key Healthcare Facilities</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-md font-medium text-gray-900">Inselspital (University Hospital)</h4>
                    <p class="text-sm text-gray-500">Zug's premier hospital with all specialties and research excellence</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-md font-medium text-gray-900">Lindenhofgruppe</h4>
                    <p class="text-sm text-gray-500">Private hospital group with three locations in Zug</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-md font-medium text-gray-900">Hirslanden Salem-Spital</h4>
                    <p class="text-sm text-gray-500">Private hospital with multilingual staff</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-200">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Zug-Specific Considerations</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-md font-medium text-gray-900">Government Employees</h4>
                    <p class="text-sm text-gray-500">Special options for federal administration staff</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <svg class="h-6 w-6 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-md font-medium text-gray-900">Bilingual Services</h4>
                    <p class="text-sm text-gray-500">Many healthcare providers offer services in German and French</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Health Insurance FAQ Box -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8 border border-gray-200 mt-10">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Common Questions: Health Insurance in Zug</h3>
          <div class="space-y-6">
            {healthFAQs.map(faq => (
              <div>
                <h4 class="font-medium text-gray-900 mb-2">{faq.question}</h4>
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="flex justify-center">
          <a href="/blog/understanding-swiss-health-insurance-premium-regions" class="inline-flex items-center px-4 py-2 border border-primary-300 bg-primary-50 rounded-md text-primary-700 hover:bg-primary-100 transition-colors">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13c-1.168-.776-2.754-1.253-4.5-1.253-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            Learn more about health insurance premium regions
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Private Liability Insurance Section -->
  <div id="liability-insurance" class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Private Liability Insurance in Zug
