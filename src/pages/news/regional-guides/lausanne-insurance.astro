];

const quickStats = [
  { label: "Population", value: "139,000+" },
  { label: "Expats", value: "42%" },
  { label: "Olympic Orgs", value: "50+" },
  { label: "Insurance Premium Region", value: "2" }
];

const insuranceTypes = [
  {
    id: "health-insurance",
