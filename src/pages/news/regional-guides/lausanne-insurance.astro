        </div>

        <!-- Health Insurance FAQ Box -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8 border border-gray-200 mt-10">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Common Questions: Health Insurance in Lausanne</h3>
          <div class="space-y-6">
            {healthFAQs.map(faq => (
              <div>
                <h4 class="font-medium text-gray-900 mb-2">{faq.question}</h4>
                <p class="text-gray-600">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="flex justify-center">
          <a href="/blog/understanding-swiss-health-insurance-premium-regions" class="inline-flex items-center px-4 py-2 border border-primary-300 bg-primary-50 rounded-md text-primary-700 hover:bg-primary-100 transition-colors">
