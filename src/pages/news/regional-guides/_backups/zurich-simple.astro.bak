---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import ConsultationModal from "../../../components/ConsultationModal.astro";

const pageTitle = "Expat Insurance & Living in Zurich Guide 2025";
---

<BaseLayout
  title={pageTitle}
  description="Comprehensive Zurich guide for expats with essential insurance information, neighborhood insights, and living tips."
  type="article"
  publishDate={new Date("2023-06-01")}
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740598472/henrique-ferreira-6v-K4PpCHVw-unsplash_1_zkpj2a.webp"
>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">{pageTitle}</h1>
    <p class="mb-4">This page is being updated. Please check back soon for our complete guide to living in Zurich as an expat!</p>
    <p class="mb-8">Our comprehensive guide will cover insurance options, housing, transportation, and more for expats in Zurich.</p>
  </div>
  <ConsultationModal />
</BaseLayout> 