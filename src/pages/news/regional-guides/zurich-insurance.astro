  { label: "Language", value: "German" },
  { label: "Insurance Premium Region", value: "1" }
];

const pillarFAQs = [
  {
    question: "How much can I contribute to my 3rd pillar in Zurich?",
    answer: "For 2024, employed individuals can contribute up to CHF 7,056 to their 3rd pillar annually. Self-employed individuals can contribute up to 20% of their net income (maximum CHF 35,280)."
  },
  {
    question: "Can I have multiple 3a accounts in Zurich?",
    answer: "Yes, you can have multiple 3a accounts with different providers in Zurich. This strategy can be beneficial for tax optimization when withdrawing funds at retirement."
  },
  {
    question: "What's the earliest I can withdraw my 3rd pillar in Zurich?",
    answer: "The earliest withdrawal age is 59 for women and 60 for men. However, early withdrawals are possible for specific reasons like buying a primary residence, starting a business, or permanently leaving Switzerland."
  }
];

const insuranceTypes = [
  {
