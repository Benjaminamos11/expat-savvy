const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "News & Guides", href: "/news" },
  { name: "Regional Guides", href: "/news/regional-guides" },
  { name: "Lugano Insurance Guide", href: "/news/regional-guides/lugano-insurance" }
];

const quickStats = [
  { label: "Population", value: "63,000+" },
  { label: "Expats", value: "28%" },
  { label: "Language", value: "Italian" },
  { label: "Canton", value: "Ticino" }
];

const insuranceTypes = [
  {
    id: "health-insurance",
    title: "Health Insurance",
    icon: '<svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>',
    description: "Navigate basic and supplementary health insurance options in Lugano."
  },
  {
    id: "liability-insurance",
    title: "Private Liability",
    icon: '<svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>',
    description: "Protect yourself from damages to others and their property."
  },
  {
    id: "household-insurance",
    title: "Household Insurance",
    icon: '<svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>',
    description: "Cover your belongings against theft, fire, and water damage."
  },
  {
    id: "legal-insurance",
    title: "Legal Insurance",
    icon: '<svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" /></svg>',
    description: "Legal protection for disputes with landlords, employers and more."
  },
  {
    id: "3rd-pillar",
    title: "3rd Pillar",
    icon: '<svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" /></svg>',
    description: "Build your private retirement savings with tax advantages in Ticino."
  }
];

const healthFAQs = [
  {
    question: "Do I need to sign up for health insurance as soon as I move to Lugano?",
    answer: "Yes. You must obtain Swiss health insurance within 3 months of arriving in Lugano. This is mandatory for all residents regardless of nationality."
  },
  {
    question: "Can I choose any doctor in Lugano with basic health insurance?",
    answer: "With the standard model (free doctor choice), you can visit any doctor in Switzerland. Other models like HMO or family doctor models restrict your choices in exchange for lower premiums."
  },
  {
    question: "As an Italian cross-border worker in Lugano, what are my health insurance options?",
    answer: "Cross-border workers (frontalieri) from Italy who work in Lugano have the option to either keep Italian health insurance (with form S1) or join the Swiss system. You should make this decision within 3 months of starting work."
  },
  {
    question: "What happens if I need medical care while visiting Italy from Lugano?",
    answer: "Basic Swiss health insurance covers emergency treatment abroad at up to twice the cost of the same treatment in your canton of residence. For regular visits to Italy, consider supplementary insurance with broader international coverage."
  }
];

const pillarFAQs = [
  {
    question: "How does the 3rd pillar pension system work in Lugano?",
    answer: "The 3rd pillar in Lugano works the same way as in the rest of Switzerland. Pillar 3a offers tax-deductible retirement savings with annual contribution limits, while Pillar 3b provides more flexible savings without tax deductions."
  },
  {
    question: "What are the tax advantages of a 3rd pillar in Ticino canton?",
    answer: "In Ticino, 3a contributions are deductible from your income, reducing your tax burden. When you withdraw your 3a funds upon retirement, you pay a reduced tax rate separate from your income tax. Tax benefits can be particularly attractive for higher-income residents in Lugano."
  },
  {
    question: "Can I have multiple 3a accounts in different banks in Lugano?",
    answer: "Yes, you can open 3a accounts with multiple providers. This strategy can be useful for staggering withdrawals during retirement to minimize lump-sum taxation. However, the total annual contribution limit applies across all accounts."
  }
];
---

<Layout
  title="Lugano Insurance Guide 2025 | Health, Liability & 3rd Pillar in English"
  description="Your essential Lugano insurance guide in English. Understand health (LAMal), liability, household, legal, and 3rd pillar (3a/3b) in Italian-speaking Lugano, Ticino. Local tips from Expat Savvy."
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740633094/fabrice-villard-WFg8pqktB_A-unsplash_plzqhh.webp"
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "Navigating Insurance in Lugano: Your Complete English Guide",
      "description": "Your essential Lugano insurance guide in English. Understand health (LAMal), liability, household, legal, and 3rd pillar (3a/3b) in Italian-speaking Lugano, Ticino. Local tips from Expat Savvy.",
      "image": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740633094/fabrice-villard-WFg8pqktB_A-unsplash_plzqhh.webp",
      "datePublished": "2025-05-15",
      "dateModified": "2025-05-15",
      "author": {
        "@type": "Organization",
        "name": "Expat Savvy"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Expat Savvy",
        "logo": {
          "@type": "ImageObject",
          "url": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg"
        }
      },
      "mainEntity": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "What are the health insurance premium levels in Lugano and Ticino?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Premiums in Ticino, including Lugano, are influenced by local healthcare costs. They are generally comparable to other Swiss regions but should be checked specifically for your situation using your postal code."
            }
          },
          {
            "@type": "Question",
            "name": "Are there specific health insurance considerations for residents living near the Italian border in Lugano?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Yes, if you are a frontaliere working in Ticino but living in Italy, specific rules apply regarding your health insurance obligations. If you live in Lugano but frequently seek care in Italy, check your supplementary insurance for cross-border treatment coverage."
            }
          }
        ]
      }
    }
  </script>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-4">
        {breadcrumbs.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            )}
            <a
              href={item.href}
              class={`ml-4 text-sm font-medium ${
                index === breadcrumbs.length - 1
                  ? 'text-gray-700'
                  : 'text-gray-500 hover:text-gray-700'
              }`}
              aria-current={index === breadcrumbs.length - 1 ? 'page' : undefined}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740633094/fabrice-villard-WFg8pqktB_A-unsplash_plzqhh.webp"
        alt="Lugano cityscape with the lake and mountains"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/40"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
          <span class="block">Navigating Insurance in Lugano</span>
          <span class="block mt-2">Your Complete <span class="text-primary-500">English Guide</span></span>
        </h1>
        <p class="mt-6 max-w-lg mx-auto text-xl text-gray-300">
          Everything you need to know about health, liability, household insurance and more in Lugano, the pearl of Italian-speaking Switzerland.
        </p>
        
        <!-- Quick Stats -->
        <div class="mt-10 grid grid-cols-2 md:grid-cols-4 gap-4">
          {quickStats.map(stat => (
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
              <dt class="text-gray-300 text-sm">{stat.label}</dt>
              <dd class="text-white font-bold text-xl">{stat.value}</dd>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Table of Contents -->
  <div class="bg-white py-8 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-4 overflow-x-auto">
        {insuranceTypes.map(item => (
          <a 
            href={`#${item.id}`}
            class="text-sm text-gray-600 hover:text-primary-600 whitespace-nowrap py-2"
          >
            {item.title}
          </a>
        ))}
      </nav>
    </div>
  </div>

  <!-- Introduction Section -->
  <div id="introduction" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="prose prose-lg">
          <p>
            Benvenuti a Lugano! As the largest city in the Italian-speaking canton of Ticino, Lugano captivates with its Mediterranean flair, stunning lake, and prominent role as a financial center. For English-speaking individuals and families making their home here, understanding the Swiss insurance system, with specific attention to Lugano's unique cultural, linguistic, and cross-border context (proximity to Italy), is vital.
          </p>
          <p>
            Whether you are drawn by its lifestyle, financial sector, or natural beauty, grasping your options for health, liability, household, and pension planning is key. Lugano presents distinct considerations, from health insurance for those who frequently travel to Italy (or cross-border workers, known as frontalieri), to understanding the local nuances of the Ticinese system.
          </p>
          
          <div class="bg-primary-50 border-l-4 border-primary-500 p-5 my-8 rounded-lg">
            <p class="text-primary-800 m-0">
              <strong>New to Lugano and have quick insurance questions?</strong> <a href="/ai-chat" class="text-primary-600 font-medium hover:underline">Chat with our AI Insurance Assistant</a> for instant answers! For more personalized guidance, <a href="/free-consultation" class="text-primary-600 font-medium hover:underline">Schedule a Free Consultation</a> today!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Insurance Type Navigation Cards -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Essential Insurance Types in Lugano</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {insuranceTypes.map((type) => (
          <a href={`#${type.id}`} class="group">
            <div class="bg-white rounded-xl p-6 h-full transition-all duration-300 shadow-[8px_8px_16px_#d9d9d9,-8px_-8px_16px_#ffffff] hover:shadow-[12px_12px_20px_#d1d1d1,-12px_-12px_20px_#ffffff] border border-gray-100">
              <div class="text-primary-500 mb-4 flex-shrink-0">
                <Fragment set:html={type.icon} />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                {type.title}
              </h3>
              <div class="mt-4 text-primary-600 font-medium flex items-center">
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Health Insurance Section -->
  <div id="health-insurance" class="bg-white py-16">
