---

<Layout
  title="Latest News & Updates | Expat Savvy"
  canonicalURLProp="https://expat-savvy.ch/news/"
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Blog",
      "headline": "Latest News & Updates from Expat Savvy",
      "description": "Stay updated with the latest news and developments from Expat Savvy, your trusted Swiss insurance advisor.",
      "publisher": {
        "@type": "Organization",
        "name": "Expat Savvy",
        "logo": {
          "@type": "ImageObject",
          "url": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg"
        }
      },
      "blogPost": [
        {
          "@type": "BlogPosting",
          "headline": "Expat Savvy Launches New Homepage",
          "datePublished": "2025-01-15",
          "description": "We're excited to announce the launch of our completely redesigned website."
        },
        {
          "@type": "BlogPosting",
          "headline": "Strategic Partnership with PrimeRelocation.ch",
          "datePublished": "2025-01-10",
          "description": "Expat Savvy announces a strategic partnership with PrimeRelocation.ch"
        }
      ]
    }
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Latest News & Updates
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Stay informed about our latest developments, partnerships, and improvements in Swiss insurance guidance.
        </p>
      </div>
    </div>
  </div>

  <!-- News Items -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {newsItems.map((item, index) => (
          <article class={`relative ${index > 0 ? 'pt-16 border-t border-gray-200' : ''}`}>
            <div class="grid grid-cols-1 md:grid-cols-8 gap-8">
              <!-- Image Column -->
              <div class="md:col-span-2">
                <div class="flex items-center justify-center h-24">
                  <img
                    src={item.image}
                    alt={item.title}
                    class={item.imageClass}
                  />
                </div>
              </div>
              
              <!-- Content Column -->
              <div class="md:col-span-6">
                <div class="text-sm text-primary-600 mb-2">
                  {item.date}
                </div>
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                  {item.title}
                </h2>
                <p class="text-xl text-gray-500 mb-6">
                  {item.description}
                </p>
                <div class="prose prose-lg" set:html={item.content} />
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>

  <!-- Newsletter Signup -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-gray-900">Stay Updated</h2>
        <p class="mt-4 text-lg text-gray-500">
          Subscribe to our newsletter to receive the latest updates and insurance tips.
        </p>
        <form class="mt-8 sm:flex justify-center">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="w-full px-5 py-3 border border-gray-300 shadow-sm placeholder-gray-400 focus:ring-1 focus:ring-primary-500 focus:border-primary-500 sm:max-w-xs rounded-md"
            placeholder="Enter your email"
          />
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3 sm:flex-shrink-0">
            <button
              type="submit"
              class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Share Section -->
  <div class="bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto flex items-center justify-between">
        <span class="text-gray-600">Share our news:</span>
        <div class="flex space-x-4">
          <a 
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent('https://expat-savvy.ch/news')}&title=${encodeURIComponent('Latest News from Expat Savvy')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-[#0077b5] transition-colors"
          >
            <span class="sr-only">Share on LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent('https://expat-savvy.ch/news')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-[#1877f2] transition-colors"
          >
            <span class="sr-only">Share on Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <button
            onclick="navigator.clipboard.writeText(window.location.href).then(() => alert('Link copied!'))"
            class="text-gray-400 hover:text-gray-600 transition-colors"
          >
            <span class="sr-only">Copy link</span>
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>