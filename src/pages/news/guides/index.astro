<Layout
  title="Expert Guides | Insurance, Healthcare & Living in Switzerland"
  description="Comprehensive guides for insurance, healthcare, and living in Switzerland. Expert advice for expats on all aspects of Swiss life."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Expert Guides</span>
          <span class="block text-primary-600">for Life in Switzerland</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Everything you need to know about insurance, healthcare, and living in Switzerland. Written by experts, designed for expats.
        </p>
      </div>
    </div>
  </div>

  <!-- Insurance Guides -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 mb-12">Insurance Guides</h2>
      <div class="grid grid-cols-1 gap-12">
        {insuranceGuides.map(section => (
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">{section.title}</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {section.guides.map(guide => (
                <a 
                  href={guide.href}
                  class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow border border-gray-200 hover:border-primary-500"
                >
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">{guide.name}</h4>
                  <p class="text-gray-600">{guide.description}</p>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Regional Guides -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 mb-12">Regional Guides</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {regionalGuides.map(guide => (
          <a 
            href={guide.href}
            class="bg-gray-50 rounded-lg p-6 hover:bg-gray-100 transition-colors"
          >
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{guide.name}</h3>
            <p class="text-gray-600">{guide.description}</p>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Healthcare System Guides -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 mb-12">Healthcare System</h2>
      <div class="grid grid-cols-1 gap-12">
        {healthcareGuides.map(section => (
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">{section.title}</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {section.guides.map(guide => (
                <a 
                  href={guide.href}
                  class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow border border-gray-200 hover:border-primary-500"
                >
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">{guide.name}</h4>
                  <p class="text-gray-600">{guide.description}</p>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Newsletter Signup -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-gray-900">Stay Updated</h2>
        <p class="mt-4 text-lg text-gray-500">
          Subscribe to our newsletter to receive the latest guides and insurance tips.
        </p>
        <form class="mt-8 sm:flex justify-center">
          <label for="email-address" class="sr-only">Email address</label>
          <input
            id="email-address"
            name="email"
            type="email"
            autocomplete="email"
            required
            class="w-full px-5 py-3 border border-gray-300 shadow-sm placeholder-gray-400 focus:ring-1 focus:ring-primary-500 focus:border-primary-500 sm:max-w-xs rounded-md"
            placeholder="Enter your email"
          />
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3 sm:flex-shrink-0">
            <button
              type="submit"
              class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>