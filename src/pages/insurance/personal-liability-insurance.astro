const faqs = [
  {
    question: "Is personal liability insurance mandatory in Switzerland?",
    answer: "While not legally mandatory, personal liability insurance is strongly recommended and often required by landlords when renting a property in Switzerland. It protects you against claims for damage to property or injury to others."
  },
  {
    question: "What does personal liability insurance cover?",
    answer: "Personal liability insurance typically covers damage to rental property, accidental injury to others, damage to others' property, and legal defense costs. The standard coverage in Switzerland is usually 5-10 million CHF."
  },
  {
    question: "How much does personal liability insurance cost in Switzerland?",
    answer: "Annual premiums typically range from 100 to 300 CHF, depending on the coverage amount and additional options chosen. Family policies may cost slightly more but offer comprehensive protection for all family members."
  },
  {
    question: "Can I combine personal liability with other insurance policies?",
    answer: "Yes, many insurers offer package deals combining personal liability with household insurance, which can result in premium discounts. Some providers also offer additional benefits when bundling multiple insurance products."
  },
  {
    question: "What's not covered by personal liability insurance?",
    answer: "Personal liability insurance typically doesn't cover intentional damage, professional liability, damage to borrowed or rented items (except rental property), or damage caused while driving a motor vehicle (covered by motor insurance)."
  }
];
---

<Layout
  title="Personal Liability Insurance Switzerland | Expert Guide 2025"
  description="Find the best personal liability insurance in Switzerland. Independent FINMA-certified advice for expats â€” compare providers and coverage."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "InsuranceProduct",
      "name": "Personal Liability Insurance Switzerland",
      "description": "Comprehensive personal liability insurance coverage for residents in Switzerland",
      "insuranceType": "LIABILITY",
      "offers": {
        "@type": "Offer",
        "priceCurrency": "CHF",
        "priceRange": "100-300"
      },
      "termsOfService": {
        "@type": "WebContent",
        "name": "Coverage Terms",
        "text": "Standard coverage of 5-10 million CHF with worldwide protection"
      },
      "areaServed": {
        "@type": "Country",
        "name": "Switzerland"
      },
      "audience": {
        "@type": "Audience",
        "audienceType": "Expats and residents in Switzerland"
      },
      "provider": {
        "@type": "Organization",
        "name": "Expat Savvy",
        "url": "https://expat-savvy.ch"
      },
      "additionalProperty": [
        {
          "@type": "PropertyValue",
          "name": "Coverage Amount",
          "value": "5-10 million CHF"
        },
        {
          "@type": "PropertyValue",
          "name": "Coverage Type",
          "value": "Property damage, personal injury, legal defense"
        }
      ],
      "faqPage": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Is personal liability insurance mandatory in Switzerland?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "While not legally mandatory, personal liability insurance is strongly recommended and often required by landlords when renting a property in Switzerland. It protects you against claims for damage to property or injury to others."
            }
          },
          {
            "@type": "Question",
            "name": "What does personal liability insurance cover?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Personal liability insurance typically covers damage to rental property, accidental injury to others, damage to others' property, and legal defense costs. The standard coverage in Switzerland is usually 5-10 million CHF."
            }
          }
        ]
      }
    }
  </script>

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto">
      <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
        <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
          <div class="sm:text-center lg:text-left">
            <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
              <span class="block">Personal Liability Insurance</span>
              <span class="block text-primary-600">in Switzerland</span>
            </h1>
            <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
              Essential protection for expats and residents. Get coverage for property damage, personal injury, and rental property protection with premiums starting from 100 CHF per year.
            </p>
            <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
              <div class="rounded-md shadow">
                <button
                  onclick="window.openOtherModal()"
                  class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 md:py-4 md:text-lg md:px-10"
                >
                  Get Free Quote
                </button>
              </div>
              <div class="mt-3 sm:mt-0 sm:ml-3">
                <a
                  href="#compare"
                  class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-primary-100 hover:bg-primary-200 md:py-4 md:text-lg md:px-10"
                >
                  Compare Providers
                </a>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
  </div>

  <!-- Coverage Types -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">What's Covered?</h2>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
