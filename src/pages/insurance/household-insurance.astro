import ConsultationModal from '../../components/ConsultationModal.astro';

const providers = [
  {
    name: "Mobiliar",
    strengths: "Largest household insurer, excellent local service, comprehensive coverage",
    bestFor: "Traditional coverage with strong claims handling",
    features: ["Excellent damage prevention services", "Strong regional network", "Comprehensive coverage options"]
  },
  {
    name: "AXA Switzerland", 
    strengths: "Competitive pricing, modern digital services, flexible coverage",
    bestFor: "Tech-savvy customers who value online management",
    features: ["Innovative coverage options", "Comprehensive app", "Sustainability focus"]
  },
  {
    name: "Zurich Insurance",
    strengths: "International expertise, premium service levels, comprehensive protection",
    bestFor: "High-net-worth individuals seeking premium coverage",
    features: ["Excellent customer service", "Specialized valuable items coverage", "Premium protection"]
  },
  {
    name: "Helvetia",
    strengths: "Swiss heritage, personalized service, competitive pricing",
    bestFor: "Traditional Swiss insurance with personal relationships",
    features: ["Strong regional presence", "Customizable policies", "Personal service"]
  },
  {
    name: "Allianz Suisse",
    strengths: "European backing, innovative products, digital-first approach",
    bestFor: "Modern families seeking comprehensive digital solutions",
    features: ["Smart home integration", "Flexible payment options", "Digital-first approach"]
  }
];

const coverageTypes = [
  {
    title: "Contents Insurance",
    description: "Protects your personal belongings inside your home",
    items: [
      "Furniture and appliances",
      "Electronics and devices", 
      "Clothing and personal items",
      "Books, artwork, and collectibles",
      "Tools and equipment",
      "Cash and valuables (limited coverage)"
    ],
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
    </svg>`
  },
  {
    title: "Private Liability Insurance",
    description: "Covers damages you accidentally cause to others or their property",
    items: [
      "Property damage to your rental apartment",
      "Injuries caused to third parties",
      "Damage to neighbors' property",
      "Legal defense costs",
      "Worldwide liability coverage",
      "Personal injury compensation"
    ],
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  }
];

const coverageAmounts = [
  {
    type: "Single Professional in Studio/1BR",
    contents: "CHF 30,000-50,000",
    liability: "CHF 5-10 million",
    description: "Basic protection for young professionals"
  },
  {
    type: "Couple in 2-3BR Apartment", 
    contents: "CHF 50,000-80,000",
    liability: "CHF 5-10 million",
    description: "Standard coverage for couples"
  },
  {
    type: "Family with Children in House",
    contents: "CHF 80,000-150,000+",
    liability: "CHF 10-20 million", 
    description: "Comprehensive family protection"
  },
  {
    type: "High-Net-Worth Household",
    contents: "CHF 150,000+",
    liability: "CHF 20-50 million",
    description: "Premium coverage with valuable items protection"
  }
];

const costFactors = [
  {
    category: "Location-Based Factors",
    factors: [
      "Canton and municipality risk levels",
      "Building type and construction materials", 
      "Security features and neighborhood safety",
      "Natural disaster risk zones"
    ]
  },
  {
    category: "Coverage-Based Factors",
    factors: [
      "Coverage amounts and limits",
      "Deductible choices and structures",
      "Add-on coverages selected",
      "Policy bundling options"
    ]
  },
  {
    category: "Personal Factors",
    factors: [
      "Claims history and experience",
      "Age and lifestyle considerations",
      "Multi-policy discounts available",
      "Payment method preferences"
    ]
  }
];

const faqs = [
  {
    question: "Is household insurance mandatory in Switzerland?",
    answer: "No, household insurance is not legally mandatory in Switzerland. However, it's highly recommended and used by over 95% of households. Some landlords may require it as a rental condition."
  },
  {
    question: "What's the difference between household insurance and building insurance?",
    answer: "Household insurance covers your personal belongings and liability. Building insurance covers the structure itself and is typically the landlord's responsibility for rental properties or required for homeowners."
  },
  {
    question: "Does household insurance cover water damage?",
    answer: "Yes, most household insurance policies cover water damage from sudden events like burst pipes or neighbor leaks. Gradual leaks or flooding may have different coverage terms."
  },
  {
    question: "How much coverage do I need?",
    answer: "Coverage should match the total value of your household contents. A general rule is CHF 50,000-100,000 for a 2-room apartment, increasing by about CHF 25,000 per additional room. Valuable items may need separate declaration."
  },
  {
    question: "How much does household insurance cost?",
    answer: "Annual premiums typically range from CHF 200-800, depending on coverage amount, location, and additional options chosen. Bundling with other insurance products often leads to discounts."
  },
  {
    question: "What happens if I underestimate my contents value?",
    answer: "If you're underinsured, you may face proportional reduction in claim payments. For example, if you're insured for 50% of actual value, you might only receive 50% of claim amounts."
  }
];
---

<Layout
  title="Household Insurance Switzerland: Complete Protection Guide 2025"
  description="Comprehensive household insurance in Switzerland. Protect your belongings and liability with expert guidance. Compare top providers and get the right coverage for your home."
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747375525/a-raw-hand-drawn-sketch-illustration-usi_UJN_2gFtTuuEPyrWWIDomw_8bJ_5rc6STGAo_FTeXvWfw_xhnuhc.webp"
>
  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747375525/a-raw-hand-drawn-sketch-illustration-usi_UJN_2gFtTuuEPyrWWIDomw_8bJ_5rc6STGAo_FTeXvWfw_xhnuhc.webp"
        alt="Swiss home protection"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-red-900/80 to-red-800/70"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
          <span class="block">Household Insurance</span>
          <span class="block mt-2">in <span class="text-red-300">Switzerland</span></span>
        </h1>
        <p class="mt-6 max-w-xl mx-auto text-xl text-gray-200">
          Protect your belongings and liability with comprehensive household insurance. Expert guidance for complete home protection in Switzerland.
        </p>
        <div class="mt-10">
          <button
            onclick="showConsultationModal()"
            class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-red-600 bg-white hover:bg-red-50 hover:shadow-xl transition-all duration-300 shadow-lg"
          >
            Get Expert Advice
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Why Essential Section -->
  <div class="bg-gray-50 py-16 relative">
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full" style="background-image: url('data:image/svg+xml;utf8,<svg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;><g fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;><g fill=&quot;%23dc2626&quot; fill-opacity=&quot;0.1&quot;><circle cx=&quot;30&quot; cy=&quot;30&quot; r=&quot;2&quot;/></g></g></svg>'); background-size: 60px 60px;"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Why Household Insurance is Essential in Switzerland</h2>
        <p class="text-lg text-gray-600 mb-12">
          Despite being optional, over 95% of Swiss households have household insurance, reflecting its crucial importance for financial protection in Switzerland's high-cost environment.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200">
            <div class="bg-red-100 text-red-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">High Replacement Costs</h3>
            <p class="text-gray-600">A basic apartment's contents can easily be worth CHF 50,000-100,000+ at Swiss retail prices</p>
          </div>
          
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200">
            <div class="bg-red-100 text-red-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Liability Protection</h3>
            <p class="text-gray-600">Covers damages to rental property and neighbors - costs could reach hundreds of thousands of francs</p>
          </div>
          
          <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200">
            <div class="bg-red-100 text-red-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Peace of Mind</h3>
            <p class="text-gray-600">Financial security while building your life in Switzerland, with 24/7 emergency assistance</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Coverage Types -->
  <div id="coverage" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Comprehensive Protection Coverage</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {coverageTypes.map(type => (
          <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-lg p-8 border border-red-200 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="flex items-center mb-6">
              <div class="text-red-600 mr-4">
                <Fragment set:html={type.icon} />
              </div>
              <div>
                <h3 class="text-2xl font-semibold text-gray-900">{type.title}</h3>
                <p class="text-gray-600 mt-1">{type.description}</p>
              </div>
            </div>
            <ul class="space-y-3">
              {type.items.map(item => (
                <li class="flex items-start">
                  <span class="text-red-600 mr-3 mt-0.5">•</span>
                  <span class="text-gray-700">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Coverage Amounts Guide -->
  <div class="bg-gray-50 py-16 relative">
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full" style="background-image: url('data:image/svg+xml;utf8,<svg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;><g fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;><g fill=&quot;%23dc2626&quot; fill-opacity=&quot;0.1&quot;><circle cx=&quot;30&quot; cy=&quot;30&quot; r=&quot;2&quot;/></g></g></svg>'); background-size: 60px 60px;"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">How Much Coverage Do You Need?</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {coverageAmounts.map(amount => (
            <div class="bg-white rounded-lg p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300 hover:border-red-200">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">{amount.type}</h3>
              <p class="text-gray-600 mb-4">{amount.description}</p>
              <div class="space-y-2">
                <div class="flex justify-between items-center">
                  <span class="text-gray-700">Contents Coverage:</span>
                  <span class="font-semibold text-red-600">{amount.contents}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-700">Liability Coverage:</span>
                  <span class="font-semibold text-red-600">{amount.liability}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-8 p-6 bg-red-50 border border-red-200 rounded-lg shadow-sm">
          <h3 class="text-lg font-semibold text-red-800 mb-2">💡 Coverage Calculation Tip</h3>
          <p class="text-red-700">
            To calculate your contents value, do a room-by-room assessment. Living room (CHF 15,000-30,000), kitchen (CHF 8,000-15,000), bedroom (CHF 10,000-20,000), plus special items like professional equipment or valuable collections.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Top Providers -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Top Household Insurance Providers in Switzerland</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {providers.map(provider => (
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-lg p-6 border border-gray-200 hover:border-red-300 transition-all shadow-lg hover:shadow-xl duration-300">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{provider.name}</h3>
            <p class="text-gray-600 mb-3">{provider.strengths}</p>
            <div class="mb-4">
              <span class="text-sm font-medium text-red-700">Best For: </span>
              <span class="text-sm text-gray-700">{provider.bestFor}</span>
            </div>
            <div>
              <h4 class="text-sm font-medium text-gray-900 mb-2">Key Features:</h4>
              <ul class="space-y-1">
                {provider.features.map(feature => (
                  <li class="flex items-center text-sm text-gray-600">
                    <span class="text-red-500 mr-2">•</span>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Cost Factors -->
  <div class="bg-gray-50 py-16 relative">
    <div class="absolute inset-0 opacity-5">
      <div class="h-full w-full" style="background-image: url('data:image/svg+xml;utf8,<svg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;><g fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;><g fill=&quot;%23dc2626&quot; fill-opacity=&quot;0.1&quot;><circle cx=&quot;30&quot; cy=&quot;30&quot; r=&quot;2&quot;/></g></g></svg>'); background-size: 60px 60px;"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Factors Affecting Your Premiums</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {costFactors.map(category => (
            <div class="bg-white rounded-lg p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">{category.category}</h3>
              <ul class="space-y-2">
                {category.factors.map(factor => (
                  <li class="flex items-start text-sm text-gray-600">
                    <span class="text-red-500 mr-2 mt-0.5">•</span>
                    {factor}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        
        <div class="mt-8 text-center">
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 shadow-sm">
            <h3 class="text-lg font-semibold text-red-900 mb-2">Typical Premium Ranges</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div>
                <span class="font-medium">Studio/1BR apartment:</span> CHF 200-400 annually
              </div>
              <div>
                <span class="font-medium">2-3BR apartment:</span> CHF 300-600 annually
              </div>
              <div>
                <span class="font-medium">Single family house:</span> CHF 400-800 annually
              </div>
              <div>
                <span class="font-medium">Luxury property:</span> CHF 800-1,500+ annually
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
        
        <div class="space-y-6">
          {faqs.map(faq => (
            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:border-red-200">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">{faq.question}</h3>
              <p class="text-gray-700">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Related Insurance -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Complete Your Swiss Insurance Protection</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <a href="/blog/best-health-insurance-switzerland" class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-blue-500 transition-all hover:shadow-lg group">
            <div class="flex items-center mb-3">
              <div class="bg-blue-100 text-blue-600 p-2 rounded-lg mr-3">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">Health Insurance (Mandatory)</h3>
            </div>
            <p class="text-gray-600">Required by law within 3 months of arrival - choose the best coverage for your needs</p>
          </a>
          
          <a href="/insurance/legal-protection-insurance" class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-purple-500 transition-all hover:shadow-lg group">
