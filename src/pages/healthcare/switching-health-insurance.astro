  canonicalUrl: 'https://expat-savvy.ch/healthcare/switching-health-insurance/'
};
---

<Layout
  title={meta.title}
  description={meta.description}
  canonicalURLProp={meta.canonicalUrl}
>
  <!-- Add HowTo Schema for switching health insurance -->
  <HowToSchema
    name="How to Switch Health Insurance in Switzerland"
    description="A comprehensive guide to changing your health insurance provider in Switzerland, covering deadlines, requirements, and best practices."
    totalTime="PT3H"
    steps={[
      {
        name: "Check the deadlines and notice periods",
        text: "Verify if you're within the window for basic insurance cancellation (by November 30 for January 1 changes) or supplementary insurance (check your policy for specific notice periods, typically 3-6 months)."
      },
      {
        name: "Research and compare insurance providers",
        text: "Compare premiums, service quality, and coverage options between different insurance companies to find the best fit for your needs and budget."
      },
      {
        name: "Get quotes from selected insurers",
        text: "Contact shortlisted insurance companies to receive personalized quotes based on your profile and preferences."
      },
      {
        name: "Submit formal cancellation to current insurer",
        text: "Send a registered letter (Einschreiben/recommandé) to your current insurance company before the deadline, clearly stating your intention to terminate the policy."
      },
      {
        name: "Apply for new insurance",
        text: "Complete and submit an application form to your chosen new insurance provider, including all required personal documentation."
      },
      {
        name: "Wait for confirmation from both insurers",
        text: "Receive confirmation of cancellation from your old insurer and acceptance from your new provider before considering the switch complete."
      },
      {
        name: "Update payment information",
        text: "Set up new payment arrangements with your new insurance provider and confirm cancellation of any automatic payments to your previous insurer."
      }
    ]}
    tools={[
      {
        name: "Comparison website or broker service",
        description: "A tool to compare multiple insurance options quickly"
      },
      {
        name: "Registered mail service",
        description: "For sending formal cancellation letters with proof of delivery"
      }
    ]}
    supply={[
      "Personal identification documents",
      "Insurance policy details",
      "Swiss residence permit",
      "Bank account information"
    ]}
  />

  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gray-900">
    <div class="absolute inset-0">
