---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';
import ExpandableFormBanner from '../../../components/ExpandableFormBanner.astro';

const tableOfContents = [
  { id: "overview", title: "Overview & Key Features" },
  { id: "premiums", title: "Premium Structure" },
  { id: "basic-insurance", title: "Basic Insurance Models" },
  { id: "supplementary", title: "Supplementary Insurance" },
  { id: "digital", title: "Digital Services" },
  { id: "expats", title: "For Expats" },
  { id: "apply", title: "How to Apply" },
  { id: "faqs", title: "FAQs" }
];

const features = [
  {
    title: "Basic Insurance Models",
    description: "Multiple models including traditional, myDoc Family Doctor, and HMO options with savings up to 21%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Supplementary Insurance",
    description: "Comprehensive additional coverage including DIVERSA, NATURA, and Dental Care Insurance",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`
  },
  {
    title: "Additional Services",
    description: "Holiday and travel insurance, daily allowance insurance, and various life insurance options",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "DIVERSA",
    description: "Perfect for families with attractive premiums for children",
    benefits: [
      "Inpatient and outpatient treatments abroad",
      "Search and rescue operations",
      "Glasses and contacts coverage",
      "Non-prescription medicines",
      "Dental corrections"
    ]
  },
  {
    name: "NATURA",
    description: "Alternative medicine and preventative health coverage",
    benefits: [
      "130 alternative medicine methods",
      "Preventative health care",
      "Health promotion activities",
      "Holistic approach to wellness"
    ]
  },
  {
    name: "Dental Care Insurance",
    description: "Comprehensive dental coverage options",
    benefits: [
      "Up to 75% coverage",
      "Regular check-ups",
      "Dental treatments",
      "Orthodontics coverage"
    ]
  },
  {
    name: "Additional Coverage",
    description: "Extra protection options",
    benefits: [
      "Accident insurance",
      "Holiday and travel insurance",
      "Daily allowance insurance",
      "Life insurance options"
    ]
  }
];

const premiumComparison = {
  ageGroups: [
    {
      group: "Adults (26+)",
      concordia: "From CHF 275",
      marketAvg: "CHF 320",
      savings: "Up to 14%"
    },
    {
      group: "Young Adults (19-25)",
      concordia: "From CHF 220",
      marketAvg: "CHF 240",
      savings: "Up to 8%"
    },
    {
      group: "Children (0-18)",
      concordia: "From CHF 85",
      marketAvg: "CHF 100",
      savings: "Up to 15%"
    }
  ]
};

const faqs = [
  {
    question: "What makes Concordia different from other Swiss insurers?",
    answer: "Concordia stands out for their family-friendly insurance solutions, strong focus on preventive care, and comprehensive supplementary insurance options. They offer attractive premiums for children and a wide range of alternative medicine coverage through their NATURA plan."
  },
  {
    question: "How do I get a quote from Concordia?",
    answer: "You can get a quote from Concordia through their online calculator, by scheduling a free consultation with our experts, or visiting a Concordia office. We recommend comparing multiple offers to find the best coverage for your needs."
  },
  {
    question: "What supplementary insurance options does Concordia offer?",
    answer: "Concordia offers several supplementary plans including DIVERSA for families, NATURA for alternative medicine, comprehensive dental coverage, and various additional protection options like accident and travel insurance."
  },
  {
    question: "Does Concordia offer English-speaking customer service?",
    answer: "Yes, Concordia provides multilingual customer service, including English support, through their customer service centers and digital platforms."
  },
  {
    question: "How can I submit claims to Concordia?",
    answer: "Concordia offers multiple ways to submit claims: through their mobile app, online portal, or by mail. The digital options allow for quick submission by simply photographing your medical bills and uploading them directly."
  }
];

---

<Layout
  title="CONCORDIA Health Insurance Switzerland | 2025 Expert Guide for Expats"
  description="Compare CONCORDIA health insurance plans in Switzerland. Learn about their family-friendly solutions, preventive care focus, and comprehensive coverage options. Updated for 2025."
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "InsuranceProduct",
      "name": "CONCORDIA Health Insurance Switzerland",
      "description": "Comprehensive health insurance coverage from CONCORDIA, one of Switzerland's leading providers",
      "url": "https://expat-savvy.ch/healthcare/all-insurances/concordia",
      "provider": {
        "@type": "Organization",
        "name": "CONCORDIA",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Bundesplatz 15",
          "addressLocality": "Luzern",
          "postalCode": "6002",
          "addressCountry": "CH"
        }
      },
      "areaServed": "CH",
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Insurance Products",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Basic Insurance",
              "description": "Mandatory health insurance coverage"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Supplementary Insurance",
              "description": "Additional coverage including DIVERSA, NATURA, and dental coverage"
            }
          }
        ]
      }
    }
  </script>

  <!-- Last Updated Banner -->
  <div class="bg-primary-50 py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-sm text-primary-700 text-center">
        Last Updated: January 15, 2025
      </p>
    </div>
  </div>

  <!-- Table of Contents -->
  <div class="bg-white sticky top-0 z-10 border-b shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-4 overflow-x-auto py-4">
        {tableOfContents.map(item => (
          <a 
            href={`#${item.id}`}
            class="text-sm text-gray-600 hover:text-primary-600 whitespace-nowrap"
          >
            {item.title}
          </a>
        ))}
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">CONCORDIA Health Insurance Switzerland</span>
          <span class="block text-primary-600">2025 Expert Guide</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          A Lucerne-based health and accident insurance provider with a history dating back to 1914, serving over 632,000 policyholders with comprehensive insurance solutions.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
          <button
            onclick="showConsultationModal()"
            class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            Get Expert Advice
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
          <a
            href="#compare"
            class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            Compare Options
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About CONCORDIA</h2>
        <p>
          CONCORDIA is a Lucerne based health and accident insurance provider with a history dating back to 1914. It has roughly 632,000 policy holders in their basic compulsory insurance model. 2018 revenues from premiums amounted to 2.8 billion Swiss francs.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with CONCORDIA</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Multilingual Support</span>
                <p class="text-sm text-gray-600">Customer service in multiple languages</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital Services</span>
                <p class="text-sm text-gray-600">Modern online platform and app</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Family-Friendly Options</span>
                <p class="text-sm text-gray-600">Special plans and discounts for families</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Comprehensive Coverage</span>
                <p class="text-sm text-gray-600">Wide range of insurance options</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="CONCORDIA" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Premium Structure -->
  <div id="premiums" class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Premium Structure & Cost Advantages</h2>
        
        <!-- Premium Comparison Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Age Group</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Concordia Premium</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Market Average</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Potential Savings</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {premiumComparison.ageGroups.map(group => (
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{group.group}</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{group.concordia}</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{group.marketAvg}</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-primary-600 font-medium">{group.savings}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <!-- Sticky CTA -->
  <div class="fixed bottom-0 inset-x-0 pb-2 sm:pb-5 z-50">
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
      <div class="p-2 rounded-lg bg-primary-600 shadow-lg sm:p-3">
        <div class="flex items-center justify-between flex-wrap">
          <div class="w-0 flex-1 flex items-center">
            <span class="flex p-2 rounded-lg bg-primary-800">
              <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
              </svg>
            </span>
            <p class="ml-3 font-medium text-white truncate">
              <span class="md:hidden">Get your free quote today!</span>
              <span class="hidden md:inline">Ready to get started? Get your personalized insurance quote now!</span>
            </p>
          </div>
          <div class="order-3 mt-2 flex-shrink-0 w-full sm:order-2 sm:mt-0 sm:w-auto">
            <button
              onclick="showConsultationModal()"
              class="flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-primary-600 bg-white hover:bg-primary-50"
            >
              Get Free Quote
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>