          {testimonials.map(testimonial => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <div class="flex items-center mb-4">
                <img 
                  src={testimonial.image} 
                  alt={testimonial.author}
                  class="h-12 w-12 rounded-full object-cover"
