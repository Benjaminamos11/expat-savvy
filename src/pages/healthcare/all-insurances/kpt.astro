---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';
import ExpandableFormBanner from '../../../components/ExpandableFormBanner.astro';

const features = [
  {
    title: "Basic Insurance",
    description: "Multiple models including KPTwin.easy, KPTwin.doc, KPTwin.plus, and KPTwin.win with savings up to 20%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Digital Innovation",
    description: "Innovative mobile app for claim submissions with photo functionality and chat support",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  },
  {
    title: "Customer Support",
    description: "Chat function offers customer care on the go with personalized assistance",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
    </svg>`
  }
];

const basicInsuranceModels = [
  {
    name: "KPTwin.easy",
    description: "Up to 20% premium savings with Medi24 hotline as first point of contact",
    savings: "20%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`
  },
  {
    name: "KPTwin.doc",
    description: "Up to 15% savings with designated family doctor and free health consultations",
    savings: "15%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  },
  {
    name: "KPTwin.plus",
    description: "Up to 17% savings with HMO group practice as first point of contact",
    savings: "17%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  },
  {
    name: "KPTwin.win",
    description: "Up to 8% savings with free choice of doctor and Medi24 consultation",
    savings: "8%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "Comfort",
    description: "Advanced prevention and alternative medicine coverage",
    benefits: [
      "Prevention services",
      "Alternative medicine",
      "Vision coverage",
      "Non-prescription medicines"
    ]
  },
  {
    name: "ActivePlus",
    description: "Sports and wellness-focused coverage",
    benefits: [
      "Up to 600 CHF annually",
      "Gym memberships",
      "Nutrition counseling",
      "Yoga classes"
    ]
  },
  {
    name: "Natura",
    description: "Comprehensive alternative medicine coverage",
    benefits: [
      "90% treatment costs",
      "Up to 3500 CHF annually",
      "Alternative therapies",
      "Natural medicine"
    ]
  },
  {
    name: "Dental Insurance",
    description: "Flexible dental coverage options",
    benefits: [
      "Up to 75% cost coverage",
      "1500 CHF per year",
      "Orthodontics coverage",
      "Preventive care"
    ]
  }
];

const faqs = [
  {
    question: "What makes KPT different from other Swiss health insurers?",
    answer: "KPT stands out with its innovative digital services, including a user-friendly mobile app for claims submission and chat support. They also offer some of the highest potential premium savings (up to 20%) through their alternative insurance models."
  },
  {
    question: "How much can I save with KPT's alternative insurance models?",
    answer: "KPT offers several models with significant savings: KPTwin.easy (up to 20%), KPTwin.plus (up to 17%), KPTwin.doc (up to 15%), and KPTwin.win (up to 8%). The exact savings depend on your chosen model and location."
  },
  {
    question: "What digital services does KPT offer?",
    answer: "KPT provides a modern mobile app that allows you to submit claims by photo, chat with customer service, manage your policy, and access digital insurance cards. Their digital platform makes insurance management simple and efficient."
  },
  {
    question: "Does KPT offer English-speaking customer service?",
    answer: "Yes, KPT provides multilingual customer service, including English support, through their chat function and customer service centers."
  },
  {
    question: "What supplementary insurance options does KPT offer?",
    answer: "KPT offers various supplementary insurance plans including Comfort for prevention and alternative medicine, ActivePlus for sports and wellness, Natura for comprehensive alternative medicine, and dental insurance options."
  }
];
---

<Layout
  title="KPT Health Insurance Switzerland | Expert Guide 2025"
  description="Compare KPT health insurance plans in Switzerland. Learn about their digital-first approach, competitive rates, and comprehensive coverage options. Updated for 2025."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
{
  "@context": "https://schema.org",
  "@type": "InsuranceAgency",
  "name": "KPT Insurance",
  "description": "Leading Swiss health insurance provider known for digital innovation and competitive premiums.",
  "url": "https://expat-savvy.ch/healthcare/all-insurances/kpt",
  "logo": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740508835/kpt-logo_fznr7i.png",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Wankdorfallee 3",
    "addressLocality": "Bern",
    "postalCode": "3014",
    "addressCountry": "CH"
  },
  "areaServed": "CH",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Insurance Products",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Basic Insurance",
          "description": "Multiple models including KPTwin.easy, KPTwin.doc, and KPTwin.plus"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Supplementary Insurance",
          "description": "Additional coverage including Comfort, ActivePlus, and Natura plans"
        }
      }
    ]
  },
  "faqPage": {
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How do I get a quote from KPT?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "You can get a quote from KPT through their online premium calculator, by booking a free consultation with our experts, or contacting KPT directly. We recommend comparing multiple offers to find the best coverage for your needs."
        }
      },
      {
        "@type": "Question",
        "name": "What makes KPT different from other Swiss insurers?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "KPT stands out with its innovative digital services, including a user-friendly mobile app for claims submission and chat support. They also offer some of the highest potential premium savings (up to 20%) through their alternative insurance models."
        }
      },
      {
        "@type": "Question",
        "name": "What digital services does KPT offer?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "KPT provides a modern mobile app that allows you to submit claims by photo, chat with customer service, manage your policy, and access digital insurance cards. Their digital platform makes insurance management simple and efficient."
        }
      }
    ]
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://expat-savvy.ch"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Insurance Providers",
        "item": "https://expat-savvy.ch/healthcare/all-insurances"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "KPT",
        "item": "https://expat-savvy.ch/healthcare/all-insurances/kpt"
      }
    ]
  }
}
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <img 
          src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740508835/kpt-logo_fznr7i.png" 
          alt="KPT Logo" 
          class="h-24 mx-auto mb-8"
          width="240"
          height="96"
        />
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">KPT Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Founded in 1890, KPT serves over 428,000 policyholders with annual revenues of 1.77 billion Swiss francs, offering innovative digital solutions and comprehensive coverage options.
        </p>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About KPT</h2>
        <p>
          KPT has been providing health insurance solutions in Switzerland since 1890. With over 428,000 policyholders and annual revenues of 1.77 billion Swiss francs, KPT has established itself as a leader in digital innovation and customer service excellence.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with KPT</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital-First Approach</span>
                <p class="text-sm text-gray-600">Modern app and online services</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">English Support</span>
                <p class="text-sm text-gray-600">Multilingual customer service</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">High Savings Potential</span>
                <p class="text-sm text-gray-600">Up to 20% premium reduction</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Flexible Models</span>
                <p class="text-sm text-gray-600">Multiple insurance options</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="KPT" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Basic Insurance Models -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Basic Insurance Models</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {basicInsuranceModels.map(model => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={model.icon} />
            </div>
            <div class="inline-block px-3 py-1 mb-3 text-sm font-semibold text-primary-700 bg-primary-100 rounded-full">
              Save up to {model.savings}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{model.name}</h3>
            <p class="text-gray-600">{model.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact KPT</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">KPT Krankenkasse AG</p>
          <p class="text-lg text-gray-600">Wankdorfallee 3</p>
          <p class="text-lg text-gray-600">3014 Bern</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>