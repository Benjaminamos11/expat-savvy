---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';
import ExpandableFormBanner from '../../../components/ExpandableFormBanner.astro';

const features = [
  {
    title: "Basic Insurance",
    description: "Multiple models including standard, family doctor, and telemedicine options",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Supplementary Insurance",
    description: "Comprehensive coverage options with Ambulant, Komplementär, and specialized plans",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`
  },
  {
    title: "Digital Services",
    description: "Modern online platform for policy management and claims submission",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "Ambulant I-III",
    description: "Outpatient supplementary coverage",
    benefits: [
      "Vision care coverage",
      "Medical aids",
      "Over-the-counter medicine",
      "Health check-ups",
      "Preventative vaccinations"
    ]
  },
  {
    name: "Komplementär",
    description: "Alternative medicine coverage",
    benefits: [
      "90% cost coverage",
      "Up to 10,000 CHF annually",
      "Alternative treatments",
      "Complementary medicine",
      "Holistic approach"
    ]
  },
  {
    name: "Basic Bundle",
    description: "Popular supplementary package",
    benefits: [
      "Ambulant II coverage",
      "Komplementär II coverage",
      "Hospital insurance",
      "Vacanza travel insurance",
      "Comprehensive protection"
    ]
  },
  {
    name: "Dental Insurance",
    description: "Comprehensive dental coverage",
    benefits: [
      "75% cost coverage",
      "Up to 5000 CHF annually",
      "Ten coverage levels",
      "Dental treatments",
      "Flexible options"
    ]
  }
];

const hospitalPlans = [
  {
    name: "General",
    description: "Basic hospital coverage throughout Switzerland",
    features: [
      "Shared room accommodation",
      "Free hospital choice",
      "Vacanza travel insurance",
      "Rooming-in after childbirth",
      "Spa coverage"
    ]
  },
  {
    name: "Spital Flex Semi-Private",
    description: "Enhanced hospital comfort with twin room",
    features: [
      "Two-bed room",
      "Free doctor choice",
      "Outpatient birth allowance",
      "Enhanced comfort",
      "Flexible options"
    ]
  },
  {
    name: "Spital Flex Private",
    description: "Maximum privacy and comfort",
    features: [
      "Single room",
      "Private ward",
      "Premium service",
      "Maximum privacy",
      "Complete flexibility"
    ]
  }
];

const faqs = [
  {
    question: "What makes Visana different from other Swiss health insurers?",
    answer: "Visana stands out with its comprehensive coverage options, digital services, and strong focus on preventive care. They offer flexible insurance models and a wide range of supplementary insurance options to meet different needs."
  },
  {
    question: "What digital services does Visana offer?",
    answer: "Visana provides a modern digital platform including a user-friendly mobile app for policy management, online claims submission, digital insurance cards, and 24/7 customer service access."
  },
  {
    question: "Does Visana offer English-speaking customer service?",
    answer: "Yes, Visana provides multilingual customer service, including English support, through their customer service centers and digital platforms."
  },
  {
    question: "What supplementary insurance options does Visana offer?",
    answer: "Visana offers various supplementary plans including Ambulant I-III for outpatient care, Komplementär for alternative medicine, Basic Bundle for comprehensive coverage, and dental insurance options."
  },
  {
    question: "How much can I save with Visana's alternative insurance models?",
    answer: "Visana offers several cost-saving models with premium reductions up to 15-20%, depending on the chosen model and your location."
  }
];
---

<Layout
  title="Visana Health Insurance Switzerland | Expert Guide 2025"
  description="Compare Visana health insurance plans in Switzerland. Learn about their flexible insurance models, prevention focus, and comprehensive coverage options. Updated for 2025."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "InsuranceAgency",
      "name": "Visana Insurance",
      "description": "Leading Swiss health insurance provider known for flexible coverage options and prevention focus.",
      "url": "https://expat-savvy.ch/healthcare/all-insurances/visana",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Weltpoststrasse 19-21",
        "addressLocality": "Bern",
        "postalCode": "3015",
        "addressCountry": "CH"
      },
      "areaServed": "CH",
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Insurance Products",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Basic Insurance",
              "description": "Multiple models including standard, family doctor, and telemedicine options"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Supplementary Insurance",
              "description": "Additional coverage including Ambulant, Komplementär, and specialized plans"
            }
          }
        ]
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://expat-savvy.ch"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Insurance Providers",
            "item": "https://expat-savvy.ch/healthcare/all-insurances"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Visana",
            "item": "https://expat-savvy.ch/healthcare/all-insurances/visana"
          }
        ]
      }
    }
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Visana Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Created from the 1996 merger of KKB, Grütli and Evidenzia, Visana serves 698,000 policyholders with innovative health solutions.
        </p>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About Visana</h2>
        <p>
          Visana has grown to become one of Switzerland's trusted health insurance providers, serving over 698,000 policyholders. With annual revenues of 3.3 billion Swiss francs, Visana combines traditional Swiss quality with modern digital innovation to provide comprehensive insurance solutions.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with Visana</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Multilingual Support</span>
                <p class="text-sm text-gray-600">Customer service in multiple languages</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital Services</span>
                <p class="text-sm text-gray-600">Modern app and online platform</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Flexible Models</span>
                <p class="text-sm text-gray-600">Multiple insurance options</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Comprehensive Coverage</span>
                <p class="text-sm text-gray-600">Wide range of insurance options</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="Visana" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Hospital Insurance -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Hospital Insurance Options</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {hospitalPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.features.map(feature => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Visana</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">Visana AG</p>
          <p class="text-lg text-gray-600">Weltpoststrasse 19-21</p>
          <p class="text-lg text-gray-600">3015 Bern</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>