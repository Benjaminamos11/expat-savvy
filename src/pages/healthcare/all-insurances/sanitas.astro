const supplementaryPlans = [
  {
    name: "Jump",
    description: "Supplementary insurance for young adults",
    benefits: [
      "Alternative medicine",
      "Vision care",
      "Fitness coverage",
      "Preventive measures",
      "International emergency coverage"
    ]
  },
  {
    name: "Classic",
    description: "Comprehensive supplementary coverage",
    benefits: [
      "Orthodontics",
      "Psychotherapy",
      "Extended coverage",
      "Alternative treatments",
      "Additional benefits"
    ]
  },
  {
    name: "Family",
    description: "Family-focused supplementary plan",
    benefits: [
      "Shared service account",
      "Flexible limits per member",
      "Family-oriented coverage",
      "Comprehensive protection",
      "Customizable options"
    ]
  },
  {
    name: "Medical Private",
    description: "Premium worldwide coverage",
    benefits: [
      "Worldwide doctor choice",
      "Private consultations",
      "Non-KVG billing",
      "Premium service",
      "Global coverage"
    ]
  }
];

const faqs = [
  {
    question: "What makes Sanitas different from other Swiss health insurers?",
    answer: "Sanitas stands out with its comprehensive coverage options, digital innovation, and strong focus on customer service. As one of Switzerland's top 10 health insurers, they serve over 835,000 policyholders and offer flexible insurance models with premium discounts up to 15%."
  },
  {
    question: "What digital services does Sanitas offer?",
    answer: "Sanitas provides a modern digital platform including a user-friendly mobile app for policy management, online claims submission, digital insurance cards, and 24/7 customer service access."
  },
  {
    question: "Does Sanitas offer English-speaking customer service?",
    answer: "Yes, Sanitas provides multilingual customer service, including English support, through their customer service centers and digital platforms."
  },
  {
    question: "What supplementary insurance options does Sanitas offer?",
    answer: "Sanitas offers various supplementary plans including Jump for young adults, Classic for comprehensive coverage, Family for family-oriented protection, and Medical Private for premium worldwide coverage."
  },
  {
    question: "How much can I save with Sanitas's alternative insurance models?",
    answer: "Sanitas offers several cost-saving models: CallMed (up to 15% savings), NetMed (up to 10% savings), and MedCare (up to 7% savings). The exact savings depend on your chosen model and location."
  }
];
---

<Layout
  title="Sanitas Health Insurance Switzerland | Expert Guide 2025"
  description="Compare Sanitas health insurance plans in Switzerland. Learn about their modern insurance solutions, digital services, and comprehensive coverage options. Updated for 2025."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "InsuranceAgency",
      "name": "Sanitas Insurance",
      "description": "Leading Swiss health insurance provider serving over 835,000 policyholders with comprehensive insurance solutions.",
      "url": "https://expat-savvy.ch/healthcare/all-insurances/sanitas",
      "logo": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740406933/sanitas_logo_yvxvxr.png",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Jägergasse 3",
        "addressLocality": "Zürich",
        "postalCode": "8021",
        "addressCountry": "CH"
      },
      "areaServed": "CH",
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Insurance Products",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Basic Insurance",
              "description": "Multiple models including Standard, MedCare, NetMed, and CallMed"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Supplementary Insurance",
              "description": "Additional coverage including Jump, Classic, Family, and Medical Private plans"
            }
          }
        ]
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://expat-savvy.ch"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Insurance Providers",
            "item": "https://expat-savvy.ch/healthcare/all-insurances"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Sanitas",
            "item": "https://expat-savvy.ch/healthcare/all-insurances/sanitas"
          }
        ]
      }
    }
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Sanitas Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          One of Switzerland's top 10 health insurers, serving over 835,000 policyholders with annual revenues of 2.9 billion Swiss francs.
        </p>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About Sanitas</h2>
        <p>
          Sanitas has established itself as one of Switzerland's leading health insurance providers, serving over 835,000 policyholders. With annual premium revenues of 2.9 billion Swiss francs, Sanitas combines traditional Swiss quality with modern digital innovation to provide comprehensive insurance solutions.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with Sanitas</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Multilingual Support</span>
                <p class="text-sm text-gray-600">Customer service in multiple languages</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital Services</span>
                <p class="text-sm text-gray-600">Modern app and online platform</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">International Coverage</span>
                <p class="text-sm text-gray-600">Global protection options</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Flexible Models</span>
                <p class="text-sm text-gray-600">Multiple insurance options</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="Sanitas" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Basic Insurance Models -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Basic Insurance Models</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {basicInsuranceModels.map(model => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={model.icon} />
            </div>
            <div class="inline-block px-3 py-1 mb-3 text-sm font-semibold text-primary-700 bg-primary-100 rounded-full">
              Save up to {model.discount}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{model.name}</h3>
            <p class="text-gray-600">{model.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Sanitas</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">Sanitas AG</p>
          <p class="text-lg text-gray-600">Jägergasse 3</p>
          <p class="text-lg text-gray-600">8021 Zürich</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>