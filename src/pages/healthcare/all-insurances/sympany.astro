---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';
import ExpandableFormBanner from '../../../components/ExpandableFormBanner.astro';

const features = [
  {
    title: "Basic Insurance",
    description: "Multiple models including casamed family doctor, HMO, and callmed 24 with savings up to 18%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Digital Services",
    description: "Modern online platform and app for easy policy management and claims submission",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  },
  {
    title: "Customer Focus",
    description: "Personal service and support with multilingual customer care team",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  }
];

const basicInsuranceModels = [
  {
    name: "casamed family doctor",
    description: "Family doctor model with coordinated care and significant premium savings",
    savings: "Up to 15%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  },
  {
    name: "HMO",
    description: "Healthcare through selected group practices and health centers",
    savings: "Up to 18%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  },
  {
    name: "callmed 24",
    description: "Telemedicine model with 24/7 medical consultation hotline",
    savings: "Up to 16%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "plus",
    description: "Comprehensive outpatient coverage",
    benefits: [
      "Alternative medicine",
      "Preventive care",
      "Vision coverage",
      "Fitness contributions",
      "Travel insurance"
    ]
  },
  {
    name: "hospita",
    description: "Enhanced hospital coverage",
    benefits: [
      "Free hospital choice",
      "Semi-private ward",
      "Private ward options",
      "Accommodation comfort",
      "Extended services"
    ]
  },
  {
    name: "dental",
    description: "Comprehensive dental coverage",
    benefits: [
      "Regular check-ups",
      "Dental treatments",
      "Orthodontics",
      "Cost coverage up to 75%",
      "Preventive care"
    ]
  },
  {
    name: "premium",
    description: "Premium protection package",
    benefits: [
      "Top-tier coverage",
      "Worldwide protection",
      "Premium services",
      "Exclusive benefits",
      "VIP treatment"
    ]
  }
];

const faqs = [
  {
    question: "What makes Sympany different from other Swiss health insurers?",
    answer: "Sympany distinguishes itself through its customer-centric approach, competitive premiums, and comprehensive digital services. They offer flexible insurance models with significant savings potential and focus on providing clear, transparent insurance solutions."
  },
  {
    question: "What digital services does Sympany offer?",
    answer: "Sympany provides a comprehensive digital platform including a user-friendly mobile app for policy management, online claims submission, digital insurance cards, and 24/7 customer service access."
  },
  {
    question: "Does Sympany offer English-speaking customer service?",
    answer: "Yes, Sympany provides multilingual customer service, including English support, through their customer service centers and digital platforms."
  },
  {
    question: "What supplementary insurance options does Sympany offer?",
    answer: "Sympany offers various supplementary plans including plus for outpatient care, hospita for enhanced hospital coverage, comprehensive dental insurance, and premium packages for exclusive benefits."
  },
  {
    question: "How much can I save with Sympany's alternative insurance models?",
    answer: "Sympany offers several cost-saving models: HMO (up to 18% savings), callmed 24 (up to 16% savings), and casamed family doctor (up to 15% savings). The exact savings depend on your chosen model and location."
  }
];
---

<Layout
  title="Sympany Health Insurance Switzerland | Expert Guide 2025"
  description="Compare Sympany health insurance plans in Switzerland. Learn about their customer-focused approach, digital services, and comprehensive coverage options. Updated for 2025."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
{
  "@context": "https://schema.org",
  "@type": "InsuranceAgency",
  "name": "Sympany Insurance",
  "description": "Leading Swiss health insurance provider known for customer-centric solutions and digital innovation.",
  "url": "https://expat-savvy.ch/healthcare/all-insurances/sympany",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Peter Merian-Weg 4",
    "addressLocality": "Basel",
    "postalCode": "4002",
    "addressCountry": "CH"
  },
  "areaServed": "CH",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Insurance Products",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Basic Insurance",
          "description": "Multiple models including casamed family doctor, HMO, and callmed 24"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Supplementary Insurance",
          "description": "Additional coverage including plus, hospita, dental, and premium plans"
        }
      }
    ]
  },
  "faqPage": {
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How do I get a quote from Sympany?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "You can get a quote from Sympany through their online premium calculator, by scheduling a free consultation with our experts, or visiting a Sympany service center. We recommend comparing multiple offers to find the best coverage for your needs."
        }
      },
      {
        "@type": "Question",
        "name": "What makes Sympany different from other Swiss insurers?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Sympany distinguishes itself through its customer-centric approach, competitive premiums, and comprehensive digital services. They offer flexible insurance models with significant savings potential and focus on providing clear, transparent insurance solutions."
        }
      },
      {
        "@type": "Question",
        "name": "What supplementary insurance options does Sympany offer?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Sympany offers various supplementary plans including plus for outpatient care, hospita for enhanced hospital coverage, comprehensive dental insurance, and premium packages for exclusive benefits."
        }
      }
    ]
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://expat-savvy.ch"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Insurance Providers",
        "item": "https://expat-savvy.ch/healthcare/all-insurances"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Sympany",
        "item": "https://expat-savvy.ch/healthcare/all-insurances/sympany"
      }
    ]
  }
}
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Sympany Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          A customer-focused Swiss health insurer offering innovative insurance solutions with competitive premiums and comprehensive digital services.
        </p>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About Sympany</h2>
        <p>
          Sympany has established itself as a trusted health insurance provider in Switzerland, focusing on customer satisfaction and innovative insurance solutions. Their commitment to transparency and fair pricing makes them an attractive choice for both Swiss residents and expats.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with Sympany</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital-First Approach</span>
                <p class="text-sm text-gray-600">Modern app and online services</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">English Support</span>
                <p class="text-sm text-gray-600">Multilingual customer service</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Flexible Models</span>
                <p class="text-sm text-gray-600">Multiple insurance options</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Competitive Premiums</span>
                <p class="text-sm text-gray-600">Attractive pricing options</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="Sympany" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Basic Insurance Models -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Basic Insurance Models</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {basicInsuranceModels.map(model => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={model.icon} />
            </div>
            <div class="inline-block px-3 py-1 mb-3 text-sm font-semibold text-primary-700 bg-primary-100 rounded-full">
              Save {model.savings}
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{model.name}</h3>
            <p class="text-gray-600">{model.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Sympany</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">Sympany</p>
          <p class="text-lg text-gray-600">Peter Merian-Weg 4</p>
          <p class="text-lg text-gray-600">4002 Basel</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>