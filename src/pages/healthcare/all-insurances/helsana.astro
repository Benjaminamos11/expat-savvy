---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';
import ExpandableFormBanner from '../../../components/ExpandableFormBanner.astro';

const features = [
  {
    title: "Basic Insurance",
    description: "Multiple models including BASIS, BeneFit PLUS, and Telmed options with up to 15% savings",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Supplementary Insurance",
    description: "Wide range of supplementary plans including TOP, COMPLETA, PRIMEO, and specialized dental coverage",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`
  },
  {
    title: "Nationwide Coverage",
    description: "60+ local branches throughout Switzerland for personalized service",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "TOP",
    description: "Outpatient insurance for international coverage",
    benefits: [
      "International coverage",
      "Vision care",
      "Non-prescription drugs",
      "Psychotherapy",
      "Travel medical coverage"
    ]
  },
  {
    name: "COMPLETA",
    description: "Comprehensive plan combining TOP and SANA benefits",
    benefits: [
      "Complete coverage",
      "Alternative medicine",
      "Preventive care",
      "Enhanced benefits",
      "Comprehensive protection"
    ]
  },
  {
    name: "PRIMEO",
    description: "Premium outpatient surgery coverage",
    benefits: [
      "Free doctor choice",
      "Maximum comfort",
      "Priority treatment",
      "Premium facilities",
      "Enhanced privacy"
    ]
  },
  {
    name: "DENTAplus",
    description: "Comprehensive dental coverage",
    benefits: [
      "75% cost coverage",
      "Up to 3000 CHF/year",
      "Dental checks",
      "Root canal treatments",
      "Orthodontic treatments"
    ]
  }
];

const faqs = [
  {
    question: "What makes Helsana different from other Swiss health insurers?",
    answer: "Helsana stands out as Switzerland's largest health insurer with over 1.9 million policyholders. They offer innovative digital services, a comprehensive rewards program, and extensive coverage options including specialized plans like PRIMEO for premium outpatient care."
  },
  {
    question: "How much can I save with Helsana's alternative insurance models?",
    answer: "With Helsana's alternative models, you can save up to 15% with the BeneFit PLUS family doctor model and up to 12% with the Telmed model, while maintaining high-quality healthcare coverage."
  },
  {
    question: "What supplementary insurance options does Helsana offer?",
    answer: "Helsana offers various supplementary insurance options including TOP for outpatient care, COMPLETA for comprehensive coverage, PRIMEO for premium services, and DENTAplus for dental care. Each plan can be customized to your specific needs."
  },
  {
    question: "Does Helsana offer English-speaking customer service?",
    answer: "Yes, Helsana provides multilingual customer service, including English support, through their 60+ local branches across Switzerland and their digital platforms."
  },
  {
    question: "How does Helsana's rewards program work?",
    answer: "Helsana's rewards program offers points for healthy activities and preventive measures. These points can be converted into cash rewards, helping you save money while maintaining a healthy lifestyle."
  }
];
---

<Layout
  title="Helsana Health Insurance Switzerland | Expert Guide 2025"
  description="Compare Helsana health insurance plans in Switzerland. Learn about their innovative digital services, comprehensive coverage options, and exclusive benefits. Updated for 2025."
>
  <!-- Enhanced Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "InsuranceAgency",
      "name": "Helsana Insurance",
      "description": "Switzerland's largest health insurance provider serving over 1.9 million policyholders with comprehensive insurance solutions.",
      "url": "https://expat-savvy.ch/healthcare/all-insurances/helsana",
      "logo": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740406933/helsana-old8485.logowik.com_xc1tcn.webp",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Zürichstrasse 130",
        "addressLocality": "Dübendorf",
        "postalCode": "8600",
        "addressCountry": "CH"
      },
      "areaServed": "CH",
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Insurance Products",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Basic Insurance",
              "description": "Multiple models including BASIS, BeneFit PLUS, and Telmed options"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Supplementary Insurance",
              "description": "Additional coverage including TOP, COMPLETA, PRIMEO, and specialized dental plans"
            }
          }
        ]
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://expat-savvy.ch"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Insurance Providers",
            "item": "https://expat-savvy.ch/healthcare/all-insurances"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Helsana",
            "item": "https://expat-savvy.ch/healthcare/all-insurances/helsana"
          }
        ]
      },
      "faqPage": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "How do I get a quote from Helsana?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "You can get a quote from Helsana through their online premium calculator, by booking a free consultation with our experts, or visiting one of Helsana's 60+ local branches. We recommend comparing multiple offers to find the best coverage for your needs."
            }
          },
          {
            "@type": "Question",
            "name": "What makes Helsana different from other Swiss insurers?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Helsana stands out as Switzerland's largest health insurer with over 1.9 million policyholders. They offer innovative digital services, a comprehensive rewards program, and extensive coverage options including specialized plans like PRIMEO for premium outpatient care."
            }
          },
          {
            "@type": "Question",
            "name": "What supplementary insurance options does Helsana offer?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Helsana offers various supplementary plans including TOP for outpatient care, COMPLETA for comprehensive coverage, PRIMEO for premium services, and DENTAplus for dental care. Each plan can be customized to your specific needs."
            }
          }
        ]
      }
    }
  </script>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <img 
          src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740406933/helsana-old8485.logowik.com_xc1tcn.webp" 
          alt="Helsana Logo" 
          class="h-24 mx-auto mb-8"
          width="240"
          height="96"
        />
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Helsana Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Switzerland's largest health insurance provider, serving over 1.9 million policyholders with annual revenues of 6.5 billion Swiss francs.
        </p>
      </div>
    </div>
  </div>

  <!-- About Section with Highlighted Expat Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">About Helsana</h2>
        <p>
          The Helsana health insurance provider is the result of the 1996 merger of Helvetia and Artisana, two health and accident insurance companies. With more than 1.9 million policy holders as well as annual revenues amounting to 6.5 billion Swiss francs, Helsana is Switzerland's largest health insurance provider. The insurer is headquartered in Dübendorf and has 60 local branches throughout Switzerland.
        </p>
        
        <!-- Highlighted Expat Advantages -->
        <div class="bg-white rounded-xl shadow-lg p-6 my-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Expat Advantages with Helsana</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Multilingual Support</span>
                <p class="text-sm text-gray-600">Customer service in multiple languages</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Digital Services</span>
                <p class="text-sm text-gray-600">Modern app and online platform</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Rewards Program</span>
                <p class="text-sm text-gray-600">Points for healthy activities</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <div>
                <span class="font-medium">Nationwide Network</span>
                <p class="text-sm text-gray-600">60+ local branches across Switzerland</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Form Banner -->
  <div class="bg-white py-16">
    <ExpandableFormBanner provider="Helsana" />
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Helsana</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">Helsana Versicherungen</p>
          <p class="text-lg text-gray-600">Zürichstrasse 130</p>
          <p class="text-lg text-gray-600">8600 Dübendorf</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>