---
import Layout from '../../../layouts/Layout.astro';

const coverageItems = [
  {
    title: "Medical Care",
    items: [
      "Doctor visits",
      "Specialist consultations (with referral)",
      "Hospital stays in your canton",
      "Emergency hospital care across Switzerland",
      "Psychiatric/psychological care (with referral)"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  },
  {
    title: "Maternity Care",
    items: [
      "Pregnancy check-ups",
      "Childbirth costs",
      "Postnatal care",
      "Breastfeeding advice",
      "Required screenings"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
    </svg>`
  },
  {
    title: "Emergency Care",
    items: [
      "Emergency treatments",
      "Ambulance services",
      "Rescue operations",
      "Emergency dental care",
      "Urgent care abroad"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  }
];

const costFactors = [
  {
    title: "Monthly Premiums",
    description: "Vary by insurer and canton of residence. Lower income individuals may qualify for premium reductions.",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2" />
    </svg>`
  },
  {
    title: "Annual Deductible",
    description: "Ranges from 300 to 2,500 CHF for adults. Children have lower or no deductibles.",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 8h6m-5 0a3 3 0 110 6H9l3 3m-3-6h6m6 1a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    title: "Retention Fee",
    description: "10% of costs above deductible, up to 700 CHF for adults and 350 CHF for children.",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  }
];
---

<Layout
  title="Compulsory Health Insurance in Switzerland | Expat Savvy"
  description="Learn about mandatory health insurance requirements in Switzerland. Understand coverage, costs, and deadlines for basic health insurance (KVG/LAMal)."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Compulsory Health Insurance
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-500">
          Understanding mandatory health insurance in Switzerland: your three-month window to secure coverage and ensure compliance with Swiss law.
        </p>
      </div>
    </div>
  </div>

  <!-- Key Coverage Areas -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">What's Covered</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {coverageItems.map(category => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={category.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{category.title}</h3>
            <ul class="space-y-2">
              {category.items.map(item => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Cost Structure -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Understanding Costs</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {costFactors.map(factor => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={factor.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{factor.title}</h3>
            <p class="text-gray-600">{factor.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Three Month Window -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Three Month Grace Period</h2>
        <div class="bg-primary-50 rounded-lg p-8">
          <p class="text-gray-800 mb-6">
            Upon arrival in Switzerland, you have a three-month grace period to:
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-800">Research and compare insurance providers</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-800">Choose your preferred insurance model</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-800">Set up your basic health insurance policy</span>
            </li>
          </ul>
          <div class="mt-6 p-4 bg-white rounded-lg">
            <p class="text-gray-600 text-sm">
              <strong>Important:</strong> Coverage is retroactive to your arrival date, ensuring you're protected during the selection period.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Newborn Coverage -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Coverage for Newborns</h2>
        <div class="bg-white rounded-lg shadow-md p-8">
          <p class="text-gray-600 mb-6">
            Parents must arrange health insurance for their newborn within three months of birth. Key points:
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Free choice of insurance provider for your baby</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Option to add supplementary insurance if desired</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Coverage is retroactive to the date of birth</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-primary-600">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
          Need help setting up your insurance?
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          Get expert guidance to find the right coverage
        </p>
        <div class="mt-8">
          <button
            onclick="window.openHealthModal('home')"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-300"
          >
            Schedule Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>