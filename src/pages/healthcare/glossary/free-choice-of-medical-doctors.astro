---
import Layout from '../../../layouts/Layout.astro';

const keyPoints = [
  {
    title: "Doctor Selection",
    description: "Free choice from approximately 34,000 doctors in Swiss primary healthcare",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  },
  {
    title: "Insurance Requirement",
    description: "Compulsory health insurance policy needed to register with a doctor",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Appointment System",
    description: "Most doctors operate by appointment for consultations and treatments",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>`
  }
];

const commonServices = [
  {
    title: "Medical Services",
    items: [
      "Consultations",
      "Treatments",
      "Prescriptions",
      "Specialist referrals",
      "Hospital referrals",
      "Gynecological check-ups"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  }
];

const findingDoctor = [
  {
    method: "Insurance Company",
    description: "Request list of available family doctors in your area from your health insurance provider",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    method: "Online Directories",
    description: "Browse online directories of doctors in Switzerland",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
    </svg>`
  },
  {
    method: "Current Doctor Referral",
    description: "Ask your current doctor for recommendations in your new area",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  }
];

const importantNotes = [
  "More doctors available in urban areas compared to rural regions",
  "Choose your doctor as soon as possible after arrival",
  "Research options before moving to your new location",
  "Consider language preferences when selecting a doctor"
];
---

<Layout
  title="Free Choice of Medical Doctors in Switzerland | Expat Savvy"
  description="Learn about choosing your doctor in Switzerland. Understand how to find and register with a doctor, and what services they provide under Swiss healthcare."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Free Choice of Medical Doctors
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-500">
          Understanding your right to choose your doctor in Switzerland and how to make the most of this freedom.
        </p>
      </div>
    </div>
  </div>

  <!-- Key Points -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Key Points</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {keyPoints.map(point => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={point.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{point.title}</h3>
            <p class="text-gray-600">{point.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Common Services -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Common Medical Services</h2>
      <div class="max-w-3xl mx-auto">
        {commonServices.map(service => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={service.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{service.title}</h3>
            <ul class="space-y-2">
              {service.items.map(item => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Finding a Doctor -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">How to Find a Doctor</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {findingDoctor.map(method => (
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={method.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{method.method}</h3>
            <p class="text-gray-600">{method.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Important Considerations -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Important Considerations</h2>
        <div class="bg-primary-50 rounded-lg p-8">
          <ul class="space-y-4">
            {importantNotes.map(note => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-800">{note}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6 p-4 bg-white rounded-lg">
            <p class="text-gray-600 text-sm">
              <strong>Tip:</strong> Start your search for a doctor before moving to ensure you have medical care available when you arrive.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-primary-600">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
          Need help finding the right doctor?
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          Get expert guidance from our healthcare specialists
        </p>
        <div class="mt-8">
          <button
            onclick="window.openHealthModal('home')"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-300"
          >
            Schedule Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>