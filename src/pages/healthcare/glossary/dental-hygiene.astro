---
import Layout from '../../../layouts/Layout.astro';

const insuranceCoverage = [
  {
    type: "Basic Insurance",
    covers: [
      "Serious infections affecting general health",
      "Dental damage from medical conditions",
      "Emergency dental treatments",
      "Accident-related dental care"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    type: "Supplementary Insurance",
    covers: [
      "Regular check-ups",
      "Dental hygiene treatments",
      "Orthodontic treatments",
      "Fillings and extractions"
    ],
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>`
  }
];

const supplementaryDetails = [
  {
    title: "Coverage Limits",
    description: "25-50% of costs covered, typically up to 1000 CHF annually",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2" />
    </svg>`
  },
  {
    title: "Orthodontic Coverage",
    description: "Up to 80% coverage for children and adolescents",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  },
  {
    title: "Age Restrictions",
    description: "Coverage may be limited or unavailable after certain age",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  }
];

const importantNotes = [
  "Take out dental insurance early due to qualification periods (6-24 months)",
  "Regular check-ups prevent costly treatments",
  "Compare policies carefully as coverage varies significantly",
  "Consider family plans for orthodontic coverage"
];
---

<Layout
  title="Dental Hygiene Insurance in Switzerland | Expat Savvy"
  description="Learn about dental hygiene coverage in Swiss health insurance. Understand what's covered by basic and supplementary insurance, and how to manage dental care costs."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Dental Hygiene Coverage
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-500">
          Understanding dental care coverage in Switzerland and how to protect yourself against expensive dental treatments.
        </p>
      </div>
    </div>
  </div>

  <!-- Insurance Coverage -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Insurance Coverage</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {insuranceCoverage.map(coverage => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={coverage.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{coverage.type}</h3>
            <ul class="space-y-2">
              {coverage.covers.map(item => (
                <li class="flex items-start">
                  <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Insurance Details -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {supplementaryDetails.map(detail => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={detail.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{detail.title}</h3>
            <p class="text-gray-600">{detail.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Important Notes -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Important Considerations</h2>
        <div class="bg-primary-50 rounded-lg p-8">
          <ul class="space-y-4">
            {importantNotes.map(note => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-gray-800">{note}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6 p-4 bg-white rounded-lg">
            <p class="text-gray-600 text-sm">
              <strong>Note:</strong> Many insurers require a qualification period of 6-24 months before covering dental expenses. It's advisable to take out your policy early.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Preventive Care -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Preventive Care</h2>
        <div class="bg-white rounded-lg shadow-md p-8">
          <p class="text-gray-600 mb-6">
            Regular dental check-ups are crucial for maintaining good oral health and preventing expensive treatments. Recommended preventive measures include:
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Annual dental check-ups</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Regular professional cleaning</span>
            </li>
            <li class="flex items-start">
              <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Early intervention for dental issues</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-primary-600">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
          Need help with dental insurance?
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          Get expert guidance to find the right coverage
        </p>
        <div class="mt-8">
          <button
            onclick="showConsultationModal()"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-300"
          >
            Schedule Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>