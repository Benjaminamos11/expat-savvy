---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "Healthcare", href: "/healthcare" },
  { name: "Glossary", href: "/healthcare/glossary" },
  { name: "Premium Reduction", href: "/healthcare/glossary/premium-reduction" }
];

const premiumReductionInfo = {
  cantons: [
    {
      name: "Zurich",
      threshold: "Individual: CHF 36,000 / Family: CHF 54,000",
      maxReduction: "Up to 90% of premium"
    },
    {
      name: "Geneva",
      threshold: "Individual: CHF 30,000 / Family: CHF 50,000",
      maxReduction: "Up to 100% of premium"
    },
    {
      name: "Basel",
      threshold: "Individual: CHF 32,000 / Family: CHF 48,000",
      maxReduction: "Up to 65% of premium"
    },
    {
      name: "Bern",
      threshold: "Individual: CHF 34,000 / Family: CHF 52,000",
      maxReduction: "Up to 60% of premium"
    }
  ],
  requirements: [
    "Swiss residency permit",
    "Tax declaration from previous year",
    "Current health insurance policy details",
    "Bank account information",
    "Proof of income (if changed significantly from tax declaration)"
  ],
  specialCases: [
    {
      title: "Students",
      details: [
        "Special calculation methods",
        "Parents' income may be considered",
        "Additional documentation required"
      ]
    },
    {
      title: "Self-Employed",
      details: [
        "Based on taxable income",
        "Business losses considered",
        "Special application process"
      ]
    },
    {
      title: "Recent Arrivals",
      details: [
        "Pro-rata calculations",
        "Current income basis",
        "Simplified process"
      ]
    }
  ],
  applicationSteps: [
    {
      step: "Check Eligibility",
      description: "Review your canton's income thresholds and requirements"
    },
    {
      step: "Gather Documents",
      description: "Collect all necessary paperwork and proof of income"
    },
    {
      step: "Submit Application",
      description: "Apply through your canton's designated office or online platform"
    },
    {
      step: "Await Decision",
      description: "Processing time varies by canton (typically 1-3 months)"
    }
  ]
};

const faqs = [
  {
    question: "What is premium reduction (Prämienverbilligung)?",
    answer: "Premium reduction is a cantonal subsidy system that helps lower-income residents afford mandatory health insurance. The amount and eligibility criteria vary by canton, but it can significantly reduce your monthly insurance premiums."
  },
  {
    question: "Who is eligible for premium reduction?",
    answer: "Eligibility depends on your canton of residence and income level. Generally, individuals and families with modest incomes qualify. Each canton sets its own income thresholds and calculation methods."
  },
  {
    question: "How is the reduction amount calculated?",
    answer: "The reduction amount is calculated based on your taxable income, family size, and canton of residence. The exact formula varies by canton, but generally, lower income means higher reduction."
  },
  {
    question: "When should I apply for premium reduction?",
    answer: "Most cantons require applications by December 31 for the following year. However, some cantons like Geneva automatically assess eligibility based on tax returns. Check your canton's specific deadlines."
  },
  {
    question: "Can I get retroactive premium reduction?",
    answer: "In some cases, yes. If your financial situation changes significantly (job loss, reduced income), you may be eligible for retroactive reduction. Contact your cantonal office immediately in such situations."
  },
  {
    question: "Do I need to reapply every year?",
    answer: "This varies by canton. Some cantons require annual applications, while others automatically reassess based on tax returns. Check your canton's specific requirements."
  }
];
---

<Layout
  title="Premium Reduction Guide Switzerland | Expert Advice 2025"
  description="Complete guide to health insurance premium reduction (Prämienverbilligung) in Switzerland. Learn about eligibility, application process, and cantonal differences."
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "Swiss Health Insurance Premium Reduction Guide 2025",
      "description": "Comprehensive guide to understanding and applying for health insurance premium reduction in Switzerland.",
      "datePublished": "2025-01-15",
      "dateModified": "2025-01-15",
      "author": {
        "@type": "Organization",
        "name": "Expat Savvy"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Expat Savvy",
        "logo": {
          "@type": "ImageObject",
          "url": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg"
        }
      },
      "mainEntity": {
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Who is eligible for premium reduction?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Eligibility depends on your canton of residence and income level. Generally, individuals and families with modest incomes qualify. Each canton sets its own income thresholds and calculation methods."
            }
          },
          {
            "@type": "Question",
            "name": "How is the reduction amount calculated?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "The reduction amount is calculated based on your taxable income, family size, and canton of residence. The exact formula varies by canton, but generally, lower income means higher reduction."
            }
          }
        ]
      }
    }
  </script>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-4">
        {breadcrumbs.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            )}
            <a
              href={item.href}
              class={`ml-4 text-sm font-medium ${
                index === breadcrumbs.length - 1
                  ? 'text-gray-700'
                  : 'text-gray-500 hover:text-gray-700'
              }`}
              aria-current={index === breadcrumbs.length - 1 ? 'page' : undefined}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Premium Reduction</span>
          <span class="block text-primary-600">in Switzerland</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Your guide to health insurance premium reduction (Prämienverbilligung). Learn about eligibility, application process, and how to maximize your benefits.
        </p>
      </div>
    </div>
  </div>

  <!-- General Requirements -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">General Requirements</h2>
        <div class="bg-white rounded-lg shadow-md p-8">
          <p class="text-gray-600 mb-6">
            To be eligible for premium reduction, you must meet the following criteria:
          </p>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Be a legal resident of Switzerland</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Have valid health insurance with a Swiss provider</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">Meet your canton's income thresholds</span>
            </li>
            <li class="flex items-start">
              <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600">File annual tax returns (except for recent arrivals)</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Cantonal Information -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Cantonal Overview</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {premiumReductionInfo.cantons.map(canton => (
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">{canton.name}</h3>
              <div class="space-y-3">
                <div>
                  <span class="font-medium text-gray-700">Income Threshold:</span>
                  <p class="text-gray-600">{canton.threshold}</p>
                </div>
                <div>
                  <span class="font-medium text-gray-700">Maximum Reduction:</span>
                  <p class="text-gray-600">{canton.maxReduction}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Required Documents -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Required Documents</h2>
        <div class="bg-white rounded-lg shadow-md p-6">
          <ul class="space-y-2">
            {premiumReductionInfo.requirements.map(requirement => (
              <li class="flex items-start">
                <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600">{requirement}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Special Cases -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Special Cases</h2>
        <div class="space-y-8">
          {premiumReductionInfo.specialCases.map(specialCase => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">{specialCase.title}</h3>
              <ul class="space-y-2">
                {specialCase.details.map(detail => (
                  <li class="flex items-start">
                    <svg class="h-5 w-5 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600">{detail}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Application Process -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Application Process</h2>
        <div class="space-y-6">
          {premiumReductionInfo.applicationSteps.map((step, index) => (
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-8 w-8 rounded-full bg-primary-100 text-primary-600 font-semibold">
                  {index + 1}
                </div>
              </div>
              <div class="ml-4">
                <h4 class="text-lg font-medium text-gray-900">{step.step}</h4>
                <p class="mt-1 text-gray-600">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-primary-600">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
          Need help with premium reduction?
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          Get expert guidance to maximize your benefits
        </p>
        <div class="mt-8">
          <button
            onclick="showConsultationModal()"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-300"
          >
            Schedule Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>
```