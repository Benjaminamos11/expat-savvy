---
import Layout from '../../../layouts/Layout.astro';

const keyFeatures = [
  {
    title: "Initial Phone Consultation",
    description: "Required to call a 24/7 hotline before seeing a doctor, going to hospital, or pharmacy",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`
  },
  {
    title: "Premium Savings",
    description: "15-20% lower premiums compared to standard basic health insurance premiums",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2" />
    </svg>`
  },
  {
    title: "Wide Availability",
    description: "Offered by most major Swiss health insurance providers",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  }
];

const advantages = [
  {
    title: "Cost Savings",
    description: "Significant premium reductions of 15-20% compared to standard insurance",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2" />
    </svg>`
  },
  {
    title: "24/7 Availability",
    description: "Medical advice available around the clock through the hotline",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  },
  {
    title: "Professional Guidance",
    description: "Expert medical advice and appropriate referrals when needed",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>`
  }
];

const drawbacks = [
  {
    title: "Limited Direct Access",
    description: "Cannot directly visit doctors or hospitals without prior consultation",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
    </svg>`
  },
  {
    title: "Potential Penalties",
    description: "Risk of coverage rejection or policy changes for non-compliance",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>`
  },
  {
    title: "Diagnosis Limitations",
    description: "Phone diagnosis may not be as accurate as in-person consultation",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`
  }
];

const exceptions = [
  "Emergency situations",
  "Annual gynecological check-ups",
  "Ophthalmologist examinations",
  "Other services (depending on insurance company)"
];
---

<Layout
  title="Telmed Insurance Model in Switzerland | Expat Savvy"
  description="Learn about the Telmed insurance model in Switzerland. Understand how it works, its benefits, and potential drawbacks."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Telmed Insurance Model
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-500">
          Understanding the telemedicine-based insurance model and how it can help you save on premiums while ensuring quality healthcare.
        </p>
      </div>
    </div>
  </div>

  <!-- Key Features -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Key Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {keyFeatures.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- How It Works -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">How Telmed Works</h2>
        <div class="bg-white rounded-lg shadow-md p-8">
          <ol class="space-y-6">
            <li class="flex items-start">
              <span class="flex items-center justify-center h-6 w-6 rounded-full bg-primary-100 text-primary-600 font-semibold mr-3">1</span>
              <div>
                <h3 class="font-semibold text-gray-900">Initial Contact</h3>
                <p class="text-gray-600">Call the medical hotline when you experience health issues</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex items-center justify-center h-6 w-6 rounded-full bg-primary-100 text-primary-600 font-semibold mr-3">2</span>
              <div>
                <h3 class="font-semibold text-gray-900">Professional Assessment</h3>
                <p class="text-gray-600">Medical professionals evaluate your condition over the phone</p>
              </div>
            </li>
            <li class="flex items-start">
              <span class="flex items-center justify-center h-6 w-6 rounded-full bg-primary-100 text-primary-600 font-semibold mr-3">3</span>
              <div>
                <h3 class="font-semibold text-gray-900">Referral Decision</h3>
                <p class="text-gray-600">If needed, you'll be referred to a doctor or hospital</p>
              </div>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Advantages -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Advantages</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {advantages.map(advantage => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={advantage.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{advantage.title}</h3>
            <p class="text-gray-600">{advantage.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Drawbacks -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Potential Drawbacks</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {drawbacks.map(drawback => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={drawback.icon} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{drawback.title}</h3>
            <p class="text-gray-600">{drawback.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Exceptions -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Exceptions</h2>
        <div class="bg-primary-50 rounded-lg p-8">
          <p class="text-gray-800 mb-6">
            Phone consultation is not required for:
          </p>
          <ul class="space-y-4">
            {exceptions.map(exception => (
              <li class="flex items-start">
                <svg class="h-6 w-6 text-primary-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-800">{exception}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6 p-4 bg-white rounded-lg">
            <p class="text-gray-600 text-sm">
              <strong>Note:</strong> Specific exceptions may vary by insurance provider. Always check your policy details.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-primary-600">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
          Is the Telmed model right for you?
        </h2>
        <p class="mt-4 text-xl text-primary-100">
          Get expert guidance to find the best insurance model for your needs
        </p>
        <div class="mt-8">
          <button
            onclick="showConsultationModal()"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-300"
          >
            Schedule Free Consultation
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>