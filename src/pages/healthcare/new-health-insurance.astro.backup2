  <!-- Deductible Slider JavaScript -->
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      // Deductible slider functionality
      const deductibleOptions = [300, 500, 1000, 1500, 2000, 2500];
      const premiumByDeductible = {
        300: 438,
        500: 405,
        1000: 372,
        1500: 350,
        2000: 335,
        2500: 325
      };

      const slider = document.getElementById('deductible-slider');
      const deductibleValue = document.getElementById('deductible-value');
      const monthlyPremium = document.getElementById('monthly-premium');
      const annualSavings = document.getElementById('annual-savings');
      const deductibleAmount = document.getElementById('deductible-amount');
      const maxOop = document.getElementById('max-oop');
      const breakevenText = document.getElementById('breakeven-text');

      if (slider) {
        slider.addEventListener('input', function() {
          const deductible = deductibleOptions[this.value];
          const premium = premiumByDeductible[deductible];
          const savings = (premiumByDeductible[300] - premium) * 12;
          const maxOutOfPocket = deductible + 700;
          const breakeven = deductible + savings;

          deductibleValue.textContent = `CHF ${deductible.toLocaleString()}`;
          monthlyPremium.textContent = `~CHF ${premium}/month`;
          annualSavings.textContent = `CHF ${savings.toLocaleString()}`;
          deductibleAmount.textContent = `CHF ${deductible.toLocaleString()}`;
          maxOop.textContent = `CHF ${maxOutOfPocket.toLocaleString()}`;
          breakevenText.textContent = `If you spend less than CHF ${Math.round(breakeven).toLocaleString()}/year on healthcare, the CHF ${deductible.toLocaleString()} deductible saves you money.`;
        });
      }
    });
  </script>

