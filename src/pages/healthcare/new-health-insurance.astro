    // Show sticky CTA when user scrolls past hero section
    (function() {
      const stickyCTA = document.getElementById('mobile-sticky-cta');
      if (!stickyCTA) return;

      let scrollThreshold = 600; // Show after scrolling 600px (past hero)
      
      function handleScroll() {
        const scrollY = window.scrollY || window.pageYOffset;
        
        if (scrollY > scrollThreshold) {
          stickyCTA.classList.remove('opacity-0', 'translate-y-full');
          stickyCTA.classList.add('opacity-100', 'translate-y-0');
        } else {
          stickyCTA.classList.add('opacity-0', 'translate-y-full');
          stickyCTA.classList.remove('opacity-100', 'translate-y-0');
        }
      }

      // Listen to scroll with throttle for performance
      let ticking = false;
      window.addEventListener('scroll', function() {
        if (!ticking) {
          window.requestAnimationFrame(function() {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      });

      // Check initial position
      handleScroll();
    })();
  </script>

