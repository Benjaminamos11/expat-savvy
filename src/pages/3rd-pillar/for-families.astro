                            <p
                                class="text-[#C41E3A] font-black uppercase tracking-widest text-sm"
                            >
                                ‚Äî The Expat Savvy Philosophy
                            </p>
                        </div>
                    </div>
                </section>

                <!-- SECTION 4: INHERITANCE & MATERNITY -->
                <section class="mb-32">
                    <div class="grid md:grid-cols-2 gap-12">
                        <!-- Swiss Inheritance Law -->
                        <div
                            class="p-10 bg-gray-50 rounded-[40px] border border-gray-100"
