// SSR fallback data for deductible calculator
const ssrPremiumByDeductible = {300: 500, 500: 470, 1000: 430, 1500: 390, 2000: 360, 2500: 320};
const ssrDeductibles = [300, 500, 1000, 1500, 2000, 2500];
const ssrEstCosts = 600;
const ssrCoPay = (amount: number) => Math.min(Math.max(amount, 0) * 0.10, 700);
function ssrComputeTotal(deductible: number, estCosts: number) {
  const monthly = ssrPremiumByDeductible[deductible] ?? 400;
  const annualPremium = monthly * 12;
  const outOfPocket = Math.min(estCosts, deductible) + ssrCoPay(estCosts - deductible);
  return { monthly, total: annualPremium + outOfPocket };
}
const ssrRows = ssrDeductibles.map((d) => ({ deductible: d, ...ssrComputeTotal(d, ssrEstCosts) }));
const ssrBest = ssrRows.reduce((best, r) => (r.total < best.total ? r : best), { deductible: 0, total: Infinity, monthly: 0 });
