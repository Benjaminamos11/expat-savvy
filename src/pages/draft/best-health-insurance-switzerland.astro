            <p class="font-semibold text-gray-900">Robert Kolar</p>
            <p class="text-sm">FINMA-certified Insurance Broker</p>
            <p class="text-sm">20+ years experience • English, German & French</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- D) TOP 6 COMPARISONS -->
  <!-- ============================================ -->
  <section class={cn("bg-white", DesignSystem.spacing.section.padding)}>
    <div class={DesignSystem.spacing.container.default}>
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Most-Requested Comparisons
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Deep-dive comparisons of Switzerland's top insurers for expats — all with verified data, real premiums, and independent analysis.
        </p>
      </div>

      <div class="max-w-5xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {comparisons.map(comparison => (
          <a 
            href={comparison.url}
            class="bg-white rounded-2xl p-6 shadow-md border border-gray-100 hover:shadow-lg hover:border-red-200 transition-all group"
            data-evt="card_compare_pair"
          >
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-red-600 transition-colors">
              {comparison.title}
            </h3>
            <p class="text-gray-600 text-sm mb-4">
