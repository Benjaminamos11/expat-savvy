---

<Layout
  title={meta.title}
  description={meta.description}
  canonicalURLProp={meta.canonicalUrl}
>
  <!-- JSON-LD Schema: BreadcrumbList -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://expat-savvy.ch/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Healthcare",
        "item": "https://expat-savvy.ch/healthcare/"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Best & Compare Health Insurance",
        "item": "https://expat-savvy.ch/healthcare/best-health-insurance-switzerland/"
      }
    ]
  })} />

  <!-- JSON-LD Schema: Organization -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Expat Savvy",
    "url": "https://expat-savvy.ch",
    "logo": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg",
    "description": "FINMA-certified insurance brokers helping expats in Switzerland with health insurance, 3rd pillar, and financial planning.",
    "sameAs": [
      "https://www.google.com/maps/place/Expat+Savvy"
    ]
  })} />

  <!-- JSON-LD Schema: FAQPage -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- ============================================ -->
  <!-- A) HERO SECTION -->
  <!-- ============================================ -->
  <section class="relative min-h-screen md:min-h-[90vh] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <img
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1746960418/a-photograph-depicts-a-pair-of-youthful-_quYJOYFeRPqWWfrG0MYelw_ndQb4IxjRbGazkFfjfLXNA_qk6hxm.jpg"
        alt="Best health insurance comparison for expats in Switzerland"
        class="w-full h-full object-cover object-center"
        width="1920"
        height="1080"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/45 to-black/60"></div>
    </div>

    <!-- Mobile layout (full-screen) -->
    <div class="relative w-full h-full flex items-center justify-center px-4 sm:px-6 md:hidden">
      <div class="text-center max-w-sm mx-auto">
        <h1 class="text-3xl sm:text-4xl font-extrabold text-white mb-4 animate-fade-in text-shadow leading-tight">
          Best & Compare Swiss Health Insurance — 2026 Guide for Expats
        </h1>
        <p class="text-base sm:text-lg text-white/95 animate-slide-up text-shadow mb-6 leading-relaxed">
          We compare every major Swiss insurer, explain what actually matters for expats, and handle your registration — fast, in English, and free.
        </p>
        <div class="flex flex-col items-center gap-4 animate-slide-up">
          <button
            class="inline-flex items-center px-6 py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 w-full justify-center"
            onclick="window.openHealthModal('best-compare')"
            aria-label="Compare and get personal advice"
            data-evt="cta_hero_compare"
          >
            Compare & Get Personal Advice
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
          <p class="text-white/90 text-sm text-center">
            ✓ FINMA-certified ✓ English support ✓ 100% free
          </p>
        </div>
      </div>
    </div>
    
    <!-- Desktop layout (left aligned) -->
    <div class="relative w-full mx-auto hidden md:block">
      <div class="grid grid-cols-12 gap-4">
        <div class="col-span-7 col-start-2 flex items-center justify-center">
