          <h3 class="text-lg font-semibold text-gray-900 mb-1">Deductibles & Saving Models</h3>
          <p class="text-gray-600 text-sm">Cost examples and switching window.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="bg-gray-50 py-12" id="faqs">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faqs.map((f) => (
          <div class="bg-white rounded-lg shadow-md p-5 border border-gray-200">
            <div class="text-base font-semibold text-gray-900">{f.q}</div>
            <div class="text-sm text-gray-700 mt-1">{f.a}</div>
