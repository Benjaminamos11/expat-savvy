    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-extrabold text-white">Make the 2026 switch easy</h2>
      <p class="text-primary-100 mt-2">Compare options, lock savings, and avoid last‑minute stress.</p>
      <div class="mt-6">
        <button onclick="showConsultationModal()" class="inline-flex items-center px-6 py-3 rounded-md text-primary-700 bg-white hover:bg-primary-50 shadow">
          Book a Free Consultation
        </button>
      </div>
    </div>
  </section>

  <ConsultationModal />
</Layout>
