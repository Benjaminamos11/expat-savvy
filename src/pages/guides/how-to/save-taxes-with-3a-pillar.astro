import Layout from '../../../layouts/Layout.astro';
import HowToSchema from '../../../components/schema/HowToSchema.astro';
import FAQSchema from '../../../components/schema/FAQSchema.astro';
import ConsultationModal from '../../../components/consultation/ConsultationModal.astro';

// Define the steps for the how-to guide
const steps = [
  {
    name: "Understand the tax benefits of Pillar 3a",
    text: "Learn how contributions to Pillar 3a can be deducted from your taxable income, potentially saving thousands in taxes each year depending on your income bracket and canton of residence."
  },
  {
    name: "Maximize your annual contribution",
    text: "Contribute the full annual maximum (CHF 7,056 for employed persons, CHF 35,280 for self-employed without a 2nd pillar in 2025) to get the highest possible tax deduction."
  },
  {
    name: "Optimize contribution timing",
    text: "Make strategic decisions about when to contribute to your 3a account. Consider making contributions early in the year for investment growth or in December for immediate tax benefits."
  },
  {
    name: "Open multiple 3a accounts",
    text: "Create several 3a accounts with different providers to enable staggered withdrawals later, reducing the tax progression impact when you eventually access your funds."
  },
  {
    name: "Choose the right investment strategy",
    text: "Select an appropriate securities-based 3a solution that balances potential returns with your risk tolerance, as higher returns compound your tax advantages over time."
  },
  {
    name: "Plan your withdrawal strategy",
    text: "Understand how to minimize taxes when accessing your 3a funds by staggering withdrawals across different years and potentially across different cantons."
  },
  {
    name: "Coordinate with your spouse/partner",
    text: "If applicable, ensure both partners maximize their individual 3a contributions to double your household tax savings."
  },
  {
    name: "Review and adjust annually",
    text: "Regularly reassess your 3a strategy based on changes in your income, tax laws, or personal circumstances to maintain optimal tax efficiency."
  }
];

// Define frequently asked questions
const faqs = [
  {
    question: "How much tax can I actually save with Pillar 3a?",
    answer: "Tax savings depend on your income, tax rate, and canton of residence. For someone in a 25-35% marginal tax bracket, the maximum annual contribution of CHF 7,056 (2025) could save approximately CHF 1,800-2,500 in taxes. Higher income individuals in cantons with higher tax rates (like Geneva, Zurich, or Vaud) can save even more. Self-employed individuals without a 2nd pillar can save up to CHF 10,000 or more by contributing up to CHF 35,280 annually."
  },
  {
    question: "Is it better to make one annual 3a contribution or monthly payments?",
    answer: "For tax purposes, the effect is identical as long as you reach your desired contribution amount within the calendar year. For investment returns, a lump sum contribution early in the year gives your money more time to grow. However, monthly contributions offer the advantage of dollar-cost averaging, reducing investment timing risk. If cash flow is a concern, monthly contributions may be more manageable."
  },
  {
    question: "Why should I have multiple 3a accounts instead of just one?",
    answer: "Multiple 3a accounts allow you to withdraw your funds in stages across different tax years, reducing the progressive tax impact at withdrawal. For example, instead of withdrawing CHF 300,000 from one account (triggering a higher tax rate), you might withdraw CHF 100,000 from three different accounts over three years, potentially saving thousands in taxes. Multiple accounts also allow you to diversify across different investment strategies and providers."
  },
  {
    question: "Can I deduct 3a contributions if I work part-time or have a low income?",
    answer: "Yes, anyone with earned income subject to AHV/AVS (Swiss Social Security) contributions can contribute to Pillar 3a and claim the tax deduction, regardless of how low their income is. However, you cannot contribute more than your actual earned income. The maximum limits (CHF 7,056 for employed persons in 2025) apply only if your income is at least that amount."
  },
  {
    question: "How does canton of residence affect my 3a tax savings?",
    answer: "Cantons have significantly different tax rates, affecting both your immediate tax savings from contributions and the taxation of withdrawals. High-tax cantons like Geneva or Vaud offer larger immediate tax deductions for the same contribution, while low-tax cantons like Schwyz or Zug have much lower withdrawal tax rates. Your long-term residence plans, especially around retirement, should influence your 3a strategy."
  }
];

// Support resources and tools
const tools = [
  {
    name: "Swiss tax calculators",
    description: "Online tools to estimate your tax savings from 3a contributions based on your canton and income"
  },
  {
    name: "3a contribution calculators",
    description: "Tools to determine the optimal contribution amount based on your financial situation"
  },
  {
    name: "3a withdrawal tax calculators",
    description: "Applications to estimate future tax implications of different withdrawal strategies"
  }
];

// Supply items needed
const supplies = [
  "Your annual income and tax rate information",
  "Current tax assessment (tax return documents)",
  "Information about existing pension arrangements (1st and 2nd pillars)",
  "Banking details for setting up 3a accounts",
  "Long-term financial planning timeline"
];

// Tax savings examples by income level
const taxSavingsExamples = [
  {
    incomeLevel: "CHF 70,000",
    contribution: "CHF 7,056",
    taxSavingLowTax: "CHF 1,200 - 1,500",
    taxSavingHighTax: "CHF 1,700 - 2,100",
    percentageSaving: "~2% of annual income"
  },
  {
    incomeLevel: "CHF 100,000",
    contribution: "CHF 7,056",
    taxSavingLowTax: "CHF 1,700 - 2,000",
    taxSavingHighTax: "CHF 2,200 - 2,600",
    percentageSaving: "~2.4% of annual income"
  },
  {
    incomeLevel: "CHF 150,000",
    contribution: "CHF 7,056",
    taxSavingLowTax: "CHF 2,100 - 2,500",
    taxSavingHighTax: "CHF 2,800 - 3,300",
    percentageSaving: "~2% of annual income"
  },
  {
    incomeLevel: "CHF 200,000+",
    contribution: "CHF 7,056",
    taxSavingLowTax: "CHF 2,500 - 2,900",
    taxSavingHighTax: "CHF 3,300 - 3,800+",
    percentageSaving: "~1.7% of annual income"
  },
  {
    incomeLevel: "Self-employed (CHF 150,000)",
    contribution: "CHF 30,000",
    taxSavingLowTax: "CHF 8,500 - 10,000",
    taxSavingHighTax: "CHF 11,000 - 13,000+",
    percentageSaving: "~8% of annual income"
  }
];

// Advanced tax-saving strategies
const advancedStrategies = [
  {
    strategy: "Contribution Timing Optimization",
    description: "Make early-year contributions to maximize investment growth while securing tax deductions.",
    potentialBenefit: "Additional investment returns of 2-5% annually by contributing in January vs. December"
  },
  {
    strategy: "Multi-Year Withdrawal Planning",
    description: "Plan withdrawals across multiple tax years to stay in lower tax brackets.",
    potentialBenefit: "Reduction of 20-40% in total withdrawal taxes by spreading over 3-5 years"
  },
  {
    strategy: "Strategic Relocation for Withdrawals",
    description: "Consider the tax implications if planning to change cantons before making major withdrawals.",
    potentialBenefit: "Up to 70% reduction in withdrawal taxes in the lowest vs. highest tax cantons"
  },
  {
    strategy: "Coordinated Family Contributions",
    description: "Ensure both spouses/partners maximize their contributions, especially if one has a higher income.",
    potentialBenefit: "Double household tax deductions while potentially optimizing by income brackets"
  },
  {
    strategy: "3a for Property Purchase",
    description: "Use 3a funds for property purchases to access capital while benefiting from years of tax deductions.",
    potentialBenefit: "Tax-efficient homeownership plus reduced mortgage requirements"
  }
];

// Comparison of canton withdrawal taxes
const cantonWithdrawalTaxes = [
  {
    taxLevel: "Low",
    cantons: "Schwyz, Zug, Nidwalden, Obwalden",
    withdrawalTaxRate: "Approx. 2-4% on CHF 100,000 withdrawal",
    notes: "Highly favorable for retirement planning and lump-sum withdrawals"
  },
  {
    taxLevel: "Medium-Low",
    cantons: "Uri, Appenzell, Graubünden",
    withdrawalTaxRate: "Approx. 4-6% on CHF 100,000 withdrawal",
    notes: "Good balance between living costs and tax efficiency"
  },
  {
    taxLevel: "Medium",
    cantons: "Zurich, Lucerne, St. Gallen, Thurgau",
    withdrawalTaxRate: "Approx. 6-8% on CHF 100,000 withdrawal",
    notes: "Moderate withdrawal taxes with varying urban/rural opportunities"
  },
  {
    taxLevel: "Medium-High",
    cantons: "Bern, Aargau, Basel-Land, Valais",
    withdrawalTaxRate: "Approx. 8-10% on CHF 100,000 withdrawal",
    notes: "Consider staggered withdrawals to minimize tax impact"
  },
  {
    taxLevel: "High",
    cantons: "Geneva, Vaud, Basel-Stadt, Neuchâtel",
    withdrawalTaxRate: "Approx. 10-12%+ on CHF 100,000 withdrawal",
    notes: "Higher immediate tax savings during contribution years offset by higher withdrawal taxes"
  }
];
---

<Layout
  title="Save Taxes with 3a Pillar Switzerland | Expert Guide 2025"
  description="Learn how to save taxes with 3a pillar in Switzerland. Independent FINMA-certified advice for expats — maximize tax benefits and savings."
  canonicalURLProp="https://expat-savvy.ch/guides/how-to/save-taxes-with-3a-pillar/"
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747121608/a-minimalist-line-drawing-illustration-d_zupkR-ybRw-MU1brtObWGg_U1m_4pOwTfi9yTEC8ovh0A_fkccuq.webp"
>
  <!-- Add schema markup using our components -->
  <HowToSchema
    name="How to Save Taxes with 3a Pillar in Switzerland"
    description="A comprehensive guide to reducing your Swiss tax bill through optimal 3a pillar strategies, including contribution timing, multiple accounts, and withdrawal planning."
    totalTime="PT4H"
    dateModified="2025-08-13"
    steps={steps}
    tools={tools}
    supply={supplies}
    image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747121608/a-minimalist-line-drawing-illustration-d_zupkR-ybRw-MU1brtObWGg_U1m_4pOwTfi9yTEC8ovh0A_fkccuq.webp"
  />

  <!-- FAQ Schema Component -->
  <FAQSchema faqs={faqs} />

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747121608/a-minimalist-line-drawing-illustration-d_zupkR-ybRw-MU1brtObWGg_U1m_4pOwTfi9yTEC8ovh0A_fkccuq.webp"
        alt="Saving taxes with 3a pillar in Switzerland"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/50"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
          <span class="block">Save Thousands in Taxes</span>
          <span class="block mt-2">With the <span class="text-primary-500">3a Pillar</span></span>
        </h1>
        <p class="mt-6 max-w-xl mx-auto text-xl text-gray-300">
          Expert strategies to legally minimize your Swiss tax bill through optimal pension planning and contribution strategies.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
          <button
            onclick="window.openLifePensionModal()"
            class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-white bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-700 hover:to-primary-600 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Get Your Tax Saving Plan
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
          <a
            href="#tax-savings"
            class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            See Potential Savings
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Last Updated Badge -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex justify-end">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
        <svg class="mr-1.5 h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Last updated: 13.08.2025
      </span>
    </div>
  </div>

  <!-- Introduction Section -->
  <div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Why 3a Is Switzerland's Most Powerful Tax-Saving Tool</h2>
        <p class="text-lg text-gray-600 mb-6">
          Switzerland's 3a pillar (Säule 3a/Pilier 3a) offers some of the most attractive tax benefits available to residents. By strategically using this private pension vehicle, you can significantly reduce your annual tax bill while simultaneously building your retirement nest egg.
        </p>
        <p class="text-lg text-gray-600">
          This guide provides a comprehensive framework for maximizing the tax advantages of the 3a pillar, whether you're an employed professional, self-employed entrepreneur, or expat navigating the Swiss tax system. You'll learn actionable strategies that can save you thousands of francs each year in taxes.
        </p>
        
        <div class="mt-10 bg-white rounded-lg shadow-md p-6 border-l-4 border-primary-500">
          <h3 class="text-xl font-semibold text-gray-900 mb-3">The Triple Tax Advantage of Pillar 3a</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <h4 class="font-medium text-gray-900 mb-2">1. Income Tax Reduction</h4>
              <p class="text-sm text-gray-600">Contributions are fully tax-deductible from your taxable income, providing immediate tax relief each year.</p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <h4 class="font-medium text-gray-900 mb-2">2. Tax-Free Growth</h4>
              <p class="text-sm text-gray-600">Investment returns within your 3a accounts grow without being subject to income or wealth tax during the accumulation phase.</p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <h4 class="font-medium text-gray-900 mb-2">3. Preferential Withdrawal Tax</h4>
              <p class="text-sm text-gray-600">When withdrawn, 3a funds are taxed separately from your income at a reduced rate, often resulting in significant tax savings.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tax Savings Examples Section -->
  <div id="tax-savings" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">How Much Tax Can You Actually Save?</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">These examples illustrate potential annual tax savings based on income level and canton of residence.</p>
      </div>
      
      <div class="max-w-5xl mx-auto overflow-hidden shadow-md rounded-lg">
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white">
            <thead>
              <tr class="bg-primary-600 text-white uppercase text-sm">
                <th class="py-3 px-4 text-left">Annual Income</th>
                <th class="py-3 px-4 text-left">3a Contribution</th>
                <th class="py-3 px-4 text-left">Tax Saving (Low-Tax Cantons)</th>
                <th class="py-3 px-4 text-left">Tax Saving (High-Tax Cantons)</th>
                <th class="py-3 px-4 text-left">Approx. % Saving</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {taxSavingsExamples.map(example => (
                <tr class="hover:bg-gray-50">
                  <td class="py-4 px-4 font-medium">{example.incomeLevel}</td>
                  <td class="py-4 px-4">{example.contribution}</td>
                  <td class="py-4 px-4">{example.taxSavingLowTax}</td>
                  <td class="py-4 px-4">{example.taxSavingHighTax}</td>
                  <td class="py-4 px-4">{example.percentageSaving}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
      
      <div class="mt-4 text-center text-sm text-gray-500">
        Note: These figures are approximations and will vary based on your personal tax situation, marital status, commune, and other factors. Always consult a tax professional for personalized advice.
      </div>
    </div>
  </div>

  <!-- Step by Step Guide Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Maximizing Your 3a Tax Benefits: Step-by-Step</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">Follow this strategic approach to optimize your tax savings through the 3a pillar system.</p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {steps.map((step, index) => (
          <div id={`step-${index + 1}`} class="mb-12 bg-white rounded-lg shadow-md p-6 border-l-4 border-primary-500">
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-primary-100 text-primary-700 rounded-full w-10 h-10 flex items-center justify-center mr-4">
                <span class="font-bold">{index + 1}</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">{step.name}</h3>
                <p class="text-gray-600 mb-4">{step.text}</p>
                
                {index === 0 && (
                  <div class="bg-gray-50 p-4 rounded-lg mt-4">
                    <h4 class="font-medium text-gray-900 mb-2">How the Tax Deduction Works:</h4>
                    <p class="text-gray-600 mb-3">
                      When you file your tax return, your 3a contributions are subtracted directly from your taxable income before calculating your tax liability. This means:
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>You're taxed as if you earned less money</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Due to progressive taxation, the benefit is greater for higher income brackets</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>The deduction applies to federal, cantonal, and communal taxes</span>
                      </li>
                    </ul>
                  </div>
                )}
                
                {index === 3 && (
                  <div class="bg-gray-50 p-4 rounded-lg mt-4">
                    <h4 class="font-medium text-gray-900 mb-2">Multiple Account Strategy Example:</h4>
                    <p class="text-gray-600 mb-3">
                      Instead of having one 3a account with CHF 300,000 at retirement, consider having:
                    </p>
                    <ul class="space-y-2">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Account 1: CHF 100,000 (withdraw in year 1)</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Account 2: CHF 100,000 (withdraw in year 2)</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-primary-600 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>Account 3: CHF 100,000 (withdraw in year 3)</span>
                      </li>
                    </ul>
                    <p class="text-gray-600 mt-3">
                      This approach can save 20-40% on withdrawal taxes compared to a single lump-sum withdrawal, depending on your canton of residence.
                    </p>
                  </div>
                )}
                
                {index === 5 && (
                  <div class="bg-gray-50 p-4 rounded-lg mt-4">
                    <h4 class="font-medium text-gray-900 mb-2">Cantonal Withdrawal Tax Differences:</h4>
                    <div class="overflow-x-auto">
                      <table class="min-w-full bg-white">
                        <thead>
                          <tr class="bg-primary-50 text-primary-700">
                            <th class="py-2 px-3 text-left">Tax Level</th>
                            <th class="py-2 px-3 text-left">Example Cantons</th>
                            <th class="py-2 px-3 text-left">Approximate Rate</th>
                          </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                          <tr>
                            <td class="py-2 px-3 font-medium">Low</td>
                            <td class="py-2 px-3">Schwyz, Zug</td>
                            <td class="py-2 px-3">2-4% on CHF 100,000</td>
                          </tr>
                          <tr>
                            <td class="py-2 px-3 font-medium">Medium</td>
                            <td class="py-2 px-3">Zurich, Lucerne</td>
                            <td class="py-2 px-3">6-8% on CHF 100,000</td>
                          </tr>
                          <tr>
                            <td class="py-2 px-3 font-medium">High</td>
                            <td class="py-2 px-3">Geneva, Vaud</td>
                            <td class="py-2 px-3">10-12%+ on CHF 100,000</td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                    <p class="text-xs text-gray-500 mt-2">Note: These figures are approximations and will vary based on your personal situation and commune.</p>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
        
        <div class="bg-primary-50 rounded-lg shadow-md p-8 mt-12 text-center">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Want to Maximize Your Tax Savings?</h3>
          <p class="text-gray-600 mb-8">Our tax experts can analyze your specific situation and help you create a personalized 3a strategy to reduce your tax burden.</p>
          
          <button
            onclick="window.openLifePensionModal()"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-700 hover:to-primary-600 transition-all shadow-md hover:shadow-lg"
          >
            Get Your Free Tax Consultation
          </button>
          <p class="text-sm text-gray-500 mt-4">No obligation, just expert guidance for optimizing your Swiss taxes.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Advanced Strategies Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Advanced 3a Tax Optimization Strategies</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">For those looking to further enhance their tax efficiency, consider these sophisticated approaches.</p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        {advancedStrategies.map((strategy, index) => (
          <div class="mb-8 bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex flex-col md:flex-row md:items-start">
