<Layout
  title="Relocate to Switzerland | Step-by-Step Checklist 2025"
  description="Your essential step-by-step guide on how to relocate to Switzerland. Covers visas, housing, registration, and settling in. Get expert tips from Expat Savvy."
  image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747379038/a-raw-hand-drawn-sketch-in-red-and-black_lma3v2J9SYmPBLbXq8oLzA_t6xsZ3dPQEy7uyWpXwdJlw_d9tuyb.webp"
>
  <!-- Add schema markup using our components -->
  <HowToSchema
    name="How to Relocate to Switzerland: A Step-by-Step Checklist"
    description="A comprehensive guide to planning and executing your move to Switzerland, with specific actions to take before departure and after arrival."
    totalTime="PT90D"
    dateModified="2025-08-13"
    steps={steps}
    tools={tools}
    supply={supplies}
    image="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747379038/a-raw-hand-drawn-sketch-in-red-and-black_lma3v2J9SYmPBLbXq8oLzA_t6xsZ3dPQEy7uyWpXwdJlw_d9tuyb.webp"
  />

  <!-- FAQ Schema Component -->
  <FAQSchema faqs={faqs} />

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1747379038/a-raw-hand-drawn-sketch-in-red-and-black_lma3v2J9SYmPBLbXq8oLzA_t6xsZ3dPQEy7uyWpXwdJlw_d9tuyb.webp"
