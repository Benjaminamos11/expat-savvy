  image="https://res.cloudinary.com/dphbnwjtx/image/upload/f_auto,q_auto/v1748806939/raw-hand-drawn-sketch-in-red-and-black-f_UPX9RLb_S4qMCDTzsZ3Xcg_74cjiVqgTuWD-86heT0HGg_qhyihm.png"
>
  <!-- Hero Section -->
