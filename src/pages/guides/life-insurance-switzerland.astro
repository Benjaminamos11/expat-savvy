      </div>
      
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        {coverageFactors.map(factor => (
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{factor.factor}</h3>
            <div class="space-y-3 text-sm">
              <div>
                <strong>Calculation:</strong> {factor.calculation}
              </div>
              <div class="bg-blue-50 p-3 rounded">
                <strong>Example:</strong> {factor.example}
              </div>
              <div class="text-gray-600">
                <strong>Consider:</strong> {factor.considerations}
              </div>
            </div>
