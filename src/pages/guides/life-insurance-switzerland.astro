  </div>

  <!-- Insurance Types Comparison -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-extrabold text-gray-900 mb-4">Term vs Whole Life Insurance</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">Understanding the fundamental differences helps you choose the right protection strategy.</p>
      </div>
      
      <div class="space-y-6">
        {insuranceComparison.map(insurance => (
          <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-primary-500">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{insurance.type}</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
              <div>
                <h4 class="font-medium text-gray-900 mb-1">Coverage</h4>
