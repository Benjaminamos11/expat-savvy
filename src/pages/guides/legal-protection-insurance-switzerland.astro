    bestFor: "All residents for personal matters"
  },
  {
    type: "Traffic Legal Protection", 
    coverage: "Driving violations, accidents, vehicle disputes, driving license issues",
    cost: "CHF 100-200/year",
    bestFor: "Vehicle owners and frequent drivers"
  },
  {
    type: "Professional Legal Protection",
    coverage: "Employment disputes, workplace conflicts, professional liability issues",
    cost: "CHF 200-400/year", 
    bestFor: "Employees and professionals"
  },
  {
    type: "Property Legal Protection",
    coverage: "Real estate disputes, construction issues, property law matters",
    cost: "CHF 200-500/year",
    bestFor: "Property owners"
  }
];

// Define key benefits
const keyBenefits = [
  {
    benefit: "Legal Consultation",
    description: "24/7 legal advice hotline for immediate guidance",
    coverage: "Up to CHF 500-1,000 per case"
  },
