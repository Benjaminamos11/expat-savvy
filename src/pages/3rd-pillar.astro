    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Key Benefits of the 3rd Pillar</h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Pillar Types -->
  <div id="compare" class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Types of 3rd Pillar</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {pillarTypes.map(type => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{type.name}</h3>
            <p class="text-gray-600 mb-4">{type.description}</p>
            <ul class="space-y-2">
              {type.features.map(feature => (
                <li class="flex items-start text-sm text-gray-500">
