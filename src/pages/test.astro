---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Modal Test Page | Expat Savvy"
  description="Test page for consultation modal"
>
  <div class="container mx-auto max-w-7xl px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">Modal Test Page</h1>
    
    <p class="mb-6">This page tests the consultation modal functionality.</p>
    
    <div class="flex flex-col space-y-4">
      <button 
        id="test-modal-btn"
        class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded inline-block transition-colors duration-200 max-w-xs"
      >
        Open Consultation Modal
      </button>
    </div>
  </div>

  <script>
    // Add event listener to the test button
    document.addEventListener('DOMContentLoaded', function() {
      const testBtn = document.getElementById('test-modal-btn');
      if (testBtn) {
        testBtn.addEventListener('click', function() {
          // @ts-ignore - Window has showConsultationModal from Layout.astro
          window.showConsultationModal();
        });
      }
    });
  </script>
</Layout> 
