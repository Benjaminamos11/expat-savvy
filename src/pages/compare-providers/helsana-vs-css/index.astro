---
import Layout from '../../../layouts/Layout.astro';
import ConsultationModal from '../../../components/ConsultationModal.astro';

const tableData = [
  { feature: 'Basic Insurance Models Offered', helsana: 'Standard, Telmed (Telmed), HMO (BeneFit PLUS), GP (BeneFit PLUS Hausarzt)', css: 'Standard, Telmed, HMO, GP' },
  { feature: 'Typical Basic Premium Range', helsana: 'Moderate to High (varies by canton, age, deductible)', css: 'Moderate to High (varies by canton, age, deductible)' },
  { feature: 'Alternative Medicine (Suppl.)', helsana: 'Completa / Top — good coverage', css: 'Livo line — alternative medicine options' },
  { feature: 'Check-ups & Prevention (Suppl.)', helsana: 'Solid contributions via supplementary', css: 'Emphasis with Livo products' },
  { feature: 'International Private Hospital (Suppl.)', helsana: 'Hospital Global/Extra — comprehensive', css: 'Private/semi-private options' },
  { feature: 'Dental (Suppl.)', helsana: 'Dental / Denta Plus', css: 'Dental options via supplementary' },
  { feature: 'Expat-Friendliness: English Support', helsana: 'Good — English web and service', css: 'Good — English site, broad resources' },
  { feature: 'Digital Services', helsana: 'Helsana+ app, online portal', css: 'myCSS portal, mobile app' },
  { feature: 'Customer Satisfaction (surveys)', helsana: 'Generally good', css: 'Historically strong' }
];

const helsanaPros = [
  'Broad network and comprehensive supplementary options',
  'Strong international hospital coverage products',
  'Good digital tools (Helsana+ app)'
];
const helsanaCons = [
  'Plan structure can feel complex initially',
  'Premiums can be mid-to-high depending on canton/model'
];

const cssPros = [
  'Large Swiss insurer with extensive resources',
  'New Livo supplementary line with modern coverage',
  'Well-rated digital portal (myCSS)'
];
const cssCons = [
  'May not be the cheapest in some regions/models',
  'Multiple products sometimes required to get full set of benefits'
];

const faqs = [
  { q: 'Is Helsana cheaper than CSS?', a: 'It depends on your canton, age, model, and deductible. Always compare for your exact profile.' },
  { q: 'Which has better English support?', a: 'Both offer English resources. Availability can vary by channel; many expats report good experiences with either.' },
  { q: 'Who is better for international hospital coverage?', a: 'Both have strong options; compare policy terms of Helsana Hospital Global/Extra vs CSS private/semi-private solutions for your case.' },
  { q: 'Will I be accepted with pre-existing conditions?', a: 'Basic insurance: yes, guaranteed. Supplementary insurance is underwritten and can have exclusions or loadings.' },
  { q: 'Can Expat Savvy help me choose?', a: 'Yes — we provide objective comparisons tailored to your situation and help with switching and documents.' }
];
---

<Layout
  title="Helsana vs CSS (2025): Which Swiss Insurer Fits You Best?"
  description="Side-by-side Helsana vs CSS: models, premiums, digital tools, expat support, supplementary coverage, and who should choose which — with expert help."
>
  <!-- Schema -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "Helsana vs CSS: Which Is Better in Switzerland (2025)?",
    "description": "Compare Helsana and CSS for Swiss health insurance: basic models, premiums, supplementary options, expat-friendliness, and digital tools.",
    "datePublished": "2025-06-01",
    "dateModified": "2025-06-01",
    "author": {"@type": "Person", "name": "Benjamin Amos Wagner"},
    "publisher": {"@type": "Organization", "name": "Expat Savvy"},
    "mainEntityOfPage": {"@type": "WebPage", "@id": "https://expat-savvy.ch/compare-providers/helsana-vs-css"}
  }
  </script>
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {"@type":"ListItem","position":1,"name":"Home","item":"https://expat-savvy.ch/"},
      {"@type":"ListItem","position":2,"name":"Compare Providers","item":"https://expat-savvy.ch/compare-providers"},
      {"@type":"ListItem","position":3,"name":"Helsana vs CSS","item":"https://expat-savvy.ch/compare-providers/helsana-vs-css"}
    ]
  }
  </script>
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    '@context': 'https://schema.org', '@type': 'FAQPage',
    mainEntity: (faqs || []).map(f => ({ '@type': 'Question', name: f.q, acceptedAnswer: { '@type': 'Answer', text: f.a }}))
  })} />

  <!-- Hero -->
  <div class="relative bg-white">
    <div class="absolute inset-0">
      <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto lg:grid lg:grid-cols-2">
      <!-- Left Side - Main Heading -->
      <div class="px-4 py-16 sm:px-6 sm:py-24 lg:px-8 lg:py-32">
        <div class="max-w-lg mx-auto lg:max-w-none">
          <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">
            Helsana vs CSS:<br>
            <span class="text-primary-600">Which is Best for You?</span>
          </h1>
          <p class="mt-6 text-xl text-gray-500">
            Side-by-side for professionals and English speakers in Switzerland. Compare models, premiums, supplementary coverage, and digital tools.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <button
              onclick="showConsultationModal()"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-300 shadow-lg hover:shadow-xl"
            >
              Get Personalized Advice
              <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
            <a 
              href="/compare-providers"
              class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-300 shadow-lg hover:shadow-xl"
            >
              Back to Comparison Hub
              <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Right Side - Quick Links -->
      <div class="px-4 py-16 sm:px-6 sm:py-24 lg:px-8 lg:py-32 bg-primary-600">
        <div class="max-w-lg mx-auto">
          <h2 class="text-3xl font-extrabold text-white">Quick Navigation</h2>
          <div class="mt-8 space-y-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-primary-600">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-medium text-white">Compare Providers</h3>
                <p class="mt-2 text-base text-primary-100">See our detailed side-by-side feature comparison of Helsana and CSS.</p>
                <a href="#comparison-table" class="inline-flex items-center mt-2 text-white hover:text-primary-200">
                  Jump to comparison table
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </a>
              </div>
            </div>
            
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-primary-600">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-medium text-white">Pros & Cons</h3>
                <p class="mt-2 text-base text-primary-100">View the advantages and disadvantages of each provider at a glance.</p>
                <a href="#pros-cons" class="inline-flex items-center mt-2 text-white hover:text-primary-200">
                  View pros and cons
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </a>
              </div>
            </div>
            
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-primary-600">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-medium text-white">Common Questions</h3>
                <p class="mt-2 text-base text-primary-100">Find answers to frequently asked questions about both insurers.</p>
                <a href="#faqs" class="inline-flex items-center mt-2 text-white hover:text-primary-200">
                  See all FAQs
                  <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Facts + Provider Links -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-6 pb-6">
      <div class="flex justify-end text-xs text-gray-500 mb-2">Last updated: June 1, 2025</div>
      <div class="bg-gray-50 border border-gray-200 rounded-xl p-6 shadow-sm">
        <h2 class="text-xl font-bold text-gray-900 mb-3">Key Facts — Helsana vs CSS (2025)</h2>
        <ul class="grid sm:grid-cols-2 gap-2 text-sm text-gray-700">
          <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Both offer Standard, GP, HMO, and Telmed basic models; premiums vary by canton, age, model, and deductible (franchise)</li>
          <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Basic insurance is guaranteed acceptance; supplementary insurance is medically underwritten</li>
          <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Consider high deductible (CHF 2’500) + GP/HMO/Telmed to lower premiums if you have low expected usage</li>
          <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Switching window: cancel by 30 Nov for 1 Jan; adjust model/deductible by 31 Dec with current insurer</li>
        </ul>
        <div class="mt-4 flex flex-wrap gap-3 text-sm">
          <a href="/healthcare/all-insurances/helsana" class="px-3 py-1 rounded-full bg-white border border-gray-200 text-gray-800 hover:border-primary-400">Helsana profile →</a>
          <a href="/healthcare/all-insurances/css" class="px-3 py-1 rounded-full bg-white border border-gray-200 text-gray-800 hover:border-primary-400">CSS profile →</a>
          <a href="/guides/how-to/choose-health-insurance-deductible" class="px-3 py-1 rounded-full bg-white border border-gray-200 text-gray-800 hover:border-primary-400">Deductible guide →</a>
          <a href="/guides/how-to/change-insurance-models" class="px-3 py-1 rounded-full bg-white border border-gray-200 text-gray-800 hover:border-primary-400">Models explained →</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Comparison Table -->
  <div id="comparison-table" class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-10">At a Glance</h2>
      <div class="overflow-x-auto rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200 bg-white">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">Feature</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-primary-600">Helsana</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600">CSS</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {tableData.map((row, i) => (
              <tr class={i % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                <td class="px-6 py-4 text-sm font-medium text-gray-900">{row.feature}</td>
                <td class="px-6 py-4 text-sm text-gray-700">{row.helsana}</td>
                <td class="px-6 py-4 text-sm text-gray-700">{row.css}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Pros & Cons -->
  <div id="pros-cons" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-10">Pros and Cons</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white rounded-lg shadow border border-gray-200">
          <div class="bg-primary-600 text-white px-6 py-4 rounded-t-lg font-bold text-xl">Helsana</div>
          <div class="p-6">
            <h3 class="font-semibold text-gray-900 mb-2">Pros</h3>
            <ul class="space-y-2">{helsanaPros.map(p => (<li class="text-sm text-gray-700">{p}</li>))}</ul>
            <h3 class="font-semibold text-gray-900 mt-4 mb-2">Cons</h3>
            <ul class="space-y-2">{helsanaCons.map(c => (<li class="text-sm text-gray-700">{c}</li>))}</ul>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow border border-gray-200">
          <div class="bg-red-600 text-white px-6 py-4 rounded-t-lg font-bold text-xl">CSS</div>
          <div class="p-6">
            <h3 class="font-semibold text-gray-900 mb-2">Pros</h3>
            <ul class="space-y-2">{cssPros.map(p => (<li class="text-sm text-gray-700">{p}</li>))}</ul>
            <h3 class="font-semibold text-gray-900 mt-4 mb-2">Cons</h3>
            <ul class="space-y-2">{cssCons.map(c => (<li class="text-sm text-gray-700">{c}</li>))}</ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decision Helper -->
  <div class="bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto bg-gray-50 border border-gray-200 rounded-xl p-6 shadow">
        <h2 class="text-2xl font-bold text-gray-900 mb-3">Who should choose which?</h2>
        <ul class="space-y-2 text-sm text-gray-800">
          <li><strong>Choose Helsana if</strong> you want a broad national network, robust international hospital options, and a mature app experience.</li>
          <li><strong>Choose CSS if</strong> you value a large Swiss insurer with strong digital tools and modern supplementary (Livo) coverage options.</li>
        </ul>
        <div class="mt-4 flex flex-col sm:flex-row gap-3 justify-center sticky bottom-4">
          <a href="/ai-chat/" class="px-6 py-3 rounded-md text-white bg-primary-600 hover:bg-primary-700 shadow">Chat with AI</a>
          <button onclick="showConsultationModal()" class="px-6 py-3 rounded-md text-white bg-red-600 hover:bg-red-700 shadow">Free Consultation</button>
        </div>
      </div>
    </div>
  </div>

  <!-- FAQs -->
  <div id="faqs" class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-gray-900 text-center mb-8">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {faqs.map(f => (
          <div class="bg-white rounded-lg shadow p-5 border border-gray-200">
            <div class="text-base font-semibold text-gray-900">{f.q}</div>
            <div class="text-sm text-gray-700 mt-1">{f.a}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- CTA -->
  <div class="bg-primary-600 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-extrabold text-white">Need help choosing?</h2>
      <p class="text-primary-100 mt-2">Compare tailored quotes and get unbiased guidance.</p>
      <div class="mt-6">
        <button onclick="showConsultationModal()" class="px-6 py-3 rounded-md text-primary-700 bg-white hover:bg-primary-50 shadow">Book Free Consultation</button>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout> 