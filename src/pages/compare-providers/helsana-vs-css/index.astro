const tableData = [
  { feature: 'Basic Insurance Models Offered', helsana: 'Standard, Telmed (Telmed), HMO (BeneFit PLUS), GP (BeneFit PLUS Hausarzt)', css: 'Standard, Telmed, HMO, GP' },
  { feature: 'Typical Basic Premium Range', helsana: 'Moderate to High (varies by canton, age, deductible)', css: 'Moderate to High (varies by canton, age, deductible)' },
  { feature: 'Alternative Medicine (Suppl.)', helsana: 'Completa / Top — good coverage', css: 'Livo line — alternative medicine options' },
  { feature: 'Check-ups & Prevention (Suppl.)', helsana: 'Solid contributions via supplementary', css: 'Emphasis with Livo products' },
  { feature: 'International Private Hospital (Suppl.)', helsana: 'Hospital Global/Extra — comprehensive', css: 'Private/semi-private options' },
  { feature: 'Dental (Suppl.)', helsana: 'Dental / Denta Plus', css: 'Dental options via supplementary' },
  { feature: 'Expat-Friendliness: English Support', helsana: 'Good — English web and service', css: 'Good — English site, broad resources' },
  { feature: 'Digital Services', helsana: 'Helsana+ app, online portal', css: 'myCSS portal, mobile app' },
  { feature: 'Customer Satisfaction (surveys)', helsana: 'Generally good', css: 'Historically strong' }
];

const helsanaPros = [
  'Broad network and comprehensive supplementary options',
  'Strong international hospital coverage products',
  'Good digital tools (Helsana+ app)'
];
const helsanaCons = [
  'Plan structure can feel complex initially',
  'Premiums can be mid-to-high depending on canton/model'
];

const cssPros = [
  'Large Swiss insurer with extensive resources',
  'New Livo supplementary line with modern coverage',
  'Well-rated digital portal (myCSS)'
];
const cssCons = [
  'May not be the cheapest in some regions/models',
  'Multiple products sometimes required to get full set of benefits'
];

const faqs = [
  { q: 'Which is better for expats: Helsana or CSS health insurance?', a: 'Both excel for expats with different strengths. Helsana offers broader provider networks and comprehensive supplementary options. CSS provides flexible Health Account wellness reimbursements and strong digital tools. Both offer good English support and established international coverage. Choose based on supplementary priorities and digital preferences.' },
  { q: 'Is Helsana or CSS cheaper for health insurance in Switzerland?', a: 'Premium differences are minimal between Helsana and CSS, varying by canton, age, model, and deductible. Neither is consistently cheaper. Focus on supplementary benefits, provider networks, and digital platform quality rather than basic premium differences when comparing.' },
  { q: 'Can I switch from CSS to Helsana for 2026?', a: 'Yes, cancel your CSS policy by 30 November 2025 to switch to Helsana from 1 January 2026. Basic insurance switching is guaranteed. Plan supplementary insurance applications early as they require medical underwriting and separate contracts.' },
  { q: 'Which has better customer service: Helsana or CSS?', a: 'Both provide good customer service with English support. Helsana offers comprehensive Helsana+ app and broad service network. CSS provides strong myCSS digital platform and Health Account flexibility. Service quality is generally comparable with different digital strengths.' },
  { q: 'Do Helsana and CSS offer the same health insurance models?', a: 'Yes, both offer Standard, HMO, Family Doctor, and Telmed models for basic insurance. Model availability and premium savings (typically 15-30% for HMO/Telmed) are similar. Choose based on supplementary insurance preferences and provider network priorities.' },
  { q: 'Which is better for international hospital coverage: Helsana or CSS?', a: 'Both offer strong international hospital coverage. Helsana provides Hospital Global/Extra with comprehensive international options. CSS offers private/semi-private hospital coverage with flexible benefit structures. Compare specific policy terms and coverage limits for your international needs.' }
];
