<script>
  // Declare umami global for TypeScript
  declare const umami: any;

  // Function to update local booking count
  function updatePrivateBookingCount() {
    const countElement = document.getElementById("booking-count-private");
    if (countElement) {
      const randomCount = Math.floor(Math.random() * (11 - 3 + 1)) + 3; // Random number between 3-11
      countElement.textContent = `${randomCount} people booked a consultation in the last 24 hours`;
    }
  }

  // Track page view and init counter
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof umami !== "undefined" && (umami as any).track) {
      (umami as any).track("view_private_insurance_vip_lp");
    }

    updatePrivateBookingCount();
    // Update every 5 minutes
    setInterval(updatePrivateBookingCount, 5 * 60 * 1000);
  });
</script>
