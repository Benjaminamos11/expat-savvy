---
import Layout from "../../layouts/Layout.astro";
import FAQ from "../../components/FAQ.astro";
import FAQSchema from "../../components/schema/FAQSchema.astro";
import HowToSchema from "../../components/schema/HowToSchema.astro";
import ArticleSchema from "../../components/schema/ArticleSchema.astro";
import { DesignSystem, cn } from "../../styles/design-system";

const faqs = [
  {
    question: "Is 'private health insurance' separate from basic insurance?",
    answer:
      "No. Private and semi-private are <strong>supplementary hospital plans (VVG/LCA)</strong> that you add on top of your mandatory basic insurance (KVG/LAMal).",
  },
  {
    question: "How much does private hospital insurance cost per month?",
    answer:
      "Indicatively <strong>CHF 400–700+</strong> for private and <strong>CHF 200–400</strong> for semi-private, varying by age, canton, and insurer.",
  },
  {
    question: "Can I get private insurance with pre-existing conditions?",
    answer:
      "It depends on the insurer's medical underwriting. You may face exclusions ('Vorbehalte') or total rejection. We use a strategic demand assessment to find the insurer most likely to accept your specific profile.",
  },
  {
    question: "Do these plans cover hospitals outside Switzerland?",
    answer:
      "Elite plans (like <strong>SWICA Bestmed</strong>) offer unlimited worldwide hospital coverage. We also specialize in bundling IPMI plans (Cigna/Bupa) for global executives.",
  },
];

const howToSteps = [
  {
    name: "Digital Demand Assessment",
    text: "We gather your medical history and preferences to identify the ideal insurance 'bundles'.",
  },
  {
    name: "Strategic Application",
    text: "We apply to the most likely-to-approve insurer first, avoiding the central registry rejection trap.",
  },
  {
    name: "VIP Setup",
    text: "Once accepted, we handle all administrative setup, ensuring you have zero gaps in coverage.",
  },
];

const meta = {
  title: "Private Health Insurance Switzerland | VIP Expat Guide 2026",
  description:
    "Upgrade your Swiss healthcare. Discover the difference between Semi-Private and Fully Private, compare elite plans like SWICA Bestmed, and secure worldwide Chefarzt treatment.",
  canonicalUrl: "https://expat-savvy.ch/private-health-insurance-switzerland/",
  image:
    "https://res.cloudinary.com/dphbnwjtx/image/upload/w_1920,h_1080,q_95,f_webp,c_fill,e_sharpen:100/v1761097677/a-cinematic-photograph-of-two-alpine-flo_NoEv4dgFSguvRbSqj7ocuw_r5qPNoYHR7yi5xMPUhOl7A_pksopn.png",
};
---

<Layout
  title={meta.title}
  description={meta.description}
  canonicalURLProp={meta.canonicalUrl}
>
  <!-- Schema -->
  <ArticleSchema
    type="Article"
    title={meta.title}
    description={meta.description}
    url={meta.canonicalUrl}
    image={meta.image}
    modifiedDate={new Date().toISOString()}
    publishDate={new Date().toISOString()}
    author="Expat Savvy"
    slot="head"
  />

  <FAQSchema faqs={faqs} slot="head" />

  <HowToSchema
    name="How to secure private hospital insurance in Switzerland"
    description="3 steps to get VIP hospital coverage and avoid medical rejection"
    steps={howToSteps}
    slot="head"
  />

  <main class="min-h-screen">
    <!-- ============================================ -->
    <!-- 1. PREMIUM HERO SECTION -->
    <!-- ============================================ -->
    <section
      class="relative h-screen md:min-h-[90vh] flex items-center overflow-hidden"
    >
      <!-- Background Image with Overlay -->
      <div class="absolute inset-0">
        <img
          src={meta.image}
          alt="VIP Private Health Insurance Switzerland"
          class="w-full h-full object-cover object-center"
          width="1920"
          height="1080"
          loading="eager"
        />
        <div
          class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/40"
        >
        </div>
      </div>

      <div class="relative w-full mx-auto px-4 sm:px-6 md:px-8">
        <div class="max-w-4xl mx-auto text-center animate-fade-in">
          <h1
            class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight text-shadow"
          >
            Swiss Private Health Insurance: <span class="text-red-500"
              >The Elite Expat Setup</span
            >
          </h1>
          <p
            class="text-xl md:text-2xl text-white mb-10 leading-relaxed text-shadow max-w-2xl mx-auto"
          >
            Bypass the general ward. Guarantee your access to single rooms,
            Chief Physicians (Chefarzt), and world-class private clinics
            globally.
          </p>
          <div class="flex flex-col items-center gap-6">
            <button
              class="inline-flex items-center px-10 py-5 bg-red-600 hover:bg-red-700 text-white font-bold rounded-2xl shadow-2xl hover:shadow-red-500/20 transition-all duration-300 text-lg group"
              onclick="window.openHealthModal('private')"
            >
              Start VIP Health Assessment
              <svg
                class="ml-2 h-5 w-5 transform group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>

            <!-- Social Proof Badge -->
            <div
              class="inline-flex items-center bg-green-900/30 py-2 px-4 rounded-full backdrop-blur-sm border border-green-500/20 shadow-lg"
            >
              <svg
                class="h-4 w-4 text-green-400 mr-2 animate-pulse"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span
                id="booking-count-private"
                class="text-white text-sm font-medium whitespace-nowrap"
              >
                8 people booked a consultation in the last 24 hours
              </span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 2. THE REALITY CHECK (KVG vs. VVG) -->
    <!-- ============================================ -->
    <section class={cn("bg-white", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-4xl mx-auto">
          <h2
            class={cn(
              DesignSystem.typography.heading.h2.full,
              "mb-8 text-center",
            )}
          >
            Why the Swiss Basic System is Not Enough for Executives
          </h2>
          <div class="prose prose-slate prose-lg max-w-none text-gray-700">
            <p>
              Switzerland is home to arguably the finest healthcare
              infrastructure on the planet. However, for <strong
                >international executives</strong
              >, HNWIs, and families accustomed to private healthcare standard
              in London, New York, or Singapore, the mandatory basic insurance (<strong
                >KVG/LAMal</strong
              >) presents a significant lifestyle compromise.
            </p>
            <p>
              The fundamental reality of KVG is one of total egalitarianism: <strong
                >millionaires and students are placed in the same multi-bed
                hospital rooms</strong
              >. Under basic insurance, you are admitted to the general ward of
              your canton of residence. You have zero control over which
              physician treats you, often leaving your care in the hands of
              junior residents rather than established experts.
            </p>
            <p>
              Furthermore, while the quality of care is high, <strong
                >wait times for elective surgeries</strong
              > in the public sector are non-negligible. For a high-earning professional,
              the opportunity cost of waiting weeks for a procedure—or recovering
              in a noisy, shared room—is unacceptable. <strong
                >Swiss private health insurance (VVG/LCA)</strong
              > is not a luxury; it is a strategic requirement for those who demand
              privacy, the ability to choose the absolute best medical talent, and
              the comfort of a 1-bed private suite.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 3. DECODING THE TIERS: SEMI-PRIVATE VS. FULLY PRIVATE -->
    <!-- ============================================ -->
    <section class={cn("bg-gray-50", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-5xl mx-auto text-center mb-16">
          <h2 class={cn(DesignSystem.typography.heading.h2.full, "mb-4")}>
            Decoding the Tiers of Premium Care
          </h2>
          <p class="text-xl text-gray-600">
            Selecting the right level of supplementary hospital insurance (VVG)
            defines your medical experience in Switzerland.
          </p>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-16"
        >
          <!-- Card 1: Semi-Private -->
          <div
            class="bg-white rounded-3xl p-8 md:p-12 shadow-xl border border-gray-100 hover:shadow-2xl transition-shadow relative overflow-hidden group"
          >
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
              Semi-Private <span
                class="text-gray-400 font-medium block text-lg mt-1"
                >(Halbprivat)</span>
            </h3>
            <ul class="space-y-4 mb-10">
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-red-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-700 text-lg">
                  <strong>2-bed room</strong> (Semi-private comfort)
                </p>
              </li>
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-red-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-700 text-lg">
                  Treatment by <strong>Senior Physician</strong> (Oberarzt)
                </p>
              </li>
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-100 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-red-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-700 text-lg">
                  Access to recognized hospitals across Switzerland
                </p>
              </li>
            </ul>
            <button
              onclick="window.openHealthModal('private')"
              class="w-full py-4 rounded-xl border-2 border-red-200 text-red-600 font-bold hover:bg-red-50 transition-colors"
              >Compare Semi-Private Rates</button
            >
          </div>

          <!-- Card 2: Fully Private -->
          <div
            class="bg-gray-900 rounded-3xl p-8 md:p-12 shadow-2xl border border-gray-800 relative overflow-hidden group"
          >
            <div
              class="inline-block px-3 py-1 bg-red-600 text-white text-xs font-bold rounded-full mb-6 tracking-widest uppercase"
            >
              Elite Choice
            </div>
            <h3 class="text-2xl md:text-3xl font-bold text-white mb-6">
              Fully Private <span
                class="text-gray-400 font-medium block text-lg mt-1"
                >(Privat)</span>
            </h3>
            <ul class="space-y-4 mb-10">
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-600 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-300 text-lg">
                  <strong>1-bed single room</strong> (Absolute privacy)
                </p>
              </li>
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-600 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-300 text-lg">
                  Guaranteed <strong>Chefarztbehandlung</strong> (Chief Physician)
                </p>
              </li>
              <li class="flex items-start gap-4">
                <div
                  class="mt-1 w-6 h-6 rounded-full bg-red-600 flex items-center justify-center flex-shrink-0"
                >
                  <svg
                    class="w-4 h-4 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    ><path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="3"
                      d="M5 13l4 4L19 7"></path></svg
                  >
                </div>
                <p class="text-gray-300 text-lg">
                  Access to elite <strong>Hirslanden Clinics</strong>
                </p>
              </li>
            </ul>
            <button
              onclick="window.openHealthModal('private')"
              class="w-full py-4 rounded-xl bg-red-600 text-white font-bold hover:bg-red-700 transition-colors shadow-xl"
              >Get VIP Quote</button
            >
          </div>
        </div>

        <div class="max-w-4xl mx-auto prose prose-slate prose-lg text-gray-700">
          <p>
            When you select <strong>Fully Private (Privat)</strong> insurance, you
            are securing more than just a room. You are ensuring <strong
              >Chefarztbehandlung</strong
            >—treatment by the Chief Physician or even a world-renowned
            Professor. This is critical for complex surgeries or specialized
            oncology where medical talent is the variable that determines your
            outcome.
          </p>
          <p>
            Furthermore, Fully Private insurance grants you access to exclusive
            clinic networks such as the <strong
              >Hirslanden Private Hospital Group</strong
            > and the <strong>Swiss Medical Network</strong>. These facilities
            operate with a concierge mindset, offering 5-star VIP catering,
            absolute discretion, and a level of personalized care that public
            general wards simply cannot match.
          </p>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 4. ELITE PRODUCT SPOTLIGHT: SWICA BESTMED -->
    <!-- ============================================ -->
    <section class={cn("bg-white", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-4xl mx-auto">
          <h2 class={cn(DesignSystem.typography.heading.h2.full, "mb-8")}>
            Not All Private Policies Are Equal: The SWICA Bestmed Advantage
          </h2>
          <div class="prose prose-slate prose-lg max-w-none text-gray-700">
            <p>
              A common misconception among expats is that all "Private" hospital
              insurance provides Global coverage. In reality, many domestic
              Swiss policies strictly cap their private coverage within Swiss
              borders. For the international executive who travels frequently
              for business or leisure, this creates a dangerous insurance gap.
            </p>
            <p>
              This is why we frequently spotlight <strong>SWICA Bestmed</strong> as
              the benchmark for premium Swiss healthcare. SWICA Bestmed is widely
              regarded as one of the ultimate private insurance products because it
              offers <strong
                >unlimited, worldwide private hospital coverage</strong
              >. Whether you require surgery in Switzerland, Germany, or even
              the United States, SWICA Bestmed ensures you have the freedom to
              choose your specialists globally.
            </p>
            <p>
              Beyond hospital stays, SWICA Bestmed provides substantial
              contributions to <strong>alternative medicine</strong>, high-end <strong
                >wellness</strong
              >, and proactive <strong>executive health check-ups</strong>. For
              those who move frequently between Switzerland and other global
              hubs, we also broker international IPMI plans through our <strong
                >Cigna and Bupa</strong
              > partnerships, ensuring your coverage is as mobile as you are.
            </p>
          </div>

          <div
            class="mt-12 bg-gray-50 rounded-3xl p-8 border border-gray-100 flex flex-col md:flex-row items-center gap-8 shadow-sm"
          >
            <div class="flex-1">
              <h3 class="text-xl font-bold text-gray-900 mb-2">
                Is SWICA Bestmed right for you?
              </h3>
              <p class="text-gray-600">
                Our independent brokers can compare Bestmed against Sanitas,
                Helsana, and CSS to see which fits your profile.
              </p>
            </div>
            <button
              onclick="window.openHealthModal('private')"
              class="whitespace-nowrap px-8 py-4 bg-gray-900 text-white font-bold rounded-xl hover:bg-gray-800 transition-all"
              >Request Comparison</button
            >
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 5. THE "REDDIT REALITY CHECK": EXPAT TRAPS -->
    <!-- ============================================ -->
    <section class={cn("bg-gray-50", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-4xl mx-auto">
          <h2
            class={cn(
              DesignSystem.typography.heading.h2.full,
              "mb-12 text-center",
            )}
          >
            4 Hidden Traps in Swiss Private Health Insurance
          </h2>

          <div class="grid gap-8">
            <div
              class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
            >
              <h3
                class="text-xl font-bold text-red-600 mb-4 flex items-center gap-3"
              >
                <span
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-red-50 text-red-600 text-sm"
                  >1</span
                >
                The "Pre-Existing Blacklist" Trap
              </h3>
              <p class="text-gray-700 leading-relaxed">
                Applying directly to a Swiss insurer for supplementary insurance
                (VVG) is a high-risk move. If you have any medical history—even
                minor issues—and the insurer rejects you, your rejection is
                often entered into a <strong>central registry</strong> (Zentrale Informationsstelle).
                This makes it significantly harder to get accepted by <em
                  >any</em
                > other insurer. Our <strong>Digital Demand Assessment</strong> acts
                as a firewall, allowing us to strategically place your application
                where it is most likely to be approved without triggering a red flag.
              </p>
            </div>

            <div
              class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
            >
              <h3
                class="text-xl font-bold text-red-600 mb-4 flex items-center gap-3"
              >
                <span
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-red-50 text-red-600 text-sm"
                  >2</span
                >
                The Maternity Waiting Period
              </h3>
              <p class="text-gray-700 leading-relaxed">
                If you are planning a family, timing is everything.
                Supplementary maternity coverage or private hospital birth
                options usually come with a <strong
                  >waiting period of 12 to 24 months</strong
                >. You cannot wait until you are pregnant to upgrade your
                insurance. To secure a private room for birth and a Chief
                Physician for delivery, you must have the policy in place well
                in advance.
              </p>
            </div>

            <div
              class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
            >
              <h3
                class="text-xl font-bold text-red-600 mb-4 flex items-center gap-3"
              >
                <span
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-red-50 text-red-600 text-sm"
                  >3</span
                >
                The Age Premium Spike
              </h3>
              <p class="text-gray-700 leading-relaxed">
                Premiums for private insurance are calculated based on <strong
                  >age bands</strong
                >. As you enter a new decade (e.g., turning 30, 40, or 50), your
                premiums can spike significantly. We help executives structure
                their policies with "level-premium" options or long-term
                strategies that prevent these sudden financial shocks later in
                life.
              </p>
            </div>

            <div
              class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
            >
              <h3
                class="text-xl font-bold text-red-600 mb-4 flex items-center gap-3"
              >
                <span
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-red-50 text-red-600 text-sm"
                  >4</span
                >
                The Dental Misconception
              </h3>
              <p class="text-gray-700 leading-relaxed">
                Many high-earners assume that "Fully Private" coverage includes
                dental. This is almost never the case in Switzerland. <strong
                  >Dental insurance is a separate module</strong
                > and requires its own underwriting. If you want comprehensive protection
                that includes high-end dental treatments, it must be bundled intentionally
                during your initial setup.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 6. EXECUTIVE WELLNESS & PREVENTATIVE CARE -->
    <!-- ============================================ -->
    <section class={cn("bg-white", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-4xl mx-auto">
          <h2 class={cn(DesignSystem.typography.heading.h2.full, "mb-8")}>
            Beyond the Hospital: Executive Check-Ups & Wellness
          </h2>
          <div class="prose prose-slate prose-lg max-w-none text-gray-700">
            <p>
              A premium VVG policy is not merely a safety net for illness; it is
              a tool for <strong>proactive health optimization</strong>.
              High-tier supplementary plans fund extensive <strong
                >executive health check-ups</strong
              >—comprehensive screenings that go far beyond standard blood work
              to include stress tests, advanced imaging, and nutritional
              analysis.
            </p>
            <p>
              Furthermore, the most elite Swiss plans contribute significantly
              to your lifestyle. Many premium products offer <strong
                >contributions of up to CHF 1,300 per year</strong
              > towards gym memberships, fitness trackers, and wellness retreats.
              They also provide prioritized access to <strong
                >mental health support</strong
              > and alternative therapies, acknowledging that performance for an executive
              is tied to holistic well-being.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================ -->
    <!-- 7. THE EXPAT-SAVVY CONCIERGE METHOD -->
    <!-- ============================================ -->
    <section class={cn("bg-gray-50", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
        <div class="max-w-4xl mx-auto">
          <div
            class="bg-white rounded-3xl p-8 md:p-12 shadow-2xl border-t-8 border-red-600"
          >
            <div class="flex flex-col md:flex-row gap-12 items-center">
              <div class="flex-shrink-0">
                <img
                  src="https://res.cloudinary.com/dphbnwjtx/image/upload/w_250,h_250,q_95,f_webp,c_fill,g_face,e_sharpen:100/v1757251477/Generated_Image_September_07_2025_-_9_20PM_uuse1r.webp"
                  alt="Robert Kolar - Health Expert"
                  class="w-40 h-40 rounded-3xl object-cover shadow-2xl"
                />
              </div>
              <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6">
                  Why High-Earners Trust Expat-Savvy
                </h2>
                <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                  Under the leadership of Senior Broker <strong
                    >Robert Kolar</strong
                  >, we provide a fiduciary approach to Swiss healthcare. We
                  don't just "sell insurance"; we perform a <strong
                    >Digital Demand Assessment (Bedarfsanalyse)</strong
                  > to map your medical history against the risk-appetite of every
                  major Swiss carrier.
                </p>
                <p class="text-lg text-gray-700 mb-10 leading-relaxed">
                  We do the heavy lifting—negotiating health questionnaires and
                  securing your VIP status—so you can focus on your career and
                  family.
                </p>
                <button
                  onclick="window.openHealthModal('private')"
                  class="bg-red-600 text-white px-10 py-5 rounded-2xl font-black text-xl hover:bg-red-700 transition-all shadow-xl shadow-red-500/20"
                >
                  Schedule Your Executive Health Consultation
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class={cn("bg-white", DesignSystem.spacing.section.padding)}>
      <div class={DesignSystem.spacing.container.default}>
