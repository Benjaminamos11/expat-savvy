---
import Layout from '../layouts/Layout.astro';
import ConsultationModal from '../components/ConsultationModal.astro';

const stats = [
  { number: "1000+", label: "Happy Clients" },
  { number: "100%", label: "English Support" },
  { number: "Independent", label: "Insurance Broker" },
  { number: "11+", label: "Years Experience" }
];

const teamMembers = [
  {
    name: "Robert Kolar",
    role: "Insurance Advisor & Customer Experience",
    description: "With extensive experience in Swiss insurance and a background in teaching, Robert specializes in making complex insurance topics understandable for expats. His expertise in customer service ensures every client receives personalized, clear guidance.",
    expertise: ["Swiss Health Insurance", "Pension Planning", "Expat Insurance Needs"],
    image: "https://cdn.prod.website-files.com/63e36fdb5030a728d3e0c59d/6758848048b5cdaf6ebe884f_WhatsApp%20Image%202024-12-11%20at%2001.55.01.jpeg",
    linkedin: "https://www.linkedin.com/in/robert-kolar-9bb889152/"
  },
  {
    name: "Benjamin Wagner",
    role: "Platform Development & Innovation Lead",
    description: "With over two decades of experience in Swiss insurance and expat services, Benjamin combines technical expertise with deep industry knowledge to create innovative digital solutions that simplify insurance decisions.",
    expertise: ["Digital Innovation", "Insurance Technology", "Process Optimization"],
    image: "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740112521/profilebild2_tar0si.jpg",
    linkedin: "https://www.linkedin.com/in/benjamin-amos-wagner-5a7888a5/"
  }
];

const values = [
  {
    title: "Expertise & Experience",
    description: "Our team combines deep knowledge of Swiss insurance with years of experience serving expats. We understand both the technical aspects of insurance and the unique challenges faced by international residents.",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Independence & Transparency",
    description: "As an independent broker, we're not tied to any insurance company. This allows us to provide unbiased advice and find the best solutions for our clients, always with full transparency about costs and benefits.",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
    </svg>`
  },
  {
    title: "Client-Centric Approach",
    description: "Every client's situation is unique. We take the time to understand your specific needs and circumstances to provide personalized recommendations that truly work for you.",
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  }
];

const testimonials = [
  {
    text: "Moving to Switzerland was overwhelming, but Expat Savvy made insurance so simple. They saved me over 2000 CHF annually!",
    author: "Sarah T.",
    role: "Software Engineer from UK"
  },
  {
    text: "Their holistic approach helped me understand exactly what coverage I needed. Best decision I made after moving to Zürich.",
    author: "Marco R.",
    role: "Finance Professional from Italy"
  },
  {
    text: "As a family of four, we needed comprehensive coverage. They found us the perfect balance of protection and cost.",
    author: "Jennifer C.",
    role: "Research Scientist from Singapore"
  }
];

const premiumPartners = [
  {
    name: "Prime Relocation",
    logo: "https://cdn.prod.website-files.com/6718b88a9ad8ce0f3ec5e7a6/672df357ed71370900ec04cb_output-onlinepngtools-p-800.png",
    url: "https://www.primerelocation.ch",
    description: "Expert relocation services for expats moving to Switzerland"
  }
];
---

<Layout
  title="About Expat Savvy | Your Swiss Insurance Guide Since 2017"
  description="Learn about Expat Savvy's mission to help expats navigate Swiss insurance. Discover how we've been simplifying insurance decisions for international residents since 2017."
>
  <!-- Schema.org markup -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Expat Savvy",
      "description": "Expert insurance guidance for expats in Switzerland",
      "url": "https://expat-savvy.ch",
      "logo": "https://res.cloudinary.com/dphbnwjtx/image/upload/v1740080077/logoexpatsavvy_sykutm.svg",
      "foundingDate": "2017",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Talacker 41",
        "addressLocality": "Zürich",
        "postalCode": "8001",
        "addressCountry": "CH"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+41791552570",
        "contactType": "customer service",
        "availableLanguage": ["English", "German", "French"]
      },
      "sameAs": [
        "https://www.linkedin.com/company/expat-savvy"
      ],
      "employee": [
        {
          "@type": "Person",
          "name": "Robert Kolar",
          "jobTitle": "Insurance Advisor & Customer Experience",
          "sameAs": "https://www.linkedin.com/in/robert-kolar-9bb889152/"
        },
        {
          "@type": "Person",
          "name": "Benjamin Wagner",
          "jobTitle": "Platform Development & Innovation Lead",
          "sameAs": "https://www.linkedin.com/in/benjamin-amos-wagner-5a7888a5/"
        }
      ]
    }
  </script>

  <!-- Hero Section -->
  <div class="relative bg-white overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1736285944/joshua-earle--87JyMb9ZfU-unsplash_4_rkfzpq.webp"
        alt="Swiss mountains"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/40"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6">
          <span class="block">Your Trusted Insurance Partner</span>
          <span class="block mt-2">in <span class="text-primary-500">Switzerland</span></span>
        </h1>
        <p class="mt-6 max-w-lg mx-auto text-xl text-gray-300">
          Since 2017, we've been helping expats navigate the Swiss insurance landscape with confidence.
        </p>
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <div class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {stats.map(stat => (
          <div class="flex flex-col items-center">
            <span class="text-3xl md:text-4xl font-bold text-primary-600">{stat.number}</span>
            <span class="mt-2 text-gray-600">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Our Story Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">Our Story</h2>
        <p class="mt-4 text-lg text-gray-500">
          Founded in 2017, Expat Savvy was born from a simple observation: expats in Switzerland needed clear, trustworthy guidance when it came to insurance. We've since grown to become a leading voice in Swiss insurance consulting, helping over 1,000 clients make confident insurance decisions.
        </p>
      </div>
    </div>
  </div>

  <!-- Our Values -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Our Values</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {values.map(value => (
          <div class="bg-white rounded-lg shadow-lg p-8 transform transition-transform hover:scale-105">
            <div class="text-primary-600 mb-4">
              <Fragment set:html={value.icon} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">{value.title}</h3>
            <p class="text-gray-600">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Team Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Meet Our Team</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {teamMembers.map(member => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-8">
              <div class="flex items-center mb-6">
                <img 
                  src={member.image} 
                  alt={member.name} 
                  class="h-24 w-24 rounded-full object-cover"
                  width="96"
                  height="96"
                />
                <div class="ml-6">
                  <h3 class="text-2xl font-bold text-gray-900">{member.name}</h3>
                  <p class="text-primary-600">{member.role}</p>
                </div>
              </div>
              <p class="text-gray-600 mb-6">{member.description}</p>
              <div class="space-y-4">
                <h4 class="font-semibold text-gray-900">Areas of Expertise:</h4>
                <ul class="space-y-2">
                  {member.expertise.map(item => (
                    <li class="flex items-center text-gray-600">
                      <svg class="h-5 w-5 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
              <div class="mt-6">
                <a 
                  href={member.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-primary-600 hover:text-primary-700"
                >
                  <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                  Connect on LinkedIn
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Premium Partners Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">Premium Partners</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {premiumPartners.map(partner => (
          <a 
            href={partner.url}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-800 rounded-xl shadow-lg p-8 flex flex-col items-center justify-center transform transition-transform hover:scale-105"
          >
            <img 
              src={partner.logo} 
              alt={partner.name}
              class="h-16 object-contain mb-4"
            />
            <p class="text-gray-300 text-center text-sm">{partner.description}</p>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Testimonials -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-center text-gray-900 mb-12">What Our Clients Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white rounded-lg shadow-lg p-8 relative">
            <div class="absolute -top-4 -right-4 bg-primary-500 text-white p-3 rounded-full shadow-lg">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9.983 3v7.391c0 5.704-3.731 9.57-8.983 10.609l-.995-2.151c2.432-.917 3.995-3.638 3.995-5.849h-4v-10h9.983zm14.017 0v7.391c0 5.704-3.748 9.571-9 10.609l-.996-2.151c2.433-.917 3.996-3.638 3.996-5.849h-3.983v-10h9.983z"/>
              </svg>
            </div>
            <p class="text-gray-600 mb-6">{testimonial.text}</p>
            <div class="flex items-center">
              <div>
                <div class="font-semibold text-gray-900">{testimonial.author}</div>
                <div class="text-sm text-gray-500">{testimonial.role}</div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Contact Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Get in Touch</h2>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Office Locations -->
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Our Offices</h3>
                <div class="space-y-4">
                  <div>
                    <h4 class="font-medium text-gray-900">Zürich</h4>
                    <p class="text-gray-600">Talacker 41, 8001 Zürich</p>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900">Zug</h4>
                    <p class="text-gray-600">Industriestrasse 47, 6300 Zug</p>
                  </div>
                </div>
              </div>

              <!-- Contact Methods -->
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Us</h3>
                <div class="space-y-4">
                  <a 
                    href="tel:+41791552570" 
                    class="flex items-center text-gray-600 hover:text-primary-600"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    +41 79 155 25 70
                  </a>
                  <a 
                    href="mailto:hello@expat-savvy.ch" 
                    class="flex items-center text-gray-600 hover:text-primary-600"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    hello@expat-savvy.ch
                  </a>
                </div>
              </div>
            </div>

            <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
              <button
                onclick="showConsultationModal()"
                class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors"
              >
                Schedule Free Consultation
                <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </button>
              
              <a
                href="https://wa.me/41791552570"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-[#25D366] text-base font-medium rounded-md text-[#25D366] bg-white hover:bg-[#25D366] hover:text-white transition-colors"
              >
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                Chat on WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>