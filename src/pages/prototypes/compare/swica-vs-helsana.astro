---
import Layout from '../../../layouts/Layout.astro';
import { DesignSystem, cn } from '../../../styles/design-system';

export const prerender = true;

const meta = {
  title: "Swica vs Helsana — Which Is Better for Expats in Switzerland?",
  description: "Independent comparison of Swica and Helsana based on verified data and real benefits. We help you find the best coverage for your budget and lifestyle with a free expert consultation.",
  canonicalUrl: "https://expat-savvy.ch/prototypes/compare/swica-vs-helsana/"
};

const faqs = [
  {
    question: "Can I switch between Swica and Helsana?",
    answer: "Yes, you can switch basic insurance annually by 30 November. Supplementary insurance requires a health questionnaire and acceptance. We help you navigate the process strategically to maximize approval chances."
  },
  {
    question: "Does Swica really reimburse CHF 1,300 for gyms?",
    answer: "Yes, with Swica's Completa Forte or Optima supplementary plans, you can receive up to CHF 1,300 per year for fitness memberships, yoga, swimming, and wellness activities. We help you claim these benefits fully."
  },
  {
    question: "Which one is better for families?",
    answer: "Helsana offers strong family coverage and the Helsana+ app rewards healthy habits. Swica uses entry-age pricing for supplementary plans, which can be better long-term. The best choice depends on your canton, ages, and coverage goals — we analyze this for you."
  },
  {
    question: "What if I have pre-existing conditions?",
    answer: "Basic insurance must accept everyone regardless of health. For supplementary insurance, both Swica and Helsana conduct health checks. We help structure applications strategically and leverage group discounts to improve acceptance odds."
  },
  {
    question: "When is the deadline to switch insurers?",
    answer: "For basic insurance, you must submit cancellation by 30 November to switch for the following year. Supplementary insurance deadlines vary. We manage all deadlines and paperwork for you in English."
  },
  {
    question: "Are there group discounts for expats?",
    answer: "Yes! As FINMA-certified brokers, we have access to group discount rates for both Swica and Helsana supplementary plans (typically 10-15% savings). We verify your eligibility during consultation."
  }
];
---

<Layout
  title={meta.title}
  description={meta.description}
  canonicalURLProp={meta.canonicalUrl}
>
  <!-- ============================================ -->
  <!-- 1. HERO SECTION -->
  <!-- ============================================ -->
  <section class="relative min-h-[50vh] md:min-h-[90vh] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <img
        src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1746960418/a-photograph-depicts-a-pair-of-youthful-_quYJOYFeRPqWWfrG0MYelw_ndQb4IxjRbGazkFfjfLXNA_qk6hxm.jpg"
        alt="Swica vs Helsana comparison for expats in Switzerland"
        class="w-full h-full object-cover object-center"
        width="1920"
        height="1080"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/40"></div>
    </div>

    <!-- Mobile layout (centered) -->
    <div class="relative w-full mx-auto px-4 sm:px-6 md:hidden -mt-16">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl font-extrabold text-white mb-3 animate-fade-in text-shadow">
          <span class="block">Swica vs Helsana</span>
          <span class="block mt-1">— Which Is Better for <em>You</em>?</span>
        </h1>
        <p class="mt-3 text-base sm:text-lg text-white animate-slide-up text-shadow">
          Independent comparison of two top Swiss health insurers — based on verified data, not marketing.
        </p>
        <div class="mt-6 flex flex-col items-center gap-3 animate-slide-up">
          <button
            class="inline-flex items-center px-6 md:px-8 py-3 md:py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300"
            onclick="window.openHealthModal('swica-vs-helsana')"
            aria-label="Get free independent comparison"
          >
            Get My Free Independent Comparison
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </button>
          <p class="text-white text-sm mt-2">
            ✓ FINMA certified • ✓ English support • ✓ Independent • ✓ 100% free
          </p>
        </div>
      </div>
    </div>
    
    <!-- Desktop layout (left aligned) -->
    <div class="relative w-full mx-auto hidden md:block">
      <div class="grid grid-cols-12 gap-4">
        <div class="col-span-6 col-start-2 flex items-center justify-center">
          <div class="text-left max-w-xl">
            <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-6 animate-fade-in text-shadow">
              <span class="block">Swica vs Helsana</span>
              <span class="block mt-2">— Which Is Better for <em>You</em>?</span>
            </h1>
