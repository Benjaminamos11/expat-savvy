---
import Layout from '../../layouts/Layout.astro';
import ConsultationModal from '../../components/ConsultationModal.astro';

const features = [
  {
    title: "Basic Insurance",
    description: "Multiple models including standard, family doctor, and telemedicine options",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Supplementary Insurance",
    description: "Comprehensive additional coverage including hospital, dental, and alternative medicine",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`
  },
  {
    title: "Digital Services",
    description: "Modern online platform for policy management and claims submission",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "COMPLEMENTA EXTRA",
    description: "Extended basic coverage for comprehensive protection",
    benefits: [
      "Enhanced outpatient coverage",
      "Additional treatments",
      "Preventive care",
      "Emergency transport"
    ]
  },
  {
    name: "NATURA & MEDNA",
    description: "Alternative medicine coverage",
    benefits: [
      "Natural therapies",
      "Homeopathy",
      "Acupuncture",
      "Herbal medicine"
    ]
  },
  {
    name: "MONDIA & MONDIA PLUS",
    description: "Travel insurance coverage",
    benefits: [
      "Worldwide coverage",
      "Emergency assistance",
      "Medical evacuation",
      "24/7 support"
    ]
  },
  {
    name: "DENTA PLUS",
    description: "Comprehensive dental coverage",
    benefits: [
      "Regular check-ups",
      "Dental treatments",
      "Orthodontics",
      "Preventive care"
    ]
  }
];

const faqs = [
  {
    question: "What makes Assura different from other Swiss insurers?",
    answer: "Assura stands out for offering some of the most competitive premiums in Switzerland. They achieve this through efficient operations and alternative insurance models. They also have a strong presence in French-speaking Switzerland and offer comprehensive digital services."
  },
  {
    question: "How do I get a quote from Assura?",
    answer: "You can get a quote from Assura through their online calculator, by scheduling a free consultation with our experts, or contacting Assura directly. We recommend comparing multiple offers to find the best coverage for your needs."
  },
  {
    question: "What supplementary insurance options does Assura offer?",
    answer: "Assura offers several supplementary insurance options including COMPLEMENTA EXTRA for extended basic coverage, NATURA for alternative medicine, MONDIA for travel insurance, and DENTA PLUS for dental care. Each plan can be customized to your specific needs."
  },
  {
    question: "Does Assura offer English-speaking customer service?",
    answer: "Yes, Assura provides multilingual customer service, including English support, through their customer service centers and digital platforms. This makes them a popular choice among expats in Switzerland."
  },
  {
    question: "How can I submit claims to Assura?",
    answer: "Assura offers multiple ways to submit claims: through their mobile app, online portal, or by mail. The digital options allow for quick submission by simply photographing your medical bills and uploading them directly."
  }
];
---

<Layout
  title="Assura Health Insurance | Expat Savvy"
  description="Learn about Assura's health insurance offerings in Switzerland. Compare plans, understand coverage options, and get a personalized quote."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <img src="https://res.cloudinary.com/dphbnwjtx/image/upload/v1740406940/assura-logo-png_seeklogo-462524_zlvevx.png" alt="Assura Logo" class="h-24 mx-auto mb-8" />
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Assura Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Based in Pully near Lausanne, Assura serves over 1.1 million policy holders with comprehensive health insurance solutions.
        </p>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Supplementary Insurance Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto">
        <dl class="space-y-8">
          {faqs.map(faq => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <dt class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</dt>
              <dd class="text-gray-600">{faq.answer}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Assura</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">Assura</p>
          <p class="text-lg text-gray-600">Postfach 533</p>
          <p class="text-lg text-gray-600">1009 Pully</p>
        </address>
      </div>
    </div>
  </div>

  <ConsultationModal />
</Layout>