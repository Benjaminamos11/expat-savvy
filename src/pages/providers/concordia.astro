---
import Layout from '../../layouts/Layout.astro';

const features = [
  {
    title: "Basic Insurance Models",
    description: "Multiple models including traditional, myDoc Family Doctor, and HMO options with savings up to 21%",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`
  },
  {
    title: "Supplementary Insurance",
    description: "Comprehensive additional coverage including DIVERSA, NATURA, and Dental Care Insurance",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
    </svg>`
  },
  {
    title: "Additional Services",
    description: "Holiday and travel insurance, daily allowance insurance, and various life insurance options",
    icon: `<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
    </svg>`
  }
];

const supplementaryPlans = [
  {
    name: "DIVERSA",
    description: "Perfect for families with attractive premiums for children",
    benefits: [
      "Inpatient and outpatient treatments abroad",
      "Search and rescue operations",
      "Glasses and contacts coverage",
      "Non-prescription medicines",
      "Dental corrections"
    ]
  },
  {
    name: "NATURA",
    description: "Alternative medicine and preventative health coverage",
    benefits: [
      "130 alternative medicine methods",
      "Preventative health care",
      "Health promotion activities",
      "Holistic approach to wellness"
    ]
  },
  {
    name: "Dental Care Insurance",
    description: "Comprehensive dental coverage options",
    benefits: [
      "Up to 75% coverage",
      "Regular check-ups",
      "Dental treatments",
      "Orthodontics coverage"
    ]
  },
  {
    name: "Additional Coverage",
    description: "Extra protection options",
    benefits: [
      "Accident insurance",
      "Holiday and travel insurance",
      "Daily allowance insurance",
      "Life insurance options"
    ]
  }
];
---

<Layout
  title="CONCORDIA Health Insurance | Expat Savvy"
  description="Learn about CONCORDIA's health insurance offerings in Switzerland. Compare plans, understand coverage options, and get a personalized quote."
>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <img src="/images/providers/concordia.svg" alt="CONCORDIA Logo" class="h-16 mx-auto mb-8" />
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">CONCORDIA Health Insurance</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          A Lucerne-based health and accident insurance provider with a history dating back to 1914, serving over 632,000 policyholders with comprehensive insurance solutions.
        </p>
      </div>
    </div>
  </div>

  <!-- Features Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {features.map(feature => (
          <div class="bg-white rounded-lg shadow-md p-6 transform transition-transform hover:scale-105">
            <div class="text-primary-500 mb-4">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Supplementary Plans Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">CONCORDIA Supplementary Insurance</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supplementaryPlans.map(plan => (
          <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200 hover:border-primary-500 transition-colors">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">{plan.name}</h3>
            <p class="text-gray-600 mb-4">{plan.description}</p>
            <ul class="space-y-2">
              {plan.benefits.map(benefit => (
                <li class="flex items-center text-sm text-gray-500">
                  <svg class="h-4 w-4 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Content Section -->
  <div class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="prose prose-lg">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">About CONCORDIA</h2>
          <p>
            CONCORDIA is a Lucerne based health and accident insurance provider with a history dating back to 1914. It has roughly 632,000 policy holders in their basic compulsory insurance model. 2018 revenues from premiums amounted to 2.8 billion Swiss francs.
          </p>
          
          <h3 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Basic Insurance Models</h3>
          <ul class="space-y-3">
            <li>Traditional model with free choice of doctor</li>
            <li>myDoc Family Doctor model - save up to 13% on premiums</li>
            <li>HMO health insurance - save up to 21% on premiums</li>
          </ul>

          <h3 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Additional Coverage Options</h3>
          <p>
            The additional coverage options at Concordia are perfectly tuned to complement the basic insurance model. Depending on your individual needs as an expat, it might make sense to enhance your insurance protection with supplementary insurance plans like DIVERSA, NATURA, or Dental Care Insurance.
          </p>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-lg p-8 shadow-md">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Get Your Rate</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
              <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            </div>
            <div>
              <label for="surname" class="block text-sm font-medium text-gray-700">Surname</label>
              <input type="text" id="surname" name="surname" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
              <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
              <input type="tel" id="phone" name="phone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            </div>
            <button type="submit" class="w-full bg-accent-500 text-white px-4 py-2 rounded-md hover:bg-accent-600 transition-colors">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact CONCORDIA</h2>
        <address class="not-italic">
          <p class="text-lg text-gray-600">CONCORDIA Schweizerische Kranken- und Unfallversicherung</p>
          <p class="text-lg text-gray-600">Bundesplatz 15</p>
          <p class="text-lg text-gray-600">6002 Luzern</p>
        </address>
      </div>
    </div>
  </div>
</Layout>