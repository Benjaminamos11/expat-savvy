---
import Layout from "../../layouts/Layout.astro";
import RedSectionHeader from "../../components/common/RedSectionHeader.astro";

const metadata = {
    title: "Hans Steiner - Senior Consultant | Swiss Pension Expert for Expatriates",
    description:
        "Meet Hans Steiner, Senior Consultant at expat-savvy.ch with 20+ years of experience in Swiss pension planning. Certified financial planner specializing in helping expatriates optimize their 1st, 2nd, and 3rd pillar strategies.",
    canonical: "https://expat-savvy.ch/about/hans-steiner/",
};

const jsonLd = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Hans Steiner",
    jobTitle: "Senior Consultant",
    description:
        "Senior Consultant at expat-savvy.ch specializing in Swiss pension planning for expatriates",
    image: "https://expat-savvy.ch/images/hans-steiner.png",
    email: "hsteiner@vaudoise.ch",
    telephone: "044 365 31 01",
    url: "https://expat-savvy.ch/about/hans-steiner/",
    affiliation: [
        {
            "@type": "Organization",
            name: "expat-savvy.ch",
            url: "https://expat-savvy.ch",
        },
        {
            "@type": "Organization",
            name: "Vaudoise Versicherungen",
            url: "https://www.vaudoise.ch",
        },
    ],
    jobLocation: [
        {
            "@type": "Place",
            name: "Horgen, Switzerland",
        },
        {
            "@type": "Place",
            name: "Remote",
        },
    ],
    knowsAbout: [
        "Swiss pension planning",
        "3rd pillar optimization",
        "Tax optimization",
        "Life insurance",
        "Expat financial planning",
        "Mortgage planning",
        "Retirement planning",
        "Vorsorge (Pension Planning )",
    ],
    credentials: [
        {
            "@type": "EducationalOccupationalCredential",
            name: "Eidgenössischer Fachausweis Finanzplaner",
            credentialCategory: "Professional Certification",
            issuedBy: {
                "@type": "Organization",
                name: "Swiss Financial Planners Association (IAF)",
            },
        },
        {
            "@type": "EducationalOccupationalCredential",
            name: "FINMA Registration",
            credentialCategory: "Regulatory Certification",
            issuedBy: {
                "@type": "Organization",
                name: "Swiss Financial Market Supervisory Authority (FINMA)",
            },
        },
    ],
    sameAs: ["https://linkedin.com/in/hans-steiner"],
    worksFor: {
        "@type": "Organization",
        name: "expat-savvy.ch",
        url: "https://expat-savvy.ch",
    },
    yearsOfExperience: 20,
};
---

<Layout {...metadata}>
    <script
        type="application/ld+json"
        slot="head"
        set:html={JSON.stringify(jsonLd)}
    />

    <!-- COMPONENT 1: HERO SECTION -->
    <div class="relative bg-white pt-32 pb-24 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col lg:flex-row gap-16 items-center">
                <!-- Left Column: Image -->
                <div class="w-full lg:w-5/12 relative">
                    <div
                        class="relative rounded-[40px] overflow-hidden shadow-2xl bg-gray-100 aspect-[5/6] max-w-[500px] mx-auto"
                    >
                        <img
                            src="/images/hans-steiner.png"
                            alt="Hans Steiner, Senior Consultant at expat-savvy.ch"
                            class="w-full h-full object-cover object-center"
                        />
                        <!-- Overlay gradient for text readability if needed, though clean is better -->
                    </div>
                    <!-- Decorative Element behind -->
                    <div
                        class="absolute -z-10 top-10 -left-10 w-full h-full bg-gray-50 rounded-[40px] border border-gray-100/50"
                    >
                    </div>
                </div>

                <!-- Right Column: Hero Text -->
                <div class="w-full lg:w-7/12 space-y-8">
                    <div>
                        <span
                            class="inline-block py-1 px-3 rounded-full bg-red-50 text-[#C41E3A] text-xs font-bold tracking-widest uppercase mb-4 border border-red-100"
                        >
                            Senior Consultant at expat-savvy.ch
                        </span>
                        <h1
                            class="text-4xl md:text-5xl lg:text-6xl font-bold text-[#1a1a2e] tracking-tight leading-tight mb-2"
                        >
                            Hans Steiner
                        </h1>
                        <p class="text-xl md:text-2xl text-gray-500 font-light">
                            Senior Consultant | 20+ Years of Swiss Pension
                            Expertise
                        </p>
                    </div>

                    <div class="prose prose-lg text-gray-600 leading-relaxed">
                        <p>
                            Hans Steiner is a Senior Consultant at <strong
                                >expat-savvy.ch</strong
                            >, bringing over 20 years of professional experience
                            in Swiss pension planning and financial advisory.
                            With a <strong
                                >Swiss Federal Diploma in Financial Planning</strong
                            > (Eidgenössischer Fachausweis Finanzplaner) and a proven
                            track record managing complex pension strategies for expatriates,
                            Hans has become a trusted advisor for thousands of expats
                            navigating Swiss financial planning.
                        </p>
                        <p>
                            Currently serving as Agency Manager at <strong
                                >Vaudoise Versicherungen</strong
                            >—one of Switzerland's leading insurance
                            companies—Hans combines deep technical expertise
                            with practical, real-world experience. His mission
                            is to demystify Swiss pension law and empower
                            expatriates to make confident, informed financial
                            decisions that protect their families and optimize
                            their retirement.
                        </p>
                    </div>

                    <div class="flex flex-wrap gap-4 pt-4">
                        <button
                            onclick="window.openContextualModal()"
                            class="bg-[#C41E3A] hover:bg-[#a51930] text-white font-bold py-4 px-8 rounded-full text-lg shadow-lg transition transform hover:-translate-y-1 flex items-center gap-2"
                        >
                            <span>Schedule Consultation</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M5 12h14M12 5l7 7-7 7"></path></svg
                            >
                        </button>
                        <a
                            href="#credentials"
                            class="bg-gray-100 hover:bg-gray-200 text-[#1a1a2e] font-semibold py-4 px-8 rounded-full text-lg transition duration-200"
