---
import Layout from '../layouts/Layout.astro';
import ChatClient from '../components/ChatClient.tsx';
---

<Layout
  title="AI Insurance Assistant | Expat Savvy"
  description="Get instant help with Swiss insurance questions from our AI assistant. Independent FINMA-certified experts — 24/7 support for expats."
>
  <!-- Hero Section -->
  <div class="bg-gradient-to-br from-gray-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
          <span class="block">Your 24/7</span>
          <span class="block bg-gradient-to-r from-red-600 to-red-700 bg-clip-text text-transparent">Swiss Insurance Assistant</span>
        </h1>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600">
          Get instant premium calculations, compare providers, and receive expert guidance from our AI-powered assistant.
        </p>
      </div>
    </div>
  </div>

  <!-- Chat Interface -->
  <div class="bg-gradient-to-br from-gray-50 to-white py-8">
    <ChatClient client:load />
  </div>

  <!-- Features Section -->
  <div class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6 rounded-xl bg-gradient-to-br from-red-50 to-white shadow-lg border border-red-100">
          <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-xl text-white">💰</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Live Premium Calculator</h3>
          <p class="text-gray-600">Get instant, accurate health insurance premium quotes from all Swiss insurers using live API data.</p>
        </div>

        <div class="text-center p-6 rounded-xl bg-gradient-to-br from-red-50 to-white shadow-lg border border-red-100">
          <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-xl text-white">📊</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Smart Comparisons</h3>
          <p class="text-gray-600">Compare coverage options, benefits, and costs across all major Swiss insurance providers.</p>
        </div>

        <div class="text-center p-6 rounded-xl bg-gradient-to-br from-red-50 to-white shadow-lg border border-red-100">
          <div class="w-12 h-12 bg-gradient-to-br from-red-600 to-red-700 rounded-xl flex items-center justify-center mx-auto mb-4">
            <span class="text-xl text-white">🤝</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Expert Connection</h3>
          <p class="text-gray-600">Connect directly with our insurance advisors for personalized guidance and consultation booking.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-gradient-to-r from-red-600 to-red-700 py-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-white mb-4">
        Need Personal Guidance?
      </h2>
      <p class="text-xl text-red-100 mb-8">
        While our AI assistant handles most questions instantly, sometimes you need a human touch. Book a free consultation with our insurance experts.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://cal.com/robertkolar/expat-savvy"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-white text-red-700 font-semibold rounded-xl hover:bg-gray-100 transition-colors duration-200 shadow-lg"
        >
          📅 Book Free Consultation
        </a>
        <a
          href="https://wa.me/41791552570"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-red-800 text-white font-semibold rounded-xl hover:bg-red-900 transition-colors duration-200 shadow-lg"
        >
          💬 WhatsApp Chat
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Ensure the chat component renders properly */
  .astro-island {
    display: contents;
  }
</style>